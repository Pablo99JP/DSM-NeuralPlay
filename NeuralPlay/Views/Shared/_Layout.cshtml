<!DOCTYPE html>
<html lang="es">
@using System.Linq
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth
@inject ApplicationCore.Domain.CEN.NotificacionCEN NotificacionCEN

<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeuralPlay.styles.css" asp-append-version="true" />
    <style>
        /* Variables CSS globales */
        :root {
            --np-red: #e50a46;
            --np-transp: #21020a7a;
            --np-grey: #454545;
            --np-dark-grey: #242424;
        }

        /* Fuentes globales */
        @@font-face {
            font-family: 'Neue';
            src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: 'Lexend';
            src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        /* Reset global */
        html, body {
            max-width: 100%;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        body {
            background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
            background-size: cover;
            color: white;
        }

        /* Contenedor principal - fondo fijo */
        .main-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
            background-size: cover;
            z-index: 1;
        }

        /* Contenedor de contenido entre sidebars */
        .content-container {
            position: absolute;
            left: 11%;
            top: 0;
            width: 82%;
            min-height: 100vh;
            z-index: 2;
            padding: 60px 40px 60px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Tablet (581px - 1024px): SidebarLeft horizontal arriba, SidebarRight lateral */
        @@media (min-width: 581px) and (max-width: 1024px) {
            .content-container {
                left: 0 !important;
                width: 94% !important;
                padding-top: 100px !important;
                padding-left: 0 !important;
                padding-right: 20px !important;
                margin-left: 0 !important;
            }

            footer {
                margin-left: 0 !important;
                margin-right: 7vw !important;
            }

            footer .container {
                margin-left: 0 !important;
                max-width: 100% !important;
                padding-left: 20px !important;
                padding-right: 20px !important;
            }

            .container {
                max-width: 100% !important;
                margin-left: 0 !important;
                margin-right: auto !important;
            }
        }

        /* Mobile (≤580px): Solo SidebarDown abajo */
        @@media (max-width: 580px) {
            .content-container {
                left: 0 !important;
                width: 100% !important;
                padding: 20px 16px 60px 16px !important;
                margin-left: 0 !important;
            }

            .container {
                margin-left: 0 !important;
                margin-right: 0 !important;
                padding-left: 16px !important;
                padding-right: 16px !important;
                max-width: 100% !important;
            }
        }

        /* Header de página */
        .page-header {
            margin-bottom: 40px;
            width: 100%;
            max-width: 1000px;
        }

        .page-title {
            font-family: 'Neue', sans-serif;
            font-size: 7rem;
            color: white;
            text-transform: uppercase;
            text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
            margin: 0;
            letter-spacing: 3px;
            line-height: 1;
        }

        .page-subtitle {
            font-family: 'Lexend', sans-serif;
            color: #d7d7d7;
            margin: 6px 0 0 0;
            font-size: 1rem;
        }

        /* Form card común */
        .form-card {
            background: rgba(36, 36, 36, 0.95);
            border-radius: 10px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            max-width: 1000px;
            width: 100%;
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-label {
            font-family: 'Neue', sans-serif;
            font-size: 1.5rem;
            color: var(--np-red);
            margin-bottom: 10px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-input,
        .form-select {
            font-family: 'Lexend', sans-serif;
            font-size: 1.2rem;
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #555;
            border-radius: 6px;
            background: #2a2a2a;
            color: white;
            transition: border-color 0.3s;
        }

        .form-input:focus,
        .form-select:focus {
            outline: none;
            border-color: var(--np-red);
        }

        textarea.form-input {
            resize: vertical;
            min-height: 120px;
        }

        .actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
        }

        .btn-submit {
            background: var(--np-red);
            color: white;
            border: 2px solid var(--np-red);
            padding: 14px 32px;
            font-size: 1.2rem;
            .form-group {
                margin-bottom: 26px;
            }
            .btn-submit {
                font-family: 'Lexend', sans-serif;
                font-size: 1.25rem;
                padding: 14px 34px;
                background: var(--np-red);
                color: white;
                border: 2px solid var(--np-red);
                border-radius: 25px;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            .btn-submit:hover {
                background: transparent;
                color: var(--np-red);
                transform: scale(1.03);
            }
            .btn-cancel {
                font-family: 'Lexend', sans-serif;
                font-size: 1.25rem;
                padding: 14px 34px;
                background: transparent;
                color: white;
                border: 2px solid white;
                border-radius: 25px;
                cursor: pointer;
                transition: all 0.3s ease;
                text-decoration: none;
                display: inline-block;
            }
            .btn-cancel:hover {
                background: white;
                color: var(--np-dark-grey);
            }
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(229, 10, 70, 0.1);
            border-radius: 8px;
            border-left: 4px solid var(--np-red);
        }

        .btn-cancel {
            background: transparent;
            color: white;
            border: 2px solid white;
            padding: 14px 32px;
            font-size: 1.2rem;
            font-family: 'Neue', sans-serif;
            text-transform: uppercase;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
            letter-spacing: 1px;
        }

        .btn-cancel:hover {
            background: white;
            color: var(--np-dark-grey);
        }

        /* Mobile adjustments: proportional scaling only for mobile devices (≤580px) */
        @@media (max-width: 580px) {
            body {
                font-size: 10px;
            }

            h1 { font-size: 3rem !important; }
            h2 { font-size: 1.5rem; }
            h3 { font-size: 1.3rem; }
            h4, h5, h6 { font-size: 1.1rem; }

            p, label, span { font-size: 0.95rem; }

            button, .btn {
                padding: 8px 16px;
                font-size: 0.95rem;
            }

            input, textarea, select {
                font-size: 0.95rem;
                padding: 8px 12px;
            }

            .container, .container-fluid {
                margin-left: 0 !important;
                margin-right: 0 !important;
                padding: 0 16px;
            }

            header {
                margin-left: 0;
                margin-right: 0;
            }

            footer {
                margin-left: 0 !important;
                margin-right: 0 !important;
                margin-bottom: 11vh !important;
                font-size: 0.85rem;
            }

            footer .container {
                margin-left: 0 !important;
                margin-right: 0 !important;
                padding-left: 16px !important;
                padding-right: 16px !important;
            }

            table { font-size: 0.9rem; }
            .table td, .table th { padding: 0.6rem; }

            .card { margin-bottom: 12px; }
            .card-body { padding: 12px; }

            .mb-3, .mb-4, .mb-5 { margin-bottom: 12px !important; }
            .mt-3, .mt-4, .mt-5 { margin-top: 12px !important; }
            .p-3, .p-4, .p-5 { padding: 12px !important; }

            .gap-2, .gap-3, .gap-4 { gap: 8px !important; }
        }
        .container{
            margin-left: 13vw;
            margin-right: 7vw;
        }
    </style>
</head>
<body>
    <div class="container" style="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-left: 13vw; margin-right: 7vw;">
        <div class="container" style="max-width: 100%; padding: 0 20px;">
            &copy; 2025 - NeuralPlay - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
