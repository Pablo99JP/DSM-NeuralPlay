<!DOCTYPE html>
<html lang="en">
@using System.Linq
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth
@inject ApplicationCore.Domain.CEN.NotificacionCEN NotificacionCEN

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NeuralPlay.styles.css" asp-append-version="true" />
    <style>
        /* Variables CSS globales */
        :root {
            --np-red: #e50a46;
            --np-transp: #21020a7a;
            --np-grey: #454545;
            --np-dark-grey: #242424;
        }

        /* Fuentes globales */
        @@font-face {
            font-family: 'Neue';
            src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: 'Lexend';
            src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        /* Reset global */
        html, body {
            max-width: 100%;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        body {
            background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
            background-size: cover;
            color: white;
        }

        /* Contenedor principal - fondo fijo */
        .main-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
            background-size: cover;
            z-index: 1;
        }

        /* Contenedor de contenido entre sidebars */
        .content-container {
            position: absolute;
            left: 11%;
            top: 0;
            width: 83%;
            min-height: 100vh;
            z-index: 2;
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header de página */
        .page-header {
            margin-bottom: 40px;
            width: 100%;
            max-width: 1000px;
        }

        .page-title {
            font-family: 'Neue', sans-serif;
            font-size: 7rem;
            color: white;
            text-transform: uppercase;
            text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
            margin: 0;
            letter-spacing: 3px;
            line-height: 1;
        }

        .page-subtitle {
            font-family: 'Lexend', sans-serif;
            color: #d7d7d7;
            margin: 6px 0 0 0;
            font-size: 1rem;
        }

        /* Form card común */
        .form-card {
            background: rgba(36, 36, 36, 0.95);
            border-radius: 10px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            max-width: 1000px;
            width: 100%;
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-label {
            font-family: 'Neue', sans-serif;
            font-size: 1.5rem;
            color: var(--np-red);
            margin-bottom: 10px;
            display: block;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-input,
        .form-select {
            font-family: 'Lexend', sans-serif;
            font-size: 1.2rem;
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #555;
            border-radius: 6px;
            background: #2a2a2a;
            color: white;
            transition: border-color 0.3s;
        }

        .form-input:focus,
        .form-select:focus {
            outline: none;
            border-color: var(--np-red);
        }

        textarea.form-input {
            resize: vertical;
            min-height: 120px;
        }

        .actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
        }

        .btn-submit {
            background: var(--np-red);
            color: white;
            border: 2px solid var(--np-red);
            padding: 14px 32px;
            font-size: 1.2rem;
            .form-group {
                margin-bottom: 26px;
            }
            .btn-submit {
                font-family: 'Lexend', sans-serif;
                font-size: 1.25rem;
                padding: 14px 34px;
                background: var(--np-red);
                color: white;
                border: 2px solid var(--np-red);
                border-radius: 25px;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            .btn-submit:hover {
                background: transparent;
                color: var(--np-red);
                transform: scale(1.03);
            }
            .btn-cancel {
                font-family: 'Lexend', sans-serif;
                font-size: 1.25rem;
                padding: 14px 34px;
                background: transparent;
                color: white;
                border: 2px solid white;
                border-radius: 25px;
                cursor: pointer;
                transition: all 0.3s ease;
                text-decoration: none;
                display: inline-block;
            }
            .btn-cancel:hover {
                background: white;
                color: var(--np-dark-grey);
            }
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(229, 10, 70, 0.1);
            border-radius: 8px;
            border-left: 4px solid var(--np-red);
        }

        .btn-cancel {
            background: transparent;
            color: white;
            border: 2px solid white;
            padding: 14px 32px;
            font-size: 1.2rem;
            font-family: 'Neue', sans-serif;
            text-transform: uppercase;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
            letter-spacing: 1px;
        }

        .btn-cancel:hover {
            background: white;
            color: var(--np-dark-grey);
        }

        /* Global tablet/mobile adjustments: proportional scaling for smaller devices only */
        @@media (max-width: 768px) {
            body {
                font-size: 14px;
            }

            .content-container {
                left: 0;
                width: 100%;
                padding: 110px 24px 40px;
            }

            .form-card { padding: 28px; }

            h1 { font-size: 1.8rem; }
            h2 { font-size: 1.5rem; }
            h3 { font-size: 1.3rem; }
            h4, h5, h6 { font-size: 1.1rem; }

            p, label, span { font-size: 0.95rem; }

            button, .btn {
                padding: 8px 16px;
                font-size: 0.95rem;
            }

            input, textarea, select {
                font-size: 0.95rem;
                padding: 8px 12px;
            }

            .container, .container-fluid {
                margin-left: 0;
                margin-right: 0;
                padding: 0 16px;
            }

            header {
                margin-left: 0;
                margin-right: 0;
            }

            footer {
                margin-left: 0;
                margin-right: 0;
                font-size: 0.85rem;
            }

            table { font-size: 0.9rem; }
            .table td, .table th { padding: 0.6rem; }

            .card { margin-bottom: 12px; }
            .card-body { padding: 12px; }

            .mb-3, .mb-4, .mb-5 { margin-bottom: 12px !important; }
            .mt-3, .mt-4, .mt-5 { margin-top: 12px !important; }
            .p-3, .p-4, .p-5 { padding: 12px !important; }

            .gap-2, .gap-3, .gap-4 { gap: 8px !important; }
        }
        @@media (max-width: 580px) {
            body {
                font-size: 10px;
            }

            h1 { font-size: 3rem !important; }
            h2 { font-size: 1.5rem; }
            h3 { font-size: 1.3rem; }
            h4, h5, h6 { font-size: 1.1rem; }

            p, label, span { font-size: 0.95rem; }

            button, .btn {
                padding: 8px 16px;
                font-size: 0.95rem;
            }

            input, textarea, select {
                font-size: 0.95rem;
                padding: 8px 12px;
            }

            .container, .container-fluid {
                margin-left: 0 !important;
                margin-right: 0 !important;
                padding: 0 16px;
            }

            header {
                margin-left: 0;
                margin-right: 0;
            }

            footer {
                margin-left: 0;
                margin-right: 0;
                font-size: 0.85rem;
            }

            table { font-size: 0.9rem; }
            .table td, .table th { padding: 0.6rem; }

            .card { margin-bottom: 12px; }
            .card-body { padding: 12px; }

            .mb-3, .mb-4, .mb-5 { margin-bottom: 12px !important; }
            .mt-3, .mt-4, .mt-5 { margin-top: 12px !important; }
            .p-3, .p-4, .p-5 { padding: 12px !important; }

            .gap-2, .gap-3, .gap-4 { gap: 8px !important; }
        }
        .container{
            margin-left: 13vw;
            margin-right: 7vw;
            padding-top: @(ViewBag.OcultarNavbar == true ? "0" : "100px");
        }
    </style>
</head>
<body>
    @if (ViewBag.OcultarNavbar == null || ViewBag.OcultarNavbar == false)
    {
        <header style="margin-left: 13vw; margin-right: 7vw; position: fixed; top: 0; left: 0; right: 0; z-index: 1000; background-color: white;">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NeuralPlay</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Torneo" asp-action="Index">Torneos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Comunidad" asp-action="Index">Comunidades</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Equipo" asp-action="Index">Equipos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Perfiles" asp-action="Index">Usuarios</a>
                            </li>
                            @if (UsuarioAuth?.GetUsuarioActual() != null && UsuarioAuth.GetUsuarioActual().Perfil != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Perfiles" asp-action="Details" asp-route-id="@UsuarioAuth.GetUsuarioActual().Perfil.IdPerfil">Perfil</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Publicacion" asp-action="Index">Publicaciones</a>
                            </li>
                            @if (UsuarioAuth?.GetUsuarioActual() != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Invitacion" asp-action="Index">Invitaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="SolicitudIngreso" asp-action="Index">Solicitudes</a>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav">
                            @if (UsuarioAuth?.GetUsuarioActual() != null)
                            {
                                var current = UsuarioAuth.GetUsuarioActual();
                                var unread = 0;
                                try
                                {
                                    unread = NotificacionCEN.ReadAll_Notificacion().Count(n => n != null && n.Destinatario != null && n.Destinatario.IdUsuario == current!.IdUsuario && !n.Leida);
                                }
                                catch { unread = 0; }

                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Notificacion" asp-action="Index" title="Notificaciones">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16" aria-hidden="true">
                                            <path d="M8 16a2 2 0 0 0 1.985-1.75H6.015A2 2 0 0 0 8 16z"/>
                                            <path d="M8 1a4 4 0 0 0-4 4v2.086c0 .39-.168.765-.45 1.03L2 10v1h12v-1l-.55-1.884A1.986 1.986 0 0 1 13 7.086V5a4 4 0 0 0-4-4z"/>
                                        </svg>
                                        @if (unread > 0)
                                        {
                                            <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">@unread</span>
                                        }
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <form method="post" asp-controller="Usuario" asp-action="Logout" class="d-inline">
                                        <button type="submit" class="btn btn-link nav-link">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuario" asp-action="Login">Login</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container" style="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-left: 13vw; margin-right: 7vw;">
        <div class="container">
            &copy; 2025 - NeuralPlay - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
