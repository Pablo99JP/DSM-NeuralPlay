@model NeuralPlay.Models.SolicitudIngresoViewModel

@using ApplicationCore.Domain.Enums

@{
    ViewData["Title"] = "Crear Solicitud de ingreso";
}

<h1>Crear Solicitud de ingreso</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoInvitacion>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="ComunidadId"></label>
        <input asp-for="ComunidadId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EquipoId"></label>
        <input asp-for="EquipoId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar solicitud</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
