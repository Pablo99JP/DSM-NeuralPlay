@model NeuralPlay.Models.ComentarioViewModel

@{
 ViewData["Title"] = "Eliminar Comentario";
}

<h1>Eliminar Comentario</h1>

<div class="alert alert-warning">¿Seguro que deseas eliminar este comentario?</div>

<dl class="row">
 <dt class="col-sm-2">Autor</dt>
 <dd class="col-sm-10">@Model.autorNick</dd>
 <dt class="col-sm-2">Contenido</dt>
 <dd class="col-sm-10">@Model.contenido</dd>
 <dt class="col-sm-2">Fecha</dt>
 <dd class="col-sm-10">@Model.fechaCreacion</dd>
</dl>

<form asp-action="Delete" method="post">
 @Html.AntiForgeryToken()
 <input type="hidden" asp-for="idComentario" />
 <input type="hidden" asp-for="publicacionId" />
 <div class="d-flex gap-2">
 <button type="submit" class="btn btn-danger">Eliminar</button>
 <a asp-controller="Publicacion" asp-action="Details" asp-route-id="@Model.publicacionId" class="btn btn-secondary">Cancelar</a>
 </div>
</form>
