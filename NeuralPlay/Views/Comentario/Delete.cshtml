@model NeuralPlay.Models.ComentarioViewModel

@{
 ViewData["Title"] = "Eliminar Comentario";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<style>
/* Reset para etiquetas semánticas */
figure, hgroup, footer, hr, fieldset, time {
    margin: 0;
    padding: 0;
}

fieldset {
    border: none;
    min-width: 0;
}

hr {
    border: none;
}
</style>

<header>
    <h1>Eliminar Comentario</h1>
</header>

<aside class="alert alert-warning">�Seguro que deseas eliminar este comentario?</aside>

<article>
    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.autorNick</dd>
        <dt class="col-sm-2">Contenido</dt>
        <dd class="col-sm-10">@Model.contenido</dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.fechaCreacion</dd>
    </dl>
</article>

<section>
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="idComentario" />
        <input type="hidden" asp-for="publicacionId" />
        <nav class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Publicacion" asp-action="Details" asp-route-id="@Model.publicacionId" class="btn btn-secondary">Cancelar</a>
        </nav>
    </form>
</section>
