@model IEnumerable<NeuralPlay.Models.ComentarioViewModel>

@{
    ViewData["Title"] = "Comentarios";
}

<h1>Comentarios</h1>

<table class="table">
    <thead>
        <tr>
            <th>Contenido</th>
            <th>Fecha creaci√≥n</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Contenido</td>
            <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
