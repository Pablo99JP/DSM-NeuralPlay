@model NeuralPlay.Models.ComentarioViewModel

@{
 ViewData["Title"] = "Detalle Comentario";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<style>
/* Reset para etiquetas semánticas */
figure, hgroup, footer, hr, fieldset, time {
    margin: 0;
    padding: 0;
}

fieldset {
    border: none;
    min-width: 0;
}

hr {
    border: none;
}
</style>

<article>
    <header>
        <h1>Detalle Comentario</h1>
    </header>

    <dl class="row">
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.autorNick</dd>
        <dt class="col-sm-2">Contenido</dt>
        <dd class="col-sm-10">@Model.contenido</dd>
        <dt class="col-sm-2">Fecha creaci�n</dt>
        <dd class="col-sm-10">@Model.fechaCreacion</dd>
        <dt class="col-sm-2">Fecha edici�n</dt>
        <dd class="col-sm-10">@(Model.fechaEdicion == DateTime.MinValue ? "-" : Model.fechaEdicion.ToString())</dd>
    </dl>

    <nav class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.idComentario" class="btn btn-primary">Editar</a>
        <a asp-action="Delete" asp-route-id="@Model.idComentario" class="btn btn-danger">Eliminar</a>
        <a asp-controller="Publicacion" asp-action="Details" asp-route-id="@Model.publicacionId" class="btn btn-secondary">Volver</a>
    </nav>
</article>
