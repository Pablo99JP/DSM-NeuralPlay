@model NeuralPlay.Models.ComentarioViewModel

@{
 ViewData["Title"] = "Editar Comentario";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<style>
/* Reset para etiquetas sem√°nticas */
figure, hgroup, footer, hr, fieldset, time {
    margin: 0;
    padding: 0;
}

fieldset {
    border: none;
    min-width: 0;
}

hr {
    border: none;
}
</style>

<header>
    <h1>Editar Comentario</h1>
</header>

<section>
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="idComentario" />
        <input type="hidden" asp-for="publicacionId" />

        <fieldset class="form-group mb-3">
            <label asp-for="contenido" class="form-label"></label>
            <textarea asp-for="contenido" class="form-control" rows="4"></textarea>
            <span asp-validation-for="contenido" class="text-danger"></span>
        </fieldset>

        <nav class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Publicacion" asp-action="Details" asp-route-id="@Model.publicacionId" class="btn btn-secondary">Cancelar</a>
        </nav>
    </form>
</section>

@section Scripts {
 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
