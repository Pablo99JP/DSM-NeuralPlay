@model NeuralPlay.Models.JuegoViewModel

@{
    ViewData["Title"] = "Eliminar Juego";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que quieres eliminar este juego?</h3>
<div>
    <h4>Juego</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdJuego)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdJuego)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreJuego)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreJuego)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.IdJuego">
        <input type="hidden" asp-for="IdJuego" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>