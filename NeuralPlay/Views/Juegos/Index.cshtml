@model IEnumerable<NeuralPlay.Models.JuegoViewModel>

@{
    ViewData["Title"] = "Lista de Juegos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdJuego)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreJuego)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdJuego)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreJuego)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdJuego" class="btn btn-sm btn-outline-secondary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdJuego" class="btn btn-sm btn-outline-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdJuego" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>