@model NeuralPlay.Models.JuegoViewModel

@{
    ViewData["Title"] = "Detalles del Juego";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<style>
    .game-details-container {
        margin-left: 6vw;
        margin-right: 11vw;
        padding: 20px;
    }

    .game-details-container h1 {
        font-size: 3.5rem;
        margin-bottom: 10px;
    }

    .game-details-container .text-muted {
        font-size: 1.3rem;
        margin-bottom: 30px;
    }

    .form-actions {
        justify-content: flex-start;
        margin-left: 0;
    }

    .btn-submit.disabled {
        opacity: 0.6;
        cursor: default;
        pointer-events: none;
    }

    .btn-submit, .btn-cancel {
        text-decoration: none;
    }
</style>

<div class="game-details-container">
    <h1>@Model.NombreJuego</h1>
    <p class="text-muted">@Model.Genero</p>

    <div class="form-actions">
        <a href="#" class="btn-cancel" id="btn-volver">Volver a Explorar</a>
        @if (ViewBag.UsuarioLoggeado == true && ViewBag.TieneJuego == true)
        {
            <span class="btn-submit disabled">✓ Te gusta este juego</span>
        }
        else if (ViewBag.UsuarioLoggeado == true)
        {
            <a href="@Url.Action("AnadirJuego", "Perfiles", new { idPerfil = ViewBag.IdPerfil, idJuego = Model.IdJuego })" class="btn-submit">Añadir Juego a Perfil</a>
        }
        else
        {
            <a href="@Url.Action("Login", "Account")" class="btn-submit">Inicia sesión para añadir</a>
        }
    </div>
</div>

<script>
    // Redirigir a la página de explorar con la pestaña de juegos activa
    document.getElementById('btn-volver').addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '/?tab=juegos';
    });
</script>