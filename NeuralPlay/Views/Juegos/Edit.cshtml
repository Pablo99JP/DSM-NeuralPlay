@model NeuralPlay.Models.JuegoViewModel

@{
    ViewData["Title"] = "Editar Juego";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<main>
    <header>
        <h1>@ViewData["Title"]</h1>
        <h2>Juego</h2>
        <hr />
    </header>

    <section class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdJuego" />
                <div class="form-group mb-3">
                    <label asp-for="NombreJuego" class="control-label"></label>
                    <input asp-for="NombreJuego" class="form-control" />
                    <span asp-validation-for="NombreJuego" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Genero" class="control-label"></label>
                    <select asp-for="Genero" class="form-control" asp-items="Html.GetEnumSelectList<ApplicationCore.Domain.Enums.GeneroJuego>()"></select>
                    <span asp-validation-for="Genero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}