@model NeuralPlay.Models.ChatEquipoViewModel

@{
    ViewData["Title"] = "Chat del Equipo";
}

<style>
    .chat-container {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 20px;
        max-width: 800px;
        margin: auto;
        background-color: #f9f9f9;
    }
    .chat-message {
        border-bottom: 1px solid #eee;
        padding: 10px 0;
    }
    .chat-message:last-child {
        border-bottom: none;
    }
    .message-author {
        font-weight: bold;
        color: #0056b3;
    }
    .message-date {
        font-size: 0.8em;
        color: #888;
        margin-left: 10px;
    }
    .message-content {
        margin-top: 5px;
    }
</style>

<h1>Chat del equipo: @Model.NombreEquipo</h1>
<hr />

<div class="chat-container">
    @if (Model.Mensajes != null && Model.Mensajes.Any())
    {
        @foreach (var mensaje in Model.Mensajes)
        {
            <div class="chat-message">
                <div>
                    <span class="message-author">@mensaje.NickAutor</span>
                    <span class="message-date">@mensaje.FechaEnvio.ToString("g")</span>
                </div>
                <p class="message-content">@mensaje.Contenido</p>
            </div>
        }
    }
    else
    {
        <p>Aún no hay mensajes en este chat. ¡Sé el primero en escribir!</p>
    }
</div>

<div class="mt-3">
    <a asp-controller="Equipos" asp-action="Index" class="btn btn-secondary">Volver a Equipos</a>
</div>