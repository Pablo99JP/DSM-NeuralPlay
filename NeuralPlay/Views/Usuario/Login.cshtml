@model NeuralPlay.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Sin layout para diseño de pantalla completa
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* === COLORES DEFINIDOS === */
        :root {
            --np-red: #e50a46;
            --np-grey: #454545;
            --np-dark-grey: #242424;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden; /* Evita scroll horizontal */
        }

        .login-wrapper {
            min-height: 100vh;
            display: flex;
            flex-wrap: wrap;
        }

        /* === LADO IZQUIERDO (3/4) === */
        .left-panel {
            background: url('/Recursos/WALLPAPER.png') no-repeat center center;
            background-size: cover;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center; /* Centrado vertical */
            align-items: center;     /* Centrado horizontal */
            padding: 2rem;
        }

        /* Capa opcional para mejorar contraste si el wallpaper es muy claro/oscuro
           Quítalo si quieres ver la imagen pura */
        .left-panel::before {
            content: "";
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(255, 255, 255, 0.1); /* Sutil tinte */
            z-index: 1;
        }

        .left-content {
            position: relative;
            z-index: 2;
            text-align: center;
            max-width: 800px;
        }

        .brand-logo {
            max-width: 400px; /* Ajusta según el tamaño real de tu imagen */
            width: 100%;
            height: auto;
            margin-bottom: 20px;
            /* Filtro de sombra suave para que destaque sobre el wallpaper */
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }

        .welcome-text {
            color: black; /* Texto negro solicitado */
            font-size: 1.5rem;
            font-weight: 600;
            background-color: rgba(255, 255, 255, 0.6); /* Fondo blanco semitransparente para legibilidad */
            padding: 15px;
            border-radius: 10px;
            display: inline-block;
        }

        /* === LADO DERECHO (1/4) === */
        .right-panel {
            background-color: var(--np-dark-grey); /* #242424 */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 3rem;
        }

        .login-title {
            color: white;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 2rem;
            text-align: center;
        }

        /* Estilos de Inputs */
        .form-label {
            color: #ccc;
            font-size: 0.9rem;
        }

        .form-control-np {
            background-color: white;
            border: none;
            border-radius: 4px;
            padding: 10px;
            color: var(--np-grey);
        }
        
        .form-control-np:focus {
            box-shadow: 0 0 0 3px var(--np-red);
        }

        /* Botón Personalizado */
        .btn-neural {
            background-color: white;
            color: var(--np-red); /* #e50a46 */
            border: 1px solid black;
            font-weight: bold;
            padding: 10px;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-neural:hover {
            background-color: #f0f0f0;
            color: #c4083c;
        }

        /* Textos del Pie */
        .login-footer {
            margin-top: 2rem;
            text-align: center;
            font-size: 0.9rem;
        }

        .text-register {
            color: var(--np-red); /* #e50a46 */
            text-decoration: none;
            font-weight: bold;
        }
        
        .text-register:hover {
            text-decoration: underline;
            color: #ff4a7d;
        }

        .forgot-password {
            display: block;
            margin-top: 1rem;
            color: #aaa;
            text-decoration: none;
            font-size: 0.85rem;
        }

        .forgot-password:hover {
            color: white;
        }

        /* Mensajes de Validación */
        .text-danger {
            color: var(--np-red) !important;
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <div class="row g-0 login-wrapper">
            
            <div class="col-lg-9 left-panel">
                <div class="left-content">
                    <img src="/Recursos/WORDMARK BLANCA.png" alt="NeuralPlay Logo" class="brand-logo" />
                    
                    <div class="welcome-text">
                        Bienvenido a NeuralPlay, la comunidad para que los gamers conecten entre sí
                    </div>
                </div>
            </div>

            <div class="col-lg-3 right-panel">
                <h2 class="login-title">Iniciar Sesión</h2>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 mb-3" style="background:transparent; border: 1px solid var(--np-red); color: white;"></div>

                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control form-control-np" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control form-control-np" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-neural">
                        ENTRAR
                    </button>

                    <div class="login-footer">
                        <span>¿No tienes cuenta?</span>
                        <a asp-controller="Usuario" asp-action="Create" class="text-register ms-1">Regístrate</a>
                        
                        <a href="#" class="forgot-password">¿Has olvidado tu contraseña?</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>