@model NeuralPlay.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Usamos un layout nulo para tener control total del diseño de página completa
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        /* Estilos personalizados para lograr el efecto visual */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }

        .login-container {
            height: 100vh; /* Ocupa toda la altura de la pantalla */
            display: flex;
            align-items: center;
            justify-content: center;
            /* Imagen de fondo opcional con degradado superpuesto */
            background: linear-gradient(135deg, rgba(13, 110, 253, 0.8), rgba(102, 16, 242, 0.8)), 
                        url('/images/login-bg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-card {
            width: 100%;
            max-width: 450px; /* Ancho máximo elegante para el formulario */
            border-radius: 1rem;
            box-shadow: 0 0.5rem 2rem rgba(0, 0, 0, 0.25) !important; /* Sombra profunda */
            overflow: hidden; /* Para que los bordes redondeados afecten al header */
            background-color: #fff;
        }

        .login-header {
            background: #0d6efd; /* Color primario de Bootstrap o tu marca */
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .login-brand {
            font-size: 2rem;
            font-weight: 700;
            letter-spacing: 1px;
        }

        .login-body {
            padding: 2.5rem;
        }

        /* Estilo para los inputs flotantes */
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #0d6efd;
        }

        .btn-login {
            font-size: 1.1rem;
            font-weight: 600;
            padding: 0.8rem;
            letter-spacing: 0.5px;
        }

        .login-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="card login-card shadow-lg border-0 animate__animated animate__fadeInUp">
            <div class="login-header">
                <div class="login-brand">
                    <i class="bi bi-joystick"></i> NeuralPlay
                </div>
                <p class="mb-0 opacity-75">Bienvenido de nuevo, jugador.</p>
            </div>

            <div class="login-body">
                <form asp-action="Login" method="post">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center shadow-sm" role="alert">
                            <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"></i>
                            <div>Error de inicio de sesión. Verifica tus datos.</div>
                        </div>
                    }

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control rounded-pill ps-4" placeholder="name@example.com" />
                        <label asp-for="Email" class="ps-4"><i class="bi bi-envelope me-2"></i>Correo Electrónico</label>
                        <span asp-validation-for="Email" class="text-danger small ms-3"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" type="password" class="form-control rounded-pill ps-4" placeholder="Contraseña" />
                        <label asp-for="Password" class="ps-4"><i class="bi bi-lock-fill me-2"></i>Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger small ms-3"></span>
                    </div>

                    <div class="d-grid gap-2 mt-5">
                        <button type="submit" class="btn btn-primary btn-login rounded-pill shadow">
                            Ingresar <i class="bi bi-arrow-right-short ms-1"></i>
                        </button>
                    </div>

                    <div class="login-footer">
                        <p class="mb-1">¿Aún no tienes cuenta?</p>
                        <a asp-controller="Usuario" asp-action="Create" class="text-decoration-none fw-bold text-primary">
                            Crear una cuenta nueva
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>