@model IEnumerable<NeuralPlay.Models.UsuarioViewModel>

<h2>Usuarios</h2>
<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Email</th><th>Fecha</th><th></th></tr>
    </thead>
    <tbody>
    @foreach(var u in Model)
    {
        <tr>
            <td>@u.Nombre</td>
            <td>@u.Email</td>
            <td>@u.FechaRegistro.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-action="Details" asp-route-id="@u.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@u.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@u.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Crear usuario</a>