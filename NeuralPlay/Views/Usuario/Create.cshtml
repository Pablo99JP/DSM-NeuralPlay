@model NeuralPlay.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = null; // Sin layout para diseño de pantalla completa
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* === COLORES DEFINIDOS === */
        :root {
            --np-red: #e50a46;
            --np-transp: #21020a7a;
            --np-grey: #454545;
            --np-dark-grey: #242424;
        }
        @@font-face {
            font-family: 'Neue';
            src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        @@font-face {
            font-family: 'Lexend';
            src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden; /* Evita scroll horizontal */
        }

        .login-wrapper {
            min-height: 100vh;
            width: 100%;
            display: flex;
            flex-direction: row;
            position: relative;
        }

        /* === LADO IZQUIERDO (3/4) === */
        aside.left-panel {
            background: url('/Recursos/WALLPAPER.png') no-repeat center center;
            background-size: cover;
            position: relative;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        /* Capa opcional para mejorar contraste */
        aside.left-panel::before {
            content: "";
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            z-index: 1;
            pointer-events: none;
        }

        section.left-content {
            position: absolute;
            left: 0;
            height: 100%;
            width: 67%;
            z-index: 2;
            pointer-events: none;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .brand-logo {
            max-width: 1000px;
            width: 100%;
            height: auto;
            margin-bottom: 20px;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }

        h1.welcome-text {
            color: white;
            font-size: 2rem;
            font-weight: 600;
            font-family: 'Lexend', sans-serif;
            font-style: italic;
            padding: 15px;
            border-radius: 10px;
            display: inline-block;
            text-align: left;
            margin: 0 100px;
        }

        /* === LADO DERECHO (1/4) === */
        section.right-panel {
            background-color: var(--np-transp);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 1.5rem 3rem;
            position: absolute;
            height: 100vh;
            width: 33%;
            right: 0;
            z-index: 3;
            pointer-events: auto;
            overflow: hidden;
            transition: justify-content 0.3s ease;
        }

        section.right-panel.requirements-shown {
            justify-content: flex-start;
        }

        .login-title {
            color: white;
            font-size: 3rem;
            font-weight: bold;
            margin-top: 0.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
            font-family: 'Neue', sans-serif;
        }

        /* Estilos del Formulario */
        .login-form {
            display: flex;
            flex-direction: column;
        }

        /* Fieldset y Legend */
        fieldset {
            border: none;
            padding: 0;
            margin: 0;
        }

        legend {
            display: none;
        }

        /* Grupo de formulario */
        .form-group {
            margin-bottom: 1rem;
        }

        .form-group:last-of-type {
            margin-bottom: 1.5rem;
        }

        /* Estilos de Labels */
        label {
            color: #ccc;
            font-size: 0.9rem;
            display: block;
            margin-bottom: 0.5rem;
        }

        /* Estilos de Inputs */
        input[type="email"],
        input[type="password"],
        input[type="text"] {
            background-color: white;
            border: none;
            border-radius: 4px;
            padding: 10px;
            color: var(--np-grey);
            font-family: 'Lexend', sans-serif;
            font-size: 1.5rem;
            width: 100%;
            box-sizing: border-box;
        }
        
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="text"]:focus {
            outline: none;
            box-shadow: 0 0 0 3px var(--np-red);
        }

        /* Botón Personalizado */
        button[type="submit"] {
            background-color: white;
            color: var(--np-red);
            font-weight: bold;
            padding: 12px;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-family: 'Neue', sans-serif;
            font-size: 1.8rem;
            cursor: pointer;
            box-sizing: border-box;
            border-radius: 15px;
            border: none;
        }

        button[type="submit"]:hover {
            background-color: #f0f0f0;
            color: #c4083c;
            transform: scale(1.05);
        }

        /* Textos del Pie */
        footer {
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
            font-size: 1.3rem;
        }

        footer span {
            font-family: 'Lexend', sans-serif;
        }

        a {
            color: var(--np-red);
            text-decoration: none;
            font-family: 'Neue', sans-serif;
        }
        
        a:hover {
            text-decoration: underline;
            color: #ff4a7d;
        }

        .forgot-password {
            display: block;
            margin-top: 1rem;
            color: #aaa;
            text-decoration: none;
            font-size: 0.85rem;
        }

        .forgot-password:hover {
            color: white;
        }

        /* Mensajes de Validación */
        .validation-error {
            color: white;
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
        }

        .alert-validation {
            background: transparent;
            border: 1px solid var(--np-red);
            color: white;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border-radius: 4px;
        }

        /* Estilos para validación de contraseña */
        .password-requirements {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid var(--np-grey);
            border-radius: 4px;
            padding: 0.75rem;
            margin-top: 0.5rem;
            display: none;
        }

        .password-requirements.show {
            display: block;
        }

        .password-requirements h4 {
            color: #aaa;
            font-size: 0.8rem;
            margin: 0 0 0.5rem 0;
            font-family: 'Lexend', sans-serif;
            text-transform: uppercase;
        }

        .requirement-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.35rem;
            font-size: 0.8rem;
            color: #bbb;
        }

        .requirement-item:last-child {
            margin-bottom: 0;
        }

        .requirement-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-right: 0.75rem;
            font-size: 0.7rem;
            font-weight: bold;
            background: rgba(255, 255, 255, 0.1);
            color: #888;
            flex-shrink: 0;
        }

        .requirement-item.met .requirement-icon {
            background: #28a745;
            color: white;
        }

        .requirement-item.met {
            color: #28a745;
        }

        /* Ajustes tablet */
        @@media (max-width: 1024px) {
            .login-wrapper {
                flex-direction: column;
            }

            aside.left-panel {
                width: 100%;
                height: 30vh;
                min-height: unset;
            }

            section.left-content {
                width: 100%;
                height: 100%;
                position: relative;
                padding: 20px;
            }

            .brand-logo {
                max-width: 450px;
                margin-bottom: 15px;
            }

            h1.welcome-text {
                font-size: 1.3rem;
                margin: 0 40px;
                background: transparent;
                color: white;
                text-shadow: 0 2px 4px rgba(0,0,0,0.9);
            }

            section.right-panel {
                position: relative;
                width: 100%;
                height: auto;
                min-height: 60vh;
                right: auto;
                padding: 40px 60px;
                background-color: var(--np-dark-grey);
                max-width: 100%;
            }
        }

        /* Ajustes mobile */
        @@media (max-width: 580px) {
            aside.left-panel {
                height: 35vh;
            }

            .brand-logo {
                max-width: 340px;
                margin-bottom: 10px;
            }

            h1.welcome-text {
                font-size: 1.2rem;
                margin: 0 15px;
                padding: 0;
                background: transparent;
                color: white;
                text-shadow: 0 2px 4px rgba(0,0,0,0.9);
            }

            section.right-panel {
                padding: 30px 20px;
                min-height: 65vh;
            }

            .login-title {
                font-size: 2.8rem;
            }
            
            button[type="submit"] {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>

    <main class="login-wrapper">
        <aside class="left-panel">
            <section class="left-content">
                <img src="~/Recursos/WORDMARK_BLANCA.png" alt="NeuralPlay Logo" class="brand-logo" />
                <h1 class="welcome-text">
                    Bienvenido a NeuralPlay, la comunidad para que los gamers conecten entre sí
                </h1>
            </section>
        </aside>

        <section class="right-panel">
            <h2 class="login-title">Registrarse</h2>

            <form asp-action="Create" method="post" class="login-form">
                @Html.AntiForgeryToken()

                <fieldset>
                    <legend>Formulario de Registro</legend>
                    
                    <p class="form-group">
                        <input asp-for="Nombre" type="text" placeholder="Nombre de usuario" required />
                        <span asp-validation-for="Nombre" class="validation-error"></span>
                    </p>

                    <p class="form-group">
                        <input asp-for="Email" type="email" placeholder="Email" required />
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </p>

                    <section class="form-group">
                        <input asp-for="Password" type="password" id="passwordInput" placeholder="Contraseña" required />
                        <span asp-validation-for="Password" class="validation-error"></span>
                        
                        <!-- Requisitos de contraseña -->
                        <aside class="password-requirements" id="passwordRequirements">
                            <h4>Requisitos de Contraseña</h4>
                            <p class="requirement-item" id="req-length">
                                <span class="requirement-icon">✕</span>
                                <span>Mínimo 8 caracteres</span>
                            </p>
                            <p class="requirement-item" id="req-uppercase">
                                <span class="requirement-icon">✕</span>
                                <span>Contiene mayúscula (A-Z)</span>
                            </p>
                            <p class="requirement-item" id="req-lowercase">
                                <span class="requirement-icon">✕</span>
                                <span>Contiene minúscula (a-z)</span>
                            </p>
                            <p class="requirement-item" id="req-number">
                                <span class="requirement-icon">✕</span>
                                <span>Contiene número (0-9)</span>
                            </p>
                            <p class="requirement-item" id="req-special">
                                <span class="requirement-icon">✕</span>
                                <span>Contiene carácter especial</span>
                            </p>
                        </aside>
                    </section>

                    <p class="form-group">
                        <input type="password" id="passwordConfirm" placeholder="Confirmar Contraseña" required />
                        <span class="validation-error" id="confirmError"></span>
                    </p>
                </fieldset>

                <button type="submit">CREAR CUENTA</button>

                <footer>
                    <span>¿Ya tienes cuenta?</span>
                    <a asp-controller="Usuario" asp-action="Login" class="ms-1">Inicia sesión</a>
                </footer>
            </form>
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/password-validator.js"></script>
</body>
</html>