@model NeuralPlay.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Registrarse";
    Layout = null; // Sin layout para diseño de pantalla completa
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NeuralPlay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* === COLORES DEFINIDOS === */
        :root {
            --np-red: #e50a46;
            --np-transp: #21020a7a;
            --np-grey: #454545;
            --np-dark-grey: #242424;
        }
        @@font-face {
            font-family: 'Neue';
            src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }
        @@font-face {
            font-family: 'Lexend';
            src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            overflow-x: hidden; /* Evita scroll horizontal */
        }

        .login-wrapper {
            min-height: 100vh;
            width: 100%;
            display: flex;
            flex-direction: row;
            position: relative;
        }

        /* === LADO IZQUIERDO (3/4) === */
        aside.left-panel {
            background: url('/Recursos/WALLPAPER.png') no-repeat center center;
            background-size: cover;
            position: relative;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        /* Capa opcional para mejorar contraste */
        aside.left-panel::before {
            content: "";
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            z-index: 1;
            pointer-events: none;
        }

        section.left-content {
            position: absolute;
            left: 0;
            height: 100%;
            width: 67%;
            z-index: 2;
            pointer-events: none;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .brand-logo {
            max-width: 1000px;
            width: 100%;
            height: auto;
            margin-bottom: 20px;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }

        h1.welcome-text {
            color: black;
            font-size: 2rem;
            font-weight: 600;
            font-family: 'Lexend', sans-serif;
            font-style: italic;
            padding: 15px;
            border-radius: 10px;
            display: inline-block;
            text-align: left;
            margin: 0 100px;
        }

        /* === LADO DERECHO (1/4) === */
        section.right-panel {
            background-color: var(--np-transp);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 3rem;
            position: absolute;
            height: 100%;
            width: 33%;
            right: 0;
            z-index: 3;
            pointer-events: auto;
        }

        .login-title {
            color: white;
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
            text-align: center;
            font-family: 'Neue', sans-serif;
        }

        /* Estilos del Formulario */
        .login-form {
            display: flex;
            flex-direction: column;
        }

        /* Fieldset y Legend */
        fieldset {
            border: none;
            padding: 0;
            margin: 0;
        }

        legend {
            display: none;
        }

        /* Grupo de formulario */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group:last-of-type {
            margin-bottom: 2rem;
        }

        /* Estilos de Labels */
        label {
            color: #ccc;
            font-size: 0.9rem;
            display: block;
            margin-bottom: 0.5rem;
        }

        /* Estilos de Inputs */
        input[type="email"],
        input[type="password"],
        input[type="text"] {
            background-color: white;
            border: none;
            border-radius: 4px;
            padding: 10px;
            color: var(--np-grey);
            font-family: 'Lexend', sans-serif;
            font-size: 1.5rem;
            width: 100%;
            box-sizing: border-box;
        }
        
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="text"]:focus {
            outline: none;
            box-shadow: 0 0 0 3px var(--np-red);
        }

        /* Botón Personalizado */
        button[type="submit"] {
            background-color: white;
            color: var(--np-red);
            font-weight: bold;
            padding: 10px;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-family: 'Neue', sans-serif;
            font-size: 2rem;
            cursor: pointer;
            box-sizing: border-box;
            border-radius: 15px;
            border: none;
        }

        button[type="submit"]:hover {
            background-color: #f0f0f0;
            color: #c4083c;
            transform: scale(1.05);
        }

        /* Textos del Pie */
        footer {
            margin-top: 2rem;
            text-align: center;
            font-size: 1.5rem;
        }

        footer span {
            font-family: 'Lexend', sans-serif;
        }

        a {
            color: var(--np-red);
            text-decoration: none;
            font-family: 'Neue', sans-serif;
        }
        
        a:hover {
            text-decoration: underline;
            color: #ff4a7d;
        }

        .forgot-password {
            display: block;
            margin-top: 1rem;
            color: #aaa;
            text-decoration: none;
            font-size: 0.85rem;
        }

        .forgot-password:hover {
            color: white;
        }

        /* Mensajes de Validación */
        .validation-error {
            color: white;
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
        }

        .alert-validation {
            background: transparent;
            border: 1px solid var(--np-red);
            color: white;
            padding: 0.75rem;
            margin-bottom: 1rem;
            border-radius: 4px;
        }
    </style>
</head>
<body>

    <main class="login-wrapper">
        <aside class="left-panel">
            <section class="left-content">
                <img src="~/Recursos/WORDMARK_BLANCA.png" alt="NeuralPlay Logo" class="brand-logo" />
                <h1 class="welcome-text">
                    Bienvenido a NeuralPlay, la comunidad para que los gamers conecten entre sí
                </h1>
            </section>
        </aside>

        <section class="right-panel">
            <h2 class="login-title">Registrarse</h2>

            <form asp-action="Create" method="post" class="login-form">
                @Html.AntiForgeryToken()

                <fieldset>
                    <legend>Formulario de Registro</legend>
                    
                    <div class="form-group">
                        <input asp-for="Nombre" type="text" placeholder="Nombre de usuario" required />
                        <span asp-validation-for="Nombre" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Email" type="email" placeholder="Email" required />
                        <span asp-validation-for="Email" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" placeholder="Contraseña" required />
                        <span asp-validation-for="Password" class="validation-error"></span>
                    </div>
                </fieldset>

                <button type="submit">CREAR CUENTA</button>

                <footer>
                    <span>¿Ya tienes cuenta?</span>
                    <a asp-controller="Usuario" asp-action="Login" class="ms-1">Inicia sesión</a>
                </footer>
            </form>
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>