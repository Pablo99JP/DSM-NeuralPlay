@model NeuralPlay.Models.ComunidadViewModel

@{
    ViewData["Title"] = "Crear Comunidad";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
    }

    .main-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        z-index: 1;
    }

    .content-container {
        position: absolute;
        left: 11%;
        top: 0;
        width: 83%;
        min-height: 100vh;
        z-index: 2;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .page-header {
        margin-bottom: 40px;
        display: flex;
        align-items: center;
        gap: 18px;
        width: 100%;
        max-width: 1000px;
    }

    .community-avatar {
        width: 110px;
        height: 110px;
        border-radius: 18px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
        flex-shrink: 0;
    }

    .community-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 6rem;
        color: white;
        text-transform: uppercase;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        margin: 0;
        letter-spacing: 2px;
        line-height: 0.95;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1rem;
    }

    .form-card {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 40px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        max-width: 1000px;
        width: 100%;
    }

    .form-group { margin-bottom: 26px; }

    .form-label {
        font-family: 'Neue', sans-serif;
        font-size: 1.5rem;
        color: var(--np-red);
        margin-bottom: 10px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-input,
    .form-select,
    textarea.form-input {
        font-family: 'Lexend', sans-serif;
        font-size: 1.15rem;
        width: 100%;
        padding: 14px 16px;
        background: rgba(69, 69, 69, 0.8);
        border: 2px solid var(--np-grey);
        border-radius: 8px;
        color: white;
        transition: all 0.3s ease;
    }

    .form-input:focus,
    .form-select:focus,
    textarea.form-input:focus {
        outline: none;
        border-color: var(--np-red);
        background: rgba(69, 69, 69, 1);
        box-shadow: 0 0 10px rgba(229, 10, 70, 0.3);
    }

    .form-select option { background: var(--np-dark-grey); color: white; padding: 10px; }

    .validation-panel {
        color: var(--np-red);
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        margin-bottom: 20px;
        padding: 15px;
        background: rgba(229, 10, 70, 0.1);
        border-radius: 8px;
        border-left: 4px solid var(--np-red);
    }

    .form-note {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1rem;
    }

    .actions { display: flex; gap: 12px; flex-wrap: wrap; }

    .btn-submit {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        padding: 14px 34px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover { background: transparent; color: var(--np-red); transform: scale(1.03); }

    .btn-cancel {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        padding: 14px 34px;
        background: transparent;
        color: white;
        border: 2px solid white;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-cancel:hover { background: white; color: var(--np-dark-grey); }

    .checkbox-group {
        margin-top: 15px;
    }

    .checkbox-group input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        accent-color: var(--np-red);
        cursor: pointer;
    }

    .checkbox-group label {
        font-family: 'Lexend', sans-serif;
        color: white;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    /* Ajustes tablet: layout y espaciados especificos de esta vista */
    @@media (max-width: 1024px) {
        .content-container {
            left: 0;
            width: 100%;
            padding: 110px 24px 40px;
        }

        .page-title { font-size: 3.6rem; }
        .page-subtitle { font-size: 0.95rem; }

        .form-card { padding: 28px; }
        .form-label { font-size: 1.2rem; }
        .form-input,
        .form-select,
        textarea.form-input { font-size: 1rem; padding: 12px 14px; }

        .btn-submit, .btn-cancel { font-size: 1.05rem; padding: 12px 26px; }
    }
</style>

<div class="main-container"></div>

<div class="content-container">
    <header class="page-header">
        <div>
            <h1 class="page-title">Crear Comunidad</h1>
            <p class="page-subtitle">Define los datos principales de tu nueva comunidad</p>
        </div>
    </header>

    <section class="form-card">
        <div asp-validation-summary="ModelOnly" class="validation-panel"></div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-input" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenUrl" class="form-label">Logo de la comunidad</label>
                @if (!string.IsNullOrEmpty(Model?.ImagenUrl))
                {
                    <div style="margin-bottom: 12px;">
                        <img src="@Model.ImagenUrl" alt="Logo actual" style="max-width: 150px; max-height: 150px; border-radius: 10px; border: 2px solid var(--np-red);" />
                        <p style="color: #ccc; font-size: 0.9rem; margin-top: 5px;">Logo actual</p>
                    </div>
                }
                <div class="form-note">Opcional: el logo aparecerá en futuras implementaciones.</div>
            </div>

            <div class="form-group checkbox-group">
                <label asp-for="EsPublica">
                    <input asp-for="EsPublica" type="checkbox" />
                    <span>Es pública</span>
                </label>
                <span asp-validation-for="EsPublica" class="text-danger"></span>
            </div>

            <div class="actions">
                <button type="submit" class="btn-submit">Guardar</button>
                <a asp-controller="Comunidades" asp-action="Index" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </section>
</div>