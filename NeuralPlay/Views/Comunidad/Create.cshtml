@model NeuralPlay.Models.ComunidadViewModel

@{
    ViewData["Title"] = "Crear Comunidad";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Resetear estilos de fieldset para comportamiento semántico */
    fieldset {
        border: none;
        padding: 0;
        margin: 0;
        min-width: 0;
    }

    .page-header {
        display: flex;
        align-items: center;
        gap: 18px;
    }

    .community-avatar {
        width: 110px;
        height: 110px;
        border-radius: 18px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
        flex-shrink: 0;
    }

    .community-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .page-title { font-size: 6rem; line-height: 0.95; }

    .form-select option { background: var(--np-dark-grey); color: white; padding: 10px; }

    .form-note {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1rem;
    }

    .checkbox-group {
        margin-top: 15px;
    }

    .checkbox-group input[type="checkbox"] {
        width: 20px;
        height: 20px;
        margin-right: 10px;
        accent-color: var(--np-red);
        cursor: pointer;
    }

    .checkbox-group label {
        font-family: 'Lexend', sans-serif;
        color: white;
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    /* Ajustes tablet: solo especificos de esta vista */
    @@media (max-width: 1024px) {
        .page-title { font-size: 3.6rem; }
        .page-subtitle { font-size: 0.95rem; }
    }

    /* Ajustes mobile */
    @@media (max-width: 580px) {
        .content-container { padding: 80px 12px 110px; }
        .page-title { font-size: 2rem; }
        .page-subtitle { font-size: 0.85rem; }
        .form-card { padding: 16px; margin-bottom: 12px; }
        .btn-submit, .btn-cancel { width: 100%; }
        .form-actions { flex-direction: column; }
    }
</style>

<main class="main-container"></main>

<article class="content-container">
    <header class="page-header">
        <hgroup>
            <h1 class="page-title">Crear Comunidad</h1>
            <p class="page-subtitle">Define los datos principales de tu nueva comunidad</p>
        </hgroup>
    </header>

    <section class="form-card">
        <aside asp-validation-summary="ModelOnly" class="validation-panel"></aside>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <fieldset class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </fieldset>

            <fieldset class="form-group">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-input" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </fieldset>

            <fieldset class="form-group">
                <label asp-for="ImagenArchivo" class="form-label">Logo de la comunidad</label>
                <input asp-for="ImagenArchivo" type="file" class="form-input" accept="image/*" style="padding: 10px;" />
                <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
                <small class="form-note">Opcional: Sube una imagen para el logo de la comunidad (jpg, png, gif, webp).</small>
            </fieldset>

            <nav class="actions">
                <button type="submit" class="btn-submit">Guardar</button>
                <a asp-controller="Comunidades" asp-action="Index" class="btn-cancel">Cancelar</a>
            </nav>
        </form>
    </section>
</article>