    }

    .publication-author {
        flex: 1;
    }

    .author-name {
        font-family: 'Neue', sans-serif;
        color: var(--np-red);
        font-size: 1.3rem;
        margin: 0;
    }

    .author-role {
        font-family: 'Lexend', sans-serif;
        color: #aaa;
        font-size: 0.9rem;
    }

    .publication-content {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    .publication-hashtags {
        font-family: 'Lexend', sans-serif;
        color: var(--np-red);
        font-size: 0.95rem;
        margin-bottom: 10px;
    }

    .publication-meta {
        font-family: 'Lexend', sans-serif;
        color: #999;
        font-size: 0.85rem;
        margin-bottom: 15px;
    }

    .publication-actions {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .action-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        color: white;
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        background: transparent;
        border: none;
        cursor: pointer;
        transition: color 0.2s;
    }

    .action-btn:hover {
        color: var(--np-red);
    }

    .action-btn i {
        font-size: 1.2rem;
    }

    .action-btn.liked i {
        color: var(--np-red);
    }

    .action-btn:not(.liked) i {
        color: white;
    }

    /* Botón flotante para crear publicación */
    .btn-create-post {
        position: fixed;
        bottom: 40px;
        right: calc(6% + 100px);
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: var(--np-red);
        color: white;
        border: none;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(229, 10, 70, 0.5);
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        z-index: 100;
    }

    .btn-create-post:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 30px rgba(229, 10, 70, 0.7);
    }

    .btn-create-post:hover i {
        color: var(--np-dark-grey);
    }

