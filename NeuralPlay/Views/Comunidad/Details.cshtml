    @@media (min-width: 581px) {
        .btn-create-post {
            width: 90px;
            height: 90px;
            font-size: 2.5rem;
        }
    }

    /* Móvil: posicionar botón por encima de la barra inferior */
    @@media (max-width: 580px) {
        .btn-create-post {
            bottom: calc(12vh + 20px);
            right: 20px;
        }
    }

    /* Botón añadir amigo */
    .btn-add-friend {
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        padding: 12px 32px;
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-add-friend:hover {
        background: transparent;
        color: var(--np-red);
    }



    /* Texto sin publicaciones */
    .no-content {
        font-family: 'Lexend', sans-serif;
        color: #888;
        text-align: center;
        padding: 40px;
        font-size: 1.2rem;
    }
</style>

