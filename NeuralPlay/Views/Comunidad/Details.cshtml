@model NeuralPlay.Models.ComunidadViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Nombre;
    var miembros = ViewBag.Miembros as List<NeuralPlay.Models.MiembroComunidadViewModel> ?? new List<NeuralPlay.Models.MiembroComunidadViewModel>();
    var publicaciones = ViewBag.Publicaciones as List<NeuralPlay.Models.PublicacionViewModel> ?? new List<NeuralPlay.Models.PublicacionViewModel>();
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Contenedor principal - solo fondo */
    .main-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        z-index: 1;
    }

    /* Contenedor de contenido - entre las barras */
    .content-container {
        position: absolute;
        left: 11%;
        top: 0;
        width: 83%; /* 100% - 11% (izq) - 6% (der) */
        min-height: 100vh;
        z-index: 2;
    }

    /* Header con el nombre de la comunidad y banner */
    .community-header {
        position: relative;
        width: 100%;
        padding: 60px 0 40px 0;
        margin-bottom: 40px;
    }

    .community-title-container {
        text-align: left;
        padding-left: 40px;
    }

    .community-title {
        font-family: 'Neue', sans-serif;
        font-size: 10rem;
        color: white;
        text-transform: uppercase;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        margin: 0;
        margin-bottom: 10px;
        letter-spacing: 5px;
        line-height: 1;
    }

    .community-members-count {
        font-family: 'Lexend', sans-serif;
        font-size: 2.5rem;
        color: var(--np-red);
        margin-top: 0;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .community-members-count:hover {
        color: #ff4a7d;
        text-shadow: 0 2px 8px rgba(229, 10, 70, 0.6);
        transform: scale(1.05);
    }

    /* Contenedor principal */
    .content-wrapper {
        margin: 0 auto;
        padding: 0 20px;
        max-width: 1200px;
    }

    /* Cards de publicaciones y miembros */
    .community-card {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Publicación individual */
    .publication-item {
        background: rgba(69, 69, 69, 0.6);
        border-left: 4px solid var(--np-red);
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 6px;
    }

    .publication-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .publication-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        border: 2px solid var(--np-red);
    }

    .publication-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .publication-author {
        flex: 1;
    }

    .author-name {
        font-family: 'Neue', sans-serif;
        color: var(--np-red);
        font-size: 1.3rem;
        margin: 0;
    }

    .author-role {
        font-family: 'Lexend', sans-serif;
        color: #aaa;
        font-size: 0.9rem;
    }

    .publication-content {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    .publication-hashtags {
        font-family: 'Lexend', sans-serif;
        color: var(--np-red);
        font-size: 0.95rem;
        margin-bottom: 10px;
    }

    .publication-meta {
        font-family: 'Lexend', sans-serif;
        color: #999;
        font-size: 0.85rem;
        margin-bottom: 15px;
    }

    .publication-actions {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .action-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        color: white;
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        background: transparent;
        border: none;
        cursor: pointer;
        transition: color 0.2s;
    }

    .action-btn:hover {
        color: var(--np-red);
    }

    .action-btn i {
        font-size: 1.2rem;
    }

    .action-btn.liked i {
        color: var(--np-red);
    }

    .action-btn:not(.liked) i {
        color: white;
    }

    /* Botón flotante para crear publicación */
    .btn-create-post {
        position: fixed;
        bottom: 40px;
        right: calc(6% + 100px);
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: var(--np-red);
        color: white;
        border: none;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(229, 10, 70, 0.5);
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
        z-index: 100;
    }

    .btn-create-post:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 30px rgba(229, 10, 70, 0.7);
    }

    /* Botón añadir amigo */
    .btn-add-friend {
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        padding: 12px 32px;
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-add-friend:hover {
        background: transparent;
        color: var(--np-red);
    }



    /* Texto sin publicaciones */
    .no-content {
        font-family: 'Lexend', sans-serif;
        color: #888;
        text-align: center;
        padding: 40px;
        font-size: 1.2rem;
    }
</style>

<!-- Contenedor principal - solo fondo -->
<div class="main-container"></div>

<!-- Contenedor de contenido - entre las barras laterales -->
<div class="content-container">
    <!-- Header con nombre de comunidad y foto de portada -->
    <header class="community-header">
        <div class="community-title-container">
            <h1 class="community-title">@Model.Nombre</h1>
            <a asp-action="Miembros" asp-route-id="@Model.IdComunidad" class="community-members-count">@miembros.Count miembros</a>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="content-wrapper">
    <!-- Feed de publicaciones -->
    <section class="community-card">
        @if (publicaciones.Any())
        {
            @foreach (var pub in publicaciones)
            {
                <article class="publication-item">
                    <div class="publication-header">
                        <div class="publication-avatar">
                            @if (!string.IsNullOrEmpty(pub.NickAutor))
                            {
                                <span style="color: white; font-family: 'Neue', sans-serif; font-size: 1.2rem;">@pub.NickAutor.Substring(0, 1).ToUpper()</span>
                            }
                        </div>
                        <div class="publication-author">
                            <h3 class="author-name">@(pub.NickAutor ?? "Usuario")</h3>
                            <p class="author-role">Jugador</p>
                        </div>
                    </div>
                    
                    <p class="publication-content">@pub.contenido</p>
                    
                    @* Aquí puedes agregar hashtags si los tienes en el modelo *@
                    @* <p class="publication-hashtags">#ejemplo #hashtag</p> *@
                    
                    <p class="publication-meta">@pub.fechaCreacion.ToString("HH:mm") · @pub.fechaCreacion.ToString("dd/MM/yyyy")</p>
                    
                    <div class="publication-actions">
                        <button class="action-btn toggle-like-btn @(pub.LikedByUser ? "liked" : "")" data-publicacion-id="@pub.idPublicacion">
                            <i class="bi bi-heart-fill" style="color: @(pub.LikedByUser ? "#e50a46" : "white");"></i>
                            <span class="like-count">@pub.LikeCount</span>
                        </button>
                        <a asp-controller="Publicacion" asp-action="Details" asp-route-id="@pub.idPublicacion" class="action-btn" style="text-decoration: none;">
                            <i class="bi bi-chat-fill"></i>
                            <span class="comment-count" data-publicacion-id="@pub.idPublicacion">@pub.comentarios.Count()</span>
                        </a>
                    </div>
                </article>
            }
        }
        else
        {
            <div class="no-content">
                <p>Esta comunidad aún no tiene publicaciones.</p>
                <p>¡Sé el primero en publicar!</p>
            </div>
        }
    </section>
</main>
</div>

<!-- Botón flotante para crear publicación -->
<a asp-controller="Publicacion" asp-action="Create" asp-route-idComunidad="@Model.IdComunidad" class="btn-create-post" title="Crear publicación">
    <i class="bi bi-pencil-fill"></i>
</a>

@section Scripts {
    <script>
        // Función para actualizar contadores de comentarios
        function updateCommentCounts() {
            document.querySelectorAll('.comment-count').forEach(span => {
                const publicacionId = span.getAttribute('data-publicacion-id');
                
                fetch(`/Comentario/GetCount?publicacionId=${publicacionId}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        span.textContent = data.count;
                    }
                })
                .catch(error => {
                    console.error('Error al obtener contador de comentarios:', error);
                });
            });
        }

        // Actualizar contadores cuando la página se muestra (incluye navegación con botón atrás)
        window.addEventListener('pageshow', function(event) {
            // Si la página viene del cache del navegador (bfcache)
            if (event.persisted) {
                updateCommentCounts();
            }
        });

        // Actualizar contadores cuando la página carga por primera vez o se recarga
        window.addEventListener('load', function() {
            updateCommentCounts();
        });

        // Actualizar contadores cuando la página se vuelve visible (usuario regresa desde otra pestaña/página)
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                updateCommentCounts();
            }
        });

        // Actualizar contadores cuando la página recibe el foco
        window.addEventListener('focus', function() {
            updateCommentCounts();
        });

        // Event listeners para los botones de like
        document.querySelectorAll('.toggle-like-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const button = e.currentTarget;
                const publicacionId = button.getAttribute('data-publicacion-id');
                const likeCountSpan = button.querySelector('.like-count');
                const icon = button.querySelector('i');
                
                // Hacer petición al servidor
                fetch('@Url.Action("TogglePublicacionLike", "Reaccion")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({ publicacionId: parseInt(publicacionId) })
                })
                .then(response => {
                    console.log('Response status:', response.status);
                    if (!response.ok) {
                        return response.json().then(err => {
                            throw new Error(err.error || 'Error en el servidor');
                        }).catch(() => {
                            throw new Error('Error en el servidor: ' + response.status);
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Response data:', data);
                    if (data.success) {
                        // Actualizar UI según respuesta del servidor
                        if (data.liked) {
                            button.classList.add('liked');
                            icon.style.color = '#e50a46';
                        } else {
                            button.classList.remove('liked');
                            icon.style.color = 'white';
                        }
                        likeCountSpan.textContent = data.likeCount;
                    } else {
                        console.error('Server returned success=false:', data);
                        alert('Error: ' + (data.error || 'Error desconocido'));
                    }
                })
                .catch(error => {
                    console.error('Error al dar like:', error);
                    // No mostrar alert, solo log en consola
                });
            });
        });
    </script>
}

