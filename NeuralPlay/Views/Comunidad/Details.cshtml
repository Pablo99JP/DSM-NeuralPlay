@model NeuralPlay.Models.ComunidadViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Nombre;
    var miembros = ViewBag.Miembros as List<NeuralPlay.Models.MiembroComunidadViewModel> ?? new List<NeuralPlay.Models.MiembroComunidadViewModel>();
    var publicaciones = ViewBag.Publicaciones as List<NeuralPlay.Models.PublicacionViewModel> ?? new List<NeuralPlay.Models.PublicacionViewModel>();
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Contenedor principal - solo fondo */
    .main-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        z-index: 1;
    }

    /* Botón hamburguesa para el menú lateral */
    .menu-toggle {
        position: fixed;
        top: 20px;
        right: calc(6% + 20px); /* A la izquierda de la barra derecha (6%) */
        z-index: 1001;
        background: var(--np-red);
        border: none;
        padding: 15px 20px;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .menu-toggle:hover {
        background: #cc0a3d;
        transform: scale(1.05);
        box-shadow: 0 6px 15px rgba(229, 10, 70, 0.4);
    }

    .menu-toggle i {
        color: white;
        font-size: 1.8rem;
        display: block;
    }

    /* Móvil: botón más en la esquina con menos padding */
    @@media (max-width: 580px) {
        .menu-toggle {
            top: 10px;
            right: 10px;
            padding: 10px 12px;
        }
    }

    /* Menú lateral desplegable */
    .sidebar-menu {
        position: fixed;
        top: 0;
        right: -400px; /* Oculto inicialmente más allá de la barra derecha */
        width: 400px;
        height: 100vh;
        background: rgba(36, 36, 36, 0.98);
        box-shadow: -4px 0 20px rgba(0, 0, 0, 0.5);
        z-index: 1000;
        transition: right 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        overflow-y: auto;
        padding: 80px 0 40px 0;
        border-left: 4px solid var(--np-red);
    }

    .sidebar-menu.active {
        right: 6%; /* Se despliega justo a la izquierda de la barra derecha (6%) */
    }

    /* Móvil: esconder menú 50px más a la derecha */
    @@media (max-width: 580px) {
        .sidebar-menu {
            width: 80vw;
            right: -85vw;
            padding: 30px 0 40px 0;
        }

        .sidebar-menu.active {
            right: 0;
        }
    }

    /* Overlay cuando el menú está abierto */
    .menu-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .menu-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    /* Título del nombre de la comunidad en el menú */
    .sidebar-menu-header {
        padding: 0 30px 30px 30px;
        border-bottom: 2px solid rgba(229, 10, 70, 0.3);
        margin-bottom: 30px;
    }

    .sidebar-menu-title {
        font-family: 'Neue', sans-serif;
        font-size: 2.5rem;
        color: var(--np-red);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 2px;
        line-height: 1.2;
        word-wrap: break-word;
    }

    /* Sección del menú */
    .menu-section {
        padding: 0 30px;
        margin-bottom: 20px;
    }

    .menu-section-title {
        font-family: 'Lexend', sans-serif;
        font-size: 0.9rem;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 15px;
        font-weight: 600;
    }

    /* Botones del menú */
    .menu-btn {
        width: 100%;
        background: transparent;
        border: 2px solid var(--np-red);
        color: white;
        font-family: 'Neue', sans-serif;
        font-size: 1.3rem;
        padding: 12px 20px;
        margin-bottom: 15px;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .menu-btn:hover {
        background: var(--np-red);
        transform: translateX(-5px);
        box-shadow: 0 4px 15px rgba(229, 10, 70, 0.4);
    }

    .menu-btn i {
        font-size: 1.5rem;
    }

    /* Botón de información (rol del usuario) */
    .menu-info-btn {
        width: 100%;
        background: rgba(69, 69, 69, 0.6);
        border: 2px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-family: 'Neue', sans-serif;
        font-size: 1.3rem;
        padding: 18px 25px;
        margin-bottom: 15px;
        border-radius: 8px;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: default;
    }

    .menu-info-btn .role-label {
        font-size: 0.9rem;
        color: #999;
        display: block;
        margin-bottom: 5px;
    }

    .menu-info-btn .role-value {
        color: var(--np-red);
        font-size: 1.5rem;
    }

    /* Botón de abandonar (estilo peligroso) */
    .menu-btn-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

    .menu-btn-danger:hover {
        background: #dc3545;
        color: white;
        border-color: #dc3545;
    }

    /* Separador */
    .menu-divider {
        height: 2px;
        background: rgba(255, 255, 255, 0.1);
        margin: 30px 30px;
    }

    /* Contenedor de contenido - entre las barras */
    .content-container {
        position: absolute;
        left: 11%;
        top: 0;
        width: 80%;
        min-height: 100vh;
        z-index: 2;
    }

    /* Móvil: ancho completo con márgenes mínimos */
    @@media (max-width: 580px) {
        .content-container {
            left: 0;
            width: 100%;
            margin: 0;
            position: relative;
            padding: 0 3px;
        }
    }

