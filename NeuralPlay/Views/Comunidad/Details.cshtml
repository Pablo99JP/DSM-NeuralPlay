    }

    /* Móvil: ancho completo y márgenes mínimos */
    @@media (max-width: 580px) {
        .content-wrapper {
            width: 100%;
            padding: 0 2px;
            margin: 0 0;
        }
    }

    /* Cards de publicaciones y miembros */
