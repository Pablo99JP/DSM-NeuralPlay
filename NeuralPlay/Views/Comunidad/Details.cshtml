        background: rgba(69, 69, 69, 0.6);
        border-left: 4px solid var(--np-red);
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 6px;
    }

    .publication-header {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .publication-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        border: 2px solid var(--np-red);
    }

    .publication-avatar img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
