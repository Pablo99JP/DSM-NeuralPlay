        position: relative;
        width: 100%;
        padding: 60px 0 40px 0;
        margin-bottom: 40px;
    }

    .community-title-container {
        text-align: left;
        padding-left: 40px;
    }

    .community-title {
        font-family: 'Neue', sans-serif;
        font-size: 10rem;
        color: white;
        text-transform: uppercase;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        margin: 0;
        margin-bottom: 10px;
        letter-spacing: 5px;
        line-height: 1;
    }

    .community-members-count {
        font-family: 'Lexend', sans-serif;
        font-size: 2.5rem;
        color: var(--np-red);
        margin-top: 0;
        font-weight: bold;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-block;
    }

    /* Ajustes para móvil */
    @@media (max-width: 580px) {
        .community-header {
            padding: 20px 0 20px 0;
            margin-bottom: 15px;
        }

        .community-title-container {
            padding-left: 4px;
        }

        .community-title {
            font-size: 4rem;
            letter-spacing: 2px;
        }

        .community-members-count {
            font-size: 1.2rem;
        }
    }

    .community-members-count:hover {
        color: #ff4a7d;
        text-shadow: 0 2px 8px rgba(229, 10, 70, 0.6);
        transform: scale(1.05);
    }

