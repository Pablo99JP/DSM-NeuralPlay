@model IEnumerable<NeuralPlay.Models.ComunidadViewModel>
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mis Comunidades";
    ViewBag.OcultarNavbar = true;
    var currentUser = UsuarioAuth.GetUsuarioActual();
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<script>
    function irAComunidad(comunidadId) {
        window.location.href = '/Comunidad/Details/' + comunidadId;
    }
</script>

<style>
    /* Reset para etiquetas semánticas */
    figure, hr {
        margin: 0;
        padding: 0;
    }

    hr {
        border: none;
        height: 3px;
    }

    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    html, body {
        max-width: 100%;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    /* Header con el título */
    .profile-header {
        text-align: center;
        margin-bottom: 15px;
        padding-top: 10px;
    }

    .profile-header h1 {
        font-family: 'Neue', sans-serif;
        text-align: center;
        font-size: 3.5rem;
        color: white;
        margin-bottom: 10px;
        margin-right: 11vw;
    }

    .profile-header h1 .username {
        color: var(--np-red);
    }

    .profile-divider {
        width: 70%;
        height: 3px;
        background-color: white;
        margin: 0 auto 30px auto;
        margin-left: 6vw;
        margin-right: 11vw;
    }

    .profile-section-title {
        font-family: 'Neue', sans-serif;
        font-size: 5.5rem;
        color: white;
        margin-bottom: 30px;
        text-align: left;
        padding-left: 0;
        margin-left: 32px;
        font-weight: bold;
    }

    /* Contenedor principal */
    .content-wrapper {
        margin: 0 auto;
        padding: 0 40px;
        max-width: 1100px;
    }

    /* Grid de comunidades - 2 columnas como en Home */
    .comunidades-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 60px;
        max-width: 900px;
        margin: 0 auto;
    }

    .comunidad-card {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15), 0 0 20px rgba(229, 10, 70, 0.4);
        height: 250px;
        background: var(--np-grey);
        cursor: pointer;
        transition: transform 0.2s;
    }

    .comunidad-card:hover {
        transform: scale(1.03);
    }

    .comunidad-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
    }

    .comunidad-card::before {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.95) 0%, rgba(0, 0, 0, 0.7) 30%, rgba(0, 0, 0, 0.3) 60%, transparent 100%);
        z-index: 1;
        pointer-events: none;
    }

    .comunidad-title {
        position: absolute;
        bottom: 20px;
        left: 20px;
        text-align: left;
        transform: none;
        font-family: 'Neue', sans-serif;
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        z-index: 2;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
        pointer-events: none;
        letter-spacing: 1px;
        white-space: normal;
        max-width: 85%;
        word-wrap: break-word;
        overflow: hidden;
        line-height: 1.1;
    }

    .comunidad-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(229, 10, 70, 0.7);
        z-index: 3;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .comunidad-card:hover .comunidad-overlay {
        opacity: 1;
        pointer-events: auto;
    }

    .comunidad-ver {
        color: white;
        font-family: 'Neue', sans-serif;
        font-size: 3rem;
        font-weight: bold;
        cursor: pointer;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        letter-spacing: 1px;
    }

    .comunidad-ver:hover {
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
    }

    /* Mensaje de no comunidades */
    .no-comunidades-message {
        text-align: center;
        padding: 100px 40px;
        color: white;
    }

    .no-comunidades-icon {
        font-size: 6rem;
        color: var(--np-red);
        margin-bottom: 30px;
    }

    .no-comunidades-title {
        font-family: 'Neue', sans-serif;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 20px;
    }

    .no-comunidades-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        color: #ccc;
        margin-bottom: 30px;
    }

    .btn-explore-comunidades {
        font-family: 'Lexend', sans-serif;
        background: var(--np-red);
        color: white;
        padding: 15px 40px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        font-size: 1.1rem;
        border: 2px solid var(--np-red);
    }

    .btn-explore-comunidades:hover {
        background: white;
        color: var(--np-red);
        transform: scale(1.05);
    }

    /* Media queries - Tablet */
    @@media screen and (min-width: 581px) and (max-width: 1024px) {
        body {
            padding-right: 12vw;
        }

        .profile-header {
            margin: 0 auto;
            max-width: 750px;
            padding: 10px 20px 0 20px;
        }

        .profile-header h1 {
            margin-left: 0;
            margin-right: 0;
            text-align: center;
        }

        .profile-divider {
            margin-left: auto;
            margin-right: auto;
            width: 70%;
        }

        .profile-section-title {
            margin-left: 0;
            padding-left: 0;
            text-align: center;
            font-size: 4rem;
        }

        .content-wrapper {
            margin: 0 auto;
            padding: 0 20px;
            max-width: 750px;
        }

        .comunidades-grid {
            grid-template-columns: 1fr;
            max-width: 100%;
            gap: 20px;
        }
    }

    /* Media queries - Mobile */
    @@media screen and (max-width: 580px) {
        .profile-header h1 {
            font-size: 3rem;
            margin-right: 0;
        }
        
        .profile-header h1 .username {
            font-size: inherit;
            display: inline;
            margin-top: 0;
        }

        .profile-section-title {
            font-size: 3rem;
            margin-left: 0;
            text-align: left;
            padding-left: 15px;
        }

        .profile-divider {
            width: calc(100% - 30px);
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 20px;
        }

        .content-wrapper {
            padding: 0 15px;
        }

        /* Grid a 1 columna en móvil, pero manteniendo tarjetas cuadradas con imagen de fondo */
        .comunidades-grid {
            grid-template-columns: 1fr;
            gap: 20px;
            max-width: 100%;
        }

        .comunidad-card {
            height: 200px;
        }

        .comunidad-title {
            font-size: 2rem;
            bottom: 15px;
            left: 15px;
        }

        .comunidad-ver {
            font-size: 2.5rem;
        }

        .no-comunidades-message {
            padding: 60px 15px;
        }

        .no-comunidades-icon {
            font-size: 4rem;
        }

        .no-comunidades-title {
            font-size: 1.8rem;
        }

        .no-comunidades-text {
            font-size: 1rem;
        }
    }
</style>

@if (currentUser != null)
{
    <header class="profile-header">
        <h1>Bienvenido, <span class="username">@currentUser.Nick</span></h1>
        <hr class="profile-divider" />
        <h2 class="profile-section-title">Tus Comunidades</h2>
    </header>
}
else
{
    <header class="profile-header">
        <h1>Bienvenido</h1>
        <hr class="profile-divider" />
        <h2 class="profile-section-title">Tus Comunidades</h2>
    </header>
}

<main class="content-wrapper">
    @if (Model != null && Model.Any())
    {
        <section class="comunidades-grid">
            @foreach (var comunidad in Model)
            {
                <article class="comunidad-card" onclick="irAComunidad(@comunidad.IdComunidad)">
                    <img src="@(string.IsNullOrEmpty(comunidad.ImagenUrl) ? "/Recursos/Comunidades/default.webp" : comunidad.ImagenUrl)" 
                         alt="@comunidad.Nombre" 
                         class="comunidad-img" />
                    <aside class="comunidad-overlay">
                        <span class="comunidad-ver">Ver</span>
                    </aside>
                    <h3 class="comunidad-title">@comunidad.Nombre</h3>
                </article>
            }
        </section>
    }
    else
    {
        <aside class="no-comunidades-message">
            <figure class="no-comunidades-icon">
                <i class="bi bi-people"></i>
            </figure>
            <h3 class="no-comunidades-title">No perteneces a ninguna comunidad</h3>
            <p class="no-comunidades-text">Explora y únete a comunidades para conectar con otros jugadores</p>
            <a href="@Url.Action("Index", "Home")" class="btn-explore-comunidades">
                <i class="bi bi-search"></i> Explorar Comunidades
            </a>
        </aside>
    }
</main>

