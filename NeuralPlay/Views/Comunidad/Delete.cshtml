@model NeuralPlay.Models.ComunidadViewModel

@{
    ViewData["Title"] = "Borrar Comunidad";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    ¿Seguro que quieres borrar esta comunidad?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Fecha de creación</dt>
        <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Es pública</dt>
        <dd class="col-sm-9">@(Model.EsPublica ? "Sí" : "No")</dd>

        <dt class="col-sm-3">Propietario</dt>
        <dd class="col-sm-9">@Model.Propietario</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdComunidad" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
