@model NeuralPlay.Models.MiembroComunidadViewModel

@{
    ViewData["Title"] = "Editar Miembro";
}

<style>
/* Reset para etiquetas sem√°nticas */
figure, hgroup, footer, hr, fieldset {
    margin: 0;
    padding: 0;
}

fieldset {
    border: none;
    min-width: 0;
}

hr {
    border: none;
}
</style>

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<main>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    <section class="row">
        <article class="col-md-8 col-lg-6">
            <form asp-action="Edit" method="post">
                <aside asp-validation-summary="ModelOnly" class="text-danger" role="alert"></aside>

                <input type="hidden" asp-for="IdMiembroComunidad" />
                <input type="hidden" asp-for="IdUsuario" />
                <input type="hidden" asp-for="IdComunidad" />

                <fieldset class="form-group mb-3">
                    <label class="form-label">Usuario</label>
                    <input class="form-control" value="@Model.NombreUsuario" readonly />
                </fieldset>

                <fieldset class="form-group mb-3">
                    <label class="form-label">Comunidad</label>
                    <input class="form-control" value="@Model.NombreComunidad" readonly />
                </fieldset>

                <fieldset class="form-group mb-3">
                    <label asp-for="Rol" class="form-label">Rol</label>
                    <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select">
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </fieldset>

                <fieldset class="form-group mb-3">
                    <label asp-for="Estado" class="form-label">Estado</label>
                    <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select">
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </fieldset>

                <fieldset class="form-group mb-4">
                    <label class="form-label">Fecha de Alta</label>
                    <input class="form-control" value="@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")" readonly />
                </fieldset>

                <nav class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </nav>
            </form>
        </article>
    </section>
</main>
