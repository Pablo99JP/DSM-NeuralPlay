@model NeuralPlay.Models.MiembroComunidadViewModel

@{
    ViewData["Title"] = "Agregar Miembro a Comunidad";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="IdUsuario" class="form-label">Usuario</label>
                <select asp-for="IdUsuario" asp-items="ViewBag.Usuarios" class="form-select">
                    <option value="">-- Seleccione un usuario --</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdComunidad" class="form-label">Comunidad</label>
                <select asp-for="IdComunidad" asp-items="ViewBag.Comunidades" class="form-select">
                    <option value="">-- Seleccione una comunidad --</option>
                </select>
                <span asp-validation-for="IdComunidad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rol" class="form-label">Rol</label>
                <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select">
                    <option value="">-- Seleccione un rol --</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">AÃ±adir Miembro</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
