@model NeuralPlay.Models.MiembroComunidadViewModel

@{
    ViewData["Title"] = "Eliminar Miembro";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-warning">
    ¿Estás seguro de eliminar este miembro de la comunidad?
</div>

<dl class="row">
    <dt class="col-sm-3">Usuario</dt>
    <dd class="col-sm-9">@Model.NombreUsuario</dd>

    <dt class="col-sm-3">Comunidad</dt>
    <dd class="col-sm-9">@Model.NombreComunidad</dd>

    <dt class="col-sm-3">Rol</dt>
    <dd class="col-sm-9">@Model.Rol</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@Model.Estado</dd>

    <dt class="col-sm-3">Fecha de Alta</dt>
    <dd class="col-sm-9">@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdMiembroComunidad" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
