@model IEnumerable<NeuralPlay.Models.MiembroComunidadViewModel>

@{
    ViewData["Title"] = "Miembros de Comunidad";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<main>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    @if (TempData["Error"] != null)
    {
        <aside class="alert alert-danger" role="alert">@TempData["Error"]</aside>
    }

    <nav>
        <a asp-action="Create" class="btn btn-primary">Agregar Miembro</a>
    </nav>
</main>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreComunidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAlta)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model ?? Enumerable.Empty<NeuralPlay.Models.MiembroComunidadViewModel>()) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreComunidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @item.FechaAlta.ToString("dd/MM/yyyy")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMiembroComunidad" class="btn btn-sm btn-outline-secondary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdMiembroComunidad" class="btn btn-sm btn-outline-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMiembroComunidad" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
