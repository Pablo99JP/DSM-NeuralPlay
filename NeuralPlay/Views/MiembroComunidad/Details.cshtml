@model NeuralPlay.Models.MiembroComunidadViewModel

@{
    ViewData["Title"] = "Detalles del Miembro";
}

<style>
/* Reset para etiquetas semánticas */
figure, hgroup, footer, hr, fieldset {
    margin: 0;
    padding: 0;
}

fieldset {
    border: none;
    min-width: 0;
}

hr {
    border: none;
}
</style>

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<main>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    <section>
        <dl class="row">
    <dt class="col-sm-3">Usuario</dt>
    <dd class="col-sm-9">@Model.NombreUsuario</dd>

    <dt class="col-sm-3">Comunidad</dt>
    <dd class="col-sm-9">@Model.NombreComunidad</dd>

    <dt class="col-sm-3">Rol</dt>
    <dd class="col-sm-9">@Model.Rol</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@Model.Estado</dd>

    <dt class="col-sm-3">Fecha de Alta</dt>
    <dd class="col-sm-9">@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</dd>

    @if (Model.FechaAccion.HasValue)
    {
        <dt class="col-sm-3">Fecha de Acción</dt>
        <dd class="col-sm-9">@Model.FechaAccion.Value.ToString("dd/MM/yyyy HH:mm")</dd>
    }

    @if (Model.FechaBaja.HasValue)
    {
        <dt class="col-sm-3">Fecha de Baja</dt>
        <dd class="col-sm-9">@Model.FechaBaja.Value.ToString("dd/MM/yyyy HH:mm")</dd>
    }
        </dl>
    </section>

    <nav class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.IdMiembroComunidad" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </nav>
</main>
