@model IEnumerable<ApplicationCore.Domain.EN.Torneo>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <h2 class="m-0">Torneos disponibles</h2>
    <a class="btn btn-outline-secondary" asp-controller="PropuestaTorneo" asp-action="Index">Ver propuestas</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha Inicio</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Nombre</td>
            <td>@(t.FechaInicio == default ? "-" : t.FechaInicio.ToString("yyyy-MM-dd"))</td>
            <td>@t.Estado</td>
            <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@t.IdTorneo">Ver</a></td>
        </tr>
    }
    </tbody>
</table>
