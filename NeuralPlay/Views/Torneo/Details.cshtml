@model NeuralPlay.Models.TorneoDetailsViewModel
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.Torneo.Nombre;
    var currentUser = UsuarioAuth.GetUsuarioActual();
    var esCreador = currentUser != null && Model.Torneo.Creador != null && Model.Torneo.Creador.IdUsuario == currentUser.IdUsuario;
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Contenedor principal - solo fondo */
    .main-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        z-index: 1;
    }

    /* Contenedor del contenido - aislado del fondo */
    .content-wrapper {
        position: absolute;
        top: 0;
        left: 11%;
        width: 83%; /* 100% - 11% (izq) - 6% (der) */
        min-height: 100vh;
        overflow-y: auto;
        overflow-x: hidden;
        z-index: 2;
    }

    /* TÃ­tulo principal del torneo */
    .torneo-header {
        text-align: left;
        margin-bottom: 30px;
        padding-top: 30px;
        padding-left: 32px;
        padding-right: 20px;
    }

    .torneo-header h1 {
        font-family: 'Neue', sans-serif;
        font-size: 4rem;
        color: white;
        margin: 0 0 10px 0;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .torneo-header h1 .highlight {
        color: var(--np-red);
    }

    .torneo-header .torneo-subtitle {
        font-family: 'Lexend', sans-serif;
        font-size: 1.3rem;
        color: #aaa;
        margin: 5px 0 0 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .torneo-divider {
        height: 2px;
        background: linear-gradient(90deg, var(--np-red) 0%, transparent 100%);
        margin: 20px 32px 40px 32px;
    }

    /* Contenedor interior para centralizar contenido */
    .content-inner {
        margin: 0 auto;
        padding: 0;
        max-width: 1200px;
        width: 100%;
    }

    /* Contenedor de tarjetas de informaciÃ³n */
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
        padding: 0 32px;
    }

    .info-card {
        background: var(--np-dark-grey);
        border-left: 4px solid var(--np-red);
        border-radius: 8px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .info-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(229, 10, 70, 0.2);
    }

    .info-card-title {
        font-family: 'Neue', sans-serif;
        font-size: 1.1rem;
        color: var(--np-red);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 12px;
        font-weight: bold;
    }

    .info-card-value {
        font-family: 'Lexend', sans-serif;
        font-size: 1.6rem;
        color: white;
        font-weight: 600;
    }

    .badge-custom {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 6px;
        font-family: 'Neue', sans-serif;
        font-size: 0.9rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-pending {
        background: #ff9800;
        color: white;
    }

    .badge-open {
        background: #4caf50;
        color: white;
    }

    .badge-finished {
        background: #9e9e9e;
        color: white;
    }

    /* SecciÃ³n de pestaÃ±as */
    .tabs-section {
        margin-bottom: 40px;
        padding: 0 32px;
    }

    .tabs-nav {
        display: flex;
        gap: 10px;
        border-bottom: 2px solid rgba(229, 10, 70, 0.2);
        margin-bottom: 0;
        overflow-x: auto;
    }

    .tabs-nav button {
        background: transparent;
        border: none;
        color: #aaa;
        font-family: 'Neue', sans-serif;
        font-size: 1.1rem;
        padding: 16px 24px;
        cursor: pointer;
        border-bottom: 3px solid transparent;
        transition: all 0.3s ease;
        white-space: nowrap;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

    .tabs-nav button:hover {
        color: white;
    }

    .tabs-nav button.active {
        color: var(--np-red);
        border-bottom-color: var(--np-red);
    }

    .tabs-content {
        background: var(--np-dark-grey);
        border-radius: 8px;
        padding: 30px;
        min-height: 300px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .tab-pane-title {
        font-family: 'Neue', sans-serif;
        font-size: 2rem;
        color: var(--np-red);
        margin-bottom: 25px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

    .tab-pane-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        color: #ddd;
        line-height: 1.6;
    }

    .tab-pane-text-empty {
        color: #888;
        font-style: italic;
    }

    /* Tabla de participantes */
    .participants-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Lexend', sans-serif;
    }

    .participants-table thead {
        background: rgba(229, 10, 70, 0.1);
        border-bottom: 2px solid var(--np-red);
    }

    .participants-table th {
        color: var(--np-red);
        padding: 16px 12px;
        text-align: left;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.95rem;
    }

    .participants-table td {
        color: #ddd;
        padding: 14px 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .participants-table tbody tr:hover {
        background: rgba(229, 10, 70, 0.05);
    }

    .medal-badge {
        font-size: 1.4rem;
        margin-right: 8px;
    }

    /* Lista de clasificaciÃ³n */
    .classification-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .classification-item {
        display: flex;
        align-items: center;
        gap: 20px;
        background: rgba(69, 69, 69, 0.3);
        padding: 16px 20px;
        border-radius: 8px;
        border: 1px solid rgba(229, 10, 70, 0.2);
        transition: all 0.3s ease;
    }

    .classification-item:hover {
        background: rgba(69, 69, 69, 0.5);
        border-color: var(--np-red);
    }

    .classification-image {
        width: 70px;
        height: 70px;
        border-radius: 8px;
        overflow: hidden;
        flex-shrink: 0;
        background: var(--np-grey);
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid rgba(229, 10, 70, 0.3);
    }

    .classification-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .classification-image-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, var(--np-red), #ff4b7d);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
    }

    .classification-info {
        flex: 1;
    }

    .classification-team-name {
        font-family: 'Neue', sans-serif;
        font-size: 1.3rem;
        color: white;
        margin: 0;
        font-weight: bold;
    }

    .classification-ranking {
        font-family: 'Neue', sans-serif;
        font-size: 2rem;
        color: var(--np-red);
        font-weight: bold;
        min-width: 70px;
        text-align: right;
        flex-shrink: 0;
    }

    .classification-ranking-label {
        font-family: 'Lexend', sans-serif;
        font-size: 0.85rem;
        color: #aaa;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Lista de equipos */
    .team-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .team-item {
        background: rgba(69, 69, 69, 0.4);
        border: 1px solid rgba(229, 10, 70, 0.3);
        border-radius: 6px;
        padding: 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.3s ease;
    }

    .team-item:hover {
        background: rgba(69, 69, 69, 0.6);
        border-color: var(--np-red);
    }

    .team-info h6 {
        font-family: 'Neue', sans-serif;
        color: white;
        margin: 0 0 6px 0;
        font-size: 1.1rem;
        font-weight: bold;
    }

    .team-info small {
        font-family: 'Lexend', sans-serif;
        color: #aaa;
        display: block;
        font-size: 0.95rem;
    }

    .team-action {
        display: flex;
        gap: 10px;
    }

    /* Botones */
    .btn-custom {
        background: linear-gradient(90deg, var(--np-red) 60%, #ff4b7d 100%);
        color: white;
        border: none;
        padding: 12px 24px;
        font-family: 'Neue', sans-serif;
        font-size: 1rem;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(229, 10, 70, 0.15);
        transition: all 0.3s ease;
        font-weight: bold;
        letter-spacing: 0.5px;
        cursor: pointer;
        text-transform: uppercase;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(229, 10, 70, 0.3);
        text-decoration: none;
        color: white;
    }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--np-red);
        color: var(--np-red);
    }

    .btn-outline:hover {
        background: var(--np-red);
        color: white;
    }

    /* SecciÃ³n de acciones */
    .actions-section {
        margin-bottom: 60px;
        padding: 0 32px;
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    /* Alertas personalizadas */
    .alert-custom {
        background: rgba(76, 175, 80, 0.1);
        border-left: 4px solid #4caf50;
        border-radius: 6px;
        padding: 18px 20px;
        margin-bottom: 20px;
        font-family: 'Lexend', sans-serif;
        color: #c8e6c9;
    }

    .alert-custom-warning {
        background: rgba(255, 152, 0, 0.1);
        border-left-color: #ff9800;
        color: #ffe0b2;
    }

    .alert-custom-info {
        background: rgba(33, 150, 243, 0.1);
        border-left-color: #2196f3;
        color: #bbdefb;
    }

    .alert-custom i {
        margin-right: 10px;
        font-size: 1.2rem;
    }

    .alert-custom a {
        color: var(--np-red);
        text-decoration: none;
        font-weight: bold;
    }

    .alert-custom a:hover {
        text-decoration: underline;
    }
</style>

<!-- Contenedor principal -->
<div class="main-container">
    <!-- Contenedor de contenido -->
    <div class="content-wrapper">
        <div class="content-inner">
            <!-- Encabezado del torneo -->
            <div class="torneo-header">
                <h1>
                    <span>Torneo:</span> <span class="highlight">@Model.Torneo.Nombre</span>
                </h1>
                <p class="torneo-subtitle">
                    @if (Model.Torneo.ComunidadOrganizadora != null)
                    {
                        <span>Organizado por: @Model.Torneo.ComunidadOrganizadora.Nombre</span>
                    }
                    else
                    {
                        <span>Sin comunidad organizadora</span>
                    }
                </p>
            </div>

            <div class="torneo-divider"></div>

            <!-- Tarjetas de informaciÃ³n -->
            <div class="info-grid">
                <div class="info-card">
                    <div class="info-card-title"><i class="bi bi-calendar-event"></i> Fecha de Inicio</div>
                    <div class="info-card-value">
                        @(Model.Torneo.FechaInicio == default ? "-" : Model.Torneo.FechaInicio.ToString("dd/MM/yyyy"))
                    </div>
                </div>

                <div class="info-card">
                    <div class="info-card-title"><i class="bi bi-info-circle"></i> Estado</div>
                    <div class="info-card-value">
                        @if (Model.Torneo.Estado == "PENDIENTE")
                        {
                            <span class="badge-custom badge-pending">@Model.Torneo.Estado</span>
                        }
                        else if (Model.Torneo.Estado == "ABIERTO")
                        {
                            <span class="badge-custom badge-open">@Model.Torneo.Estado</span>
                        }
                        else if (Model.Torneo.Estado == "FINALIZADO")
                        {
                            <span class="badge-custom badge-finished">@Model.Torneo.Estado</span>
                        }
                        else
                        {
                            <span class="badge-custom" style="background: #2196f3; color: white;">@Model.Torneo.Estado</span>
                        }
                    </div>
                </div>

                <div class="info-card">
                    <div class="info-card-title"><i class="bi bi-people-fill"></i> Equipos</div>
                    <div class="info-card-value">@(Model.Participaciones.Count())</div>
                </div>
            </div>

            <!-- Mensajes de Ã©xito/error -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div style="margin-bottom: 20px;">
                    <div class="alert-custom">
                        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div style="margin-bottom: 20px;">
                    <div class="alert-custom alert-custom-warning">
                        <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                    </div>
                </div>
            }

            <!-- SecciÃ³n de pestaÃ±as -->
            <div class="tabs-section">
                <!-- NavegaciÃ³n de pestaÃ±as -->
                <div class="tabs-nav" role="tablist">
                    <button class="active" data-tab="descripcion" role="tab">
                        <i class="bi bi-file-text"></i> DescripciÃ³n
                    </button>
                    <button data-tab="clasificacion" role="tab">
                        <i class="bi bi-trophy"></i> ClasificaciÃ³n
                    </button>
                    <button data-tab="premios" role="tab">
                        <i class="bi bi-gift"></i> Premios
                    </button>
                    <button data-tab="unirse" role="tab">
                        <i class="bi bi-plus-circle"></i> Unirse
                    </button>
                </div>

                <!-- Contenido de pestaÃ±as -->
                <div class="tabs-content">
                    <!-- PestaÃ±a DescripciÃ³n -->
                    <div id="tab-descripcion" class="tab-pane active">
                        <h2 class="tab-pane-title">Reglas del Torneo</h2>
                        @if (!string.IsNullOrWhiteSpace(Model.Torneo.Reglas))
                        {
                            <p class="tab-pane-text">@Model.Torneo.Reglas</p>
                        }
                        else
                        {
                            <p class="tab-pane-text tab-pane-text-empty">No se han especificado reglas para este torneo.</p>
                        }
                    </div>

                    <!-- PestaÃ±a ClasificaciÃ³n -->
                    <div id="tab-clasificacion" class="tab-pane" style="display: none;">
                        <h2 class="tab-pane-title">ClasificaciÃ³n para este torneo:</h2>
                        @if (Model.Participaciones.Any())
                        {
                            <div class="classification-list">
                                @{
                                    var posicion = 1;
                                }
                                @foreach (var p in Model.Participaciones.OrderBy(x => x.IdParticipacion))
                                {
                                    <div class="classification-item">
                                        <div class="classification-image">
                                            @if (!string.IsNullOrWhiteSpace(p.Equipo?.ImagenUrl))
                                            {
                                                <img src="@p.Equipo.ImagenUrl" alt="@p.Equipo?.Nombre" />
                                            }
                                            else
                                            {
                                                <div class="classification-image-placeholder">
                                                    <i class="bi bi-shield-fill"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="classification-info">
                                            <h3 class="classification-team-name">@(p.Equipo?.Nombre ?? "-")</h3>
                                        </div>
                                        <div class="classification-ranking">
                                            <div style="font-size: 0.8rem; color: #aaa; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 4px;">PosiciÃ³n</div>
                                            @posicion
                                        </div>
                                    </div>
                                    posicion++;
                                }
                            </div>
                        }
                        else
                        {
                            <p class="tab-pane-text tab-pane-text-empty">No hay equipos participantes aÃºn.</p>
                        }
                    </div>

                    <!-- PestaÃ±a Premios -->
                    <div id="tab-premios" class="tab-pane" style="display: none;">
                        <h2 class="tab-pane-title">Premios del Torneo</h2>
                        @if (!string.IsNullOrWhiteSpace(Model.Torneo.Premios))
                        {
                            <p class="tab-pane-text">@Model.Torneo.Premios</p>
                        }
                        else
                        {
                            <p class="tab-pane-text tab-pane-text-empty">No se han especificado premios para este torneo.</p>
                        }
                    </div>

                    <!-- PestaÃ±a Unirse -->
                    <div id="tab-unirse" class="tab-pane" style="display: none;">
                        <h2 class="tab-pane-title">Proponer ParticipaciÃ³n</h2>
                        @if (currentUser == null)
                        {
                            <div class="alert-custom alert-custom-info">
                                <i class="bi bi-info-circle"></i> Debes <a asp-controller="Usuario" asp-action="Login">iniciar sesiÃ³n</a> para proponer la participaciÃ³n de tus equipos.
                            </div>
                        }
                        else if (!Model.EquiposUsuario.Any())
                        {
                            <div class="alert-custom alert-custom-warning">
                                <i class="bi bi-exclamation-triangle"></i> No perteneces a ningÃºn equipo. Ãšnete o crea un equipo para participar.
                            </div>
                        }
                        else
                        {
                            <p class="tab-pane-text" style="margin-bottom: 25px;">Selecciona uno de tus equipos para proponer su participaciÃ³n en este torneo:</p>
                            <div class="team-list">
                                @foreach (var equipo in Model.EquiposUsuario)
                                {
                                    var yaPropuesto = Model.Propuestas.Any(pr => pr.EquipoProponente?.IdEquipo == equipo.IdEquipo);
                                    var yaParticipando = Model.Participaciones.Any(pa => pa.Equipo?.IdEquipo == equipo.IdEquipo);
                                    
                                    <div class="team-item">
                                        <div class="team-info">
                                            <h6>@equipo.Nombre</h6>
                                            <small>@(equipo.Descripcion ?? "Sin descripciÃ³n")</small>
                                        </div>
                                        <div class="team-action">
                                            @if (yaParticipando)
                                            {
                                                <span class="badge-custom badge-open">Ya participa</span>
                                            }
                                            else if (yaPropuesto)
                                            {
                                                <span class="badge-custom" style="background: #2196f3; color: white;">Propuesta enviada</span>
                                            }
                                            else
                                            {
                                                <form method="post" asp-controller="Torneo" asp-action="ProponerParticipacion" asp-route-id="@Model.Torneo.IdTorneo" class="d-inline">
                                                    <input type="hidden" name="SelectedEquipoId" value="@equipo.IdEquipo" />
                                                    <button type="submit" class="btn-custom">Proponer</button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- SecciÃ³n de acciones -->
            <div class="actions-section">
                <a class="btn-custom btn-outline" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                @if (esCreador)
                {
                    <a class="btn-custom" asp-action="Edit" asp-route-id="@Model.Torneo.IdTorneo">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn-custom" style="background: linear-gradient(90deg, #ff5252 60%, #ff7272 100%);" asp-action="Delete" asp-route-id="@Model.Torneo.IdTorneo">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Sistema de pestaÃ±as interactivo
    document.querySelectorAll('.tabs-nav button').forEach(button => {
        button.addEventListener('click', function() {
            const tabId = this.dataset.tab;
            
            // Remover clase activa de todos los botones y pestaÃ±as
            document.querySelectorAll('.tabs-nav button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-pane').forEach(pane => pane.style.display = 'none');
            
            // Agregar clase activa al botÃ³n y mostrar pestaÃ±a
            this.classList.add('active');
            document.getElementById(`tab-${tabId}`).style.display = 'block';
        });
    });
</script>

