@model NeuralPlay.Models.TorneoDetailsViewModel
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth

@{
    var currentUser = UsuarioAuth.GetUsuarioActual();
    var esCreador = currentUser != null && Model.Torneo.Creador != null && Model.Torneo.Creador.IdUsuario == currentUser.IdUsuario;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Torneo.Nombre</h2>
            <p class="mb-0"><small>Organizado por: @(Model.Torneo.ComunidadOrganizadora?.Nombre ?? "Sin comunidad")</small></p>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <div class="mb-3">
                <p><strong>Fecha de inicio:</strong> @(Model.Torneo.FechaInicio == default ? "-" : Model.Torneo.FechaInicio.ToString("yyyy-MM-dd"))</p>
                <p><strong>Estado:</strong> 
                    @if (Model.Torneo.Estado == "PENDIENTE")
                    {
                        <span class="badge bg-warning text-dark">@Model.Torneo.Estado</span>
                    }
                    else if (Model.Torneo.Estado == "ABIERTO")
                    {
                        <span class="badge bg-success">@Model.Torneo.Estado</span>
                    }
                    else if (Model.Torneo.Estado == "FINALIZADO")
                    {
                        <span class="badge bg-secondary">@Model.Torneo.Estado</span>
                    }
                    else
                    {
                        <span class="badge bg-info">@Model.Torneo.Estado</span>
                    }
                </p>
            </div>

            <!-- Pesta帽as de navegaci贸n -->
            <ul class="nav nav-tabs" id="torneoTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="descripcion-tab" data-bs-toggle="tab" data-bs-target="#descripcion" type="button" role="tab">
                        <i class="bi bi-file-text"></i> Descripci贸n
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="clasificacion-tab" data-bs-toggle="tab" data-bs-target="#clasificacion" type="button" role="tab">
                        <i class="bi bi-trophy"></i> Clasificaci贸n
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="premios-tab" data-bs-toggle="tab" data-bs-target="#premios" type="button" role="tab">
                        <i class="bi bi-gift"></i> Premios
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="unirse-tab" data-bs-toggle="tab" data-bs-target="#unirse" type="button" role="tab">
                        <i class="bi bi-plus-circle"></i> Unirse
                    </button>
                </li>
            </ul>

            <!-- Contenido de las pesta帽as -->
            <div class="tab-content mt-3" id="torneoTabsContent">
                <!-- Pesta帽a Descripci贸n -->
                <div class="tab-pane fade show active" id="descripcion" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Reglas del Torneo</h5>
                            @if (!string.IsNullOrWhiteSpace(Model.Torneo.Reglas))
                            {
                                <p class="card-text">@Model.Torneo.Reglas</p>
                            }
                            else
                            {
                                <p class="text-muted">No se han especificado reglas para este torneo.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pesta帽a Clasificaci贸n -->
                <div class="tab-pane fade" id="clasificacion" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Equipos Participantes</h5>
                            @if (Model.Participaciones.Any())
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Posici贸n</th>
                                            <th>Equipo</th>
                                            <th>Puntos</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var posicion = 1;
                                        }
                                        @foreach (var p in Model.Participaciones.OrderByDescending(x => Model.Clasificacion.ContainsKey(x.Equipo?.IdEquipo ?? 0) ? Model.Clasificacion[x.Equipo.IdEquipo] : 0))
                                        {
                                            <tr>
                                                <td>
                                                    @if (posicion == 1)
                                                    {
                                                        <span class="badge bg-warning text-dark"> @posicion</span>
                                                    }
                                                    else if (posicion == 2)
                                                    {
                                                        <span class="badge bg-secondary"> @posicion</span>
                                                    }
                                                    else if (posicion == 3)
                                                    {
                                                        <span class="badge bg-danger"> @posicion</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-light text-dark">@posicion</span>
                                                    }
                                                </td>
                                                <td>@(p.Equipo?.Nombre ?? "-")</td>
                                                <td>@(Model.Clasificacion.ContainsKey(p.Equipo?.IdEquipo ?? 0) ? Model.Clasificacion[p.Equipo!.IdEquipo] : 0) pts</td>
                                                <td>
                                                    @if (p.Estado == "ACEPTADA")
                                                    {
                                                        <span class="badge bg-success">Confirmado</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning text-dark">@p.Estado</span>
                                                    }
                                                </td>
                                            </tr>
                                            posicion++;
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted">No hay equipos participantes a煤n.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pesta帽a Premios -->
                <div class="tab-pane fade" id="premios" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Premios del Torneo</h5>
                            @if (!string.IsNullOrWhiteSpace(Model.Torneo.Premios))
                            {
                                <p class="card-text">@Model.Torneo.Premios</p>
                            }
                            else
                            {
                                <p class="text-muted">No se han especificado premios para este torneo.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Pesta帽a Unirse -->
                <div class="tab-pane fade" id="unirse" role="tabpanel">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Proponer Participaci贸n</h5>
                            @if (currentUser == null)
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Debes <a asp-controller="Usuario" asp-action="Login">iniciar sesi贸n</a> para proponer la participaci贸n de tus equipos.
                                </div>
                            }
                            else if (!Model.EquiposUsuario.Any())
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> No perteneces a ning煤n equipo. nete o crea un equipo para participar.
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-3">Selecciona uno de tus equipos para proponer su participaci贸n en este torneo:</p>
                                <div class="list-group">
                                    @foreach (var equipo in Model.EquiposUsuario)
                                    {
                                        var yaPropuesto = Model.Propuestas.Any(pr => pr.EquipoProponente?.IdEquipo == equipo.IdEquipo);
                                        var yaParticipando = Model.Participaciones.Any(pa => pa.Equipo?.IdEquipo == equipo.IdEquipo);
                                        
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0">@equipo.Nombre</h6>
                                                <small class="text-muted">@(equipo.Descripcion ?? "Sin descripci贸n")</small>
                                            </div>
                                            @if (yaParticipando)
                                            {
                                                <span class="badge bg-success">Ya participa</span>
                                            }
                                            else if (yaPropuesto)
                                            {
                                                <span class="badge bg-info">Propuesta enviada</span>
                                            }
                                            else
                                            {
                                                <form method="post" asp-controller="Torneo" asp-action="ProponerParticipacion" asp-route-id="@Model.Torneo.IdTorneo" class="d-inline">
                                                    <input type="hidden" name="SelectedEquipoId" value="@equipo.IdEquipo" />
                                                    <button type="submit" class="btn btn-sm btn-primary">Proponer</button>
                                                </form>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acci贸n -->
            <div class="mt-4">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                @if (esCreador)
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Torneo.IdTorneo">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Torneo.IdTorneo">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                }
            </div>
        </div>
    </div>
</div>
