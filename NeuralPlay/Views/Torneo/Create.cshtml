@model NeuralPlay.Models.TorneoCreateViewModel

@{
    ViewData["Title"] = "Crear Torneo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre del Torneo</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Copa de Verano 2025" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
                            <input asp-for="FechaInicio" type="date" class="form-control" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Reglas" class="form-label">Reglas del Torneo (Opcional)</label>
                            <textarea asp-for="Reglas" class="form-control" rows="5" placeholder="Describe las reglas del torneo..."></textarea>
                            <span asp-validation-for="Reglas" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Crear Torneo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
