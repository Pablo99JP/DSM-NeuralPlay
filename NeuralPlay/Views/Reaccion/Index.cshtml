@model IEnumerable<NeuralPlay.Models.ReaccionViewModel>

@{
    ViewData["Title"] = "Reacciones";
}

<h1>Reacciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear reacción</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Fecha creación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Tipo</td>
            <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
