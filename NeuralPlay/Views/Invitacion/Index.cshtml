@model IEnumerable<NeuralPlay.Models.InvitacionViewModel>

@{
    ViewData["Title"] = "Invitaciones";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
    padding-left: 14%;
    padding-right: 14%;

    min-height: 100vh;
    padding-top: 60px;
    padding-bottom: 60px;
    padding-left: 14%;   /* espacio lado izq */
    padding-right: 14%;  /* espacio lado der */
    display: flex;
    flex-direction: column;
    gap: 20px;
    overflow-x: auto;
}



    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 4px 0 0 0;
        font-size: 1.05rem;
    }

    .cta-add {
        font-family: 'Lexend', sans-serif;
        padding: 12px 20px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .cta-add:hover { background: transparent; color: var(--np-red); }

    .card-panel {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        width: 100%;
    }

    .validation-panel {
        color: var(--np-red);
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        margin-bottom: 12px;
        padding: 12px;
        background: rgba(229, 10, 70, 0.08);
        border-radius: 8px;
        border-left: 4px solid var(--np-red);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state-icon {
        font-size: 3.5rem;
        color: rgba(255, 255, 255, 0.15);
        margin-bottom: 20px;
    }

    .empty-state-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 20px;
    }

    table.invitations-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        table-layout: auto;
    }

    table.invitations-table thead th {
        font-family: 'Neue', sans-serif;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: rgba(255, 255, 255, 0.05);
        padding: 16px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        text-align: left;
        white-space: nowrap;
        font-size: 0.95rem;
    }

    table.invitations-table tbody td {
        font-family: 'Lexend', sans-serif;
        color: white;
        padding: 16px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    table.invitations-table tbody tr:hover { background: rgba(255, 255, 255, 0.03); }

    .badge-pill {
        padding: 8px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .badge-tipo-equipo {
        background: rgba(33, 150, 243, 0.1);
        border-color: #2196F3;
        color: #e3f2fd;
    }

    .badge-tipo-comunidad {
        background: rgba(0, 184, 148, 0.1);
        border-color: #00b894;
        color: #d1fff2;
    }

    .badge-estado-pendiente {
        background: rgba(255, 152, 0, 0.1);
        border-color: #ff9800;
        color: #fff3cd;
    }

    .badge-estado-aceptada {
        background: rgba(76, 175, 80, 0.1);
        border-color: #4caf50;
        color: #d4edda;
    }

    .badge-estado-rechazada {
        background: rgba(244, 67, 54, 0.1);
        border-color: #f44336;
        color: #ffe3e0;
    }

    .role-indicator {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        background: rgba(255, 255, 255, 0.08);
        font-size: 0.85rem;
    }

    .role-emisor { color: var(--np-red); }
    .role-receptor { color: #4fc3f7; }

    .actions-inline {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .action-btn {
        font-family: 'Lexend', sans-serif;
        padding: 8px 12px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
        background: rgba(255, 255, 255, 0.04);
        cursor: pointer;
    }

    .action-btn:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .action-view { border-color: #00b894; color: #d1fff2; }
    .action-view:hover { background: #00b894; color: #0d1b2a; }

    .action-delete { border-color: #f44336; color: #ffe3e0; }
    .action-delete:hover { background: #f44336; color: #0d1b2a; }

    .action-accept { border-color: #4caf50; color: #d4edda; }
    .action-accept:hover { background: #4caf50; color: #0d1b2a; }

    .action-reject { border-color: #ff9800; color: #fff3cd; }
    .action-reject:hover { background: #ff9800; color: #0d1b2a; }

    .role-sender {
        color: var(--np-red);
        font-weight: 600;
    }

    .role-receiver {
        color: #4fc3f7;
        font-weight: 600;
    }
</style>

<div class="content-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Invitaciones</h1>
            <p class="page-subtitle">Gestiona tus invitaciones enviadas y recibidas</p>
        </div>
        <a asp-action="Create" class="cta-add"><i class="bi bi-send-plus"></i> Nueva invitación</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="validation-panel" style="background: rgba(76, 175, 80, 0.1); color: #d4edda; border-left-color: #4caf50;">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="validation-panel">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <section class="card-panel">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <p class="empty-state-text">No tienes invitaciones por el momento.</p>
                <p class="empty-state-text" style="font-size: 0.95rem; color: rgba(255, 255, 255, 0.4);">
                    Crea una nueva invitación para compartir tu equipo o comunidad con otros usuarios.
                </p>
                <a asp-action="Create" class="cta-add"><i class="bi bi-send-plus"></i> Enviar invitación</a>
            </div>
        }
        else
        {
            <table class="invitations-table">
                <thead>
                    <tr>
                        <th style="width: 12%;">Tipo</th>
                        <th style="width: 15%;">Emisor</th>
                        <th style="width: 15%;">Receptor</th>
                        <th style="width: 18%;">Destino</th>
                        <th style="width: 12%;">Estado</th>
                        <th style="width: 13%;">Fecha</th>
                        <th style="width: 15%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Tipo == ApplicationCore.Domain.Enums.TipoInvitacion.EQUIPO)
                                {
                                    <span class="badge-pill badge-tipo-equipo">
                                        <i class="bi bi-people"></i> Equipo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-pill badge-tipo-comunidad">
                                        <i class="bi bi-chat-dots"></i> Comunidad
                                    </span>
                                }
                            </td>
                            <td>
                                <span class="role-sender">@item.EmisorNick</span>
                            </td>
                            <td>
                                <span class="role-receiver">@item.DestinatarioNick</span>
                            </td>
                            <td>
                                @if (item.Tipo == ApplicationCore.Domain.Enums.TipoInvitacion.EQUIPO)
                                {
                                    <text>@item.EquipoNombre</text>
                                }
                                else
                                {
                                    <text>@item.ComunidadNombre</text>
                                }
                            </td>
                            <td>
                                @{
                                    var estado = item.Estado.ToString();
                                    if (estado == "PENDIENTE")
                                    {
                                        <span class="badge-pill badge-estado-pendiente"><i class="bi bi-hourglass-split"></i> Pendiente</span>
                                    }
                                    else if (estado == "ACEPTADA")
                                    {
                                        <span class="badge-pill badge-estado-aceptada"><i class="bi bi-check-circle"></i> Aceptada</span>
                                    }
                                    else if (estado == "RECHAZADA")
                                    {
                                        <span class="badge-pill badge-estado-rechazada"><i class="bi bi-x-circle"></i> Rechazada</span>
                                    }
                                }
                            </td>
                            <td>@item.FechaEnvio.ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="actions-inline">
                                    <a asp-action="Details" asp-route-id="@item.IdInvitacion" class="action-btn action-view">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    @if (item.Estado.ToString() != "ACEPTADA")
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.IdInvitacion" class="action-btn action-delete">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

