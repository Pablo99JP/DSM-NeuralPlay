@model NeuralPlay.Models.InvitacionViewModel

@using ApplicationCore.Domain.Enums

@{
    ViewData["Title"] = "Enviar Invitación";
}

<h1>Enviar Invitación</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoInvitacion>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="DestinatarioId"></label>
        <input asp-for="DestinatarioId" class="form-control" />
        <span asp-validation-for="DestinatarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ComunidadId"></label>
        <input asp-for="ComunidadId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EquipoId"></label>
        <input asp-for="EquipoId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
