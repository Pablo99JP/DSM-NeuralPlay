@model NeuralPlay.Models.InvitacionViewModel

@{
    ViewData["Title"] = "Detalle Invitación";
}

<h1>Detalle Invitación</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
        <dt class="col-sm-2">Fecha envío</dt>
        <dd class="col-sm-10">@Model.FechaEnvio.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
