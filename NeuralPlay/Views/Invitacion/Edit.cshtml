@model NeuralPlay.Models.InvitacionViewModel

@using ApplicationCore.Domain.Enums

@{
    ViewData["Title"] = "Editar Invitación";
}

<h1>Editar Invitación</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<EstadoSolicitud>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="FechaRespuesta"></label>
        <input asp-for="FechaRespuesta" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
