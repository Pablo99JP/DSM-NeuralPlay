@model IEnumerable<NeuralPlay.Models.NotificacionViewModel>

@{
    ViewData["Title"] = "Notificaciones";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        width: 78%;
        margin: 0 auto;
        min-height: 100vh;
        padding: 60px 0 60px 0;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.2rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1.05rem;
    }

    .cta-add {
        font-family: 'Lexend', sans-serif;
        padding: 12px 20px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .cta-add:hover { background: transparent; color: var(--np-red); }

    .card-panel {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        width: 100%;
    }

    table.notifications-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    table.notifications-table thead th {
        font-family: 'Neue', sans-serif;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: rgba(255, 255, 255, 0.05);
        padding: 16px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        text-align: left;
        white-space: nowrap;
        font-size: 0.95rem;
    }

    table.notifications-table tbody td {
        font-family: 'Lexend', sans-serif;
        color: white;
        padding: 16px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    table.notifications-table tbody tr:hover { background: rgba(255, 255, 255, 0.03); }

    .badge-pill {
        padding: 8px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .badge-leido {
        background: rgba(76, 175, 80, 0.1);
        border-color: #4caf50;
        color: #d4edda;
    }

    .badge-no-leido {
        background: rgba(255, 152, 0, 0.1);
        border-color: #ff9800;
        color: #fff3cd;
    }

    .actions-inline {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .action-btn {
        font-family: 'Lexend', sans-serif;
        padding: 8px 12px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
        background: rgba(255, 255, 255, 0.04);
        cursor: pointer;
    }

    .action-btn:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .action-view { border-color: #00b894; color: #d1fff2; }
    .action-view:hover { background: #00b894; color: #0d1b2a; }

    .action-edit { border-color: #2196F3; color: #e3f2fd; }
    .action-edit:hover { background: #2196F3; color: #0d1b2a; }

    .action-delete { border-color: #f44336; color: #ffe3e0; }
    .action-delete:hover { background: #f44336; color: #0d1b2a; }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state-icon {
        font-size: 3.5rem;
        color: rgba(255, 255, 255, 0.15);
        margin-bottom: 20px;
    }

    .empty-state-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 20px;
    }
</style>

<div class="content-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Notificaciones</h1>
            <p class="page-subtitle">Revisa y gestiona tus avisos</p>
        </div>
    </div>

    <section class="card-panel">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-bell"></i>
                </div>
                <p class="empty-state-text">No tienes notificaciones por ahora.</p>
                <p class="empty-state-text" style="font-size: 0.95rem; color: rgba(255, 255, 255, 0.4);">
                    Vuelve más tarde para ver las novedades sobre tus acciones.
                </p>
            </div>
        }
        else
        {
            <table class="notifications-table">
                <thead>
                    <tr>
                        <th style="width: 45%;">Texto</th>
                        <th style="width: 20%;">Fecha</th>
                        <th style="width: 15%;">Estado</th>
                        <th style="width: 20%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var n in Model)
                    {
                        <tr>
                            <td>@n.Texto</td>
                            <td>@n.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (n.Leido)
                                {
                                    <span class="badge-pill badge-leido"><i class="bi bi-check-circle"></i> LeÃ­do</span>
                                }
                                else
                                {
                                    <span class="badge-pill badge-no-leido"><i class="bi bi-envelope"></i> No leÃ­do</span>
                                }
                            </td>
                            <td>
                                <div class="actions-inline">
                                    <a asp-action="Details" asp-route-id="@n.Id" class="action-btn action-view">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@n.Id" class="action-btn action-delete">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</div>
