@model NeuralPlay.Models.NotificacionViewModel

@{
    ViewData["Title"] = "Eliminar notificacion";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        width: 78%;
        margin: 0 auto;
        min-height: 100vh;
        padding: 60px 0 60px 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        margin-left: 32px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 3.8rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1.05rem;
    }

    .card-panel {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        width: 90%;
        margin-left: 100px;
    }

    .highlight-box {
        padding: 16px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        margin-top: 8px;
    }

    .meta-label {
        font-family: 'Lexend', sans-serif;
        color: #9fb1c1;
        font-size: 0.95rem;
        margin-bottom: 4px;
    }

    .meta-value {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.05rem;
        word-break: break-word;
    }

    .warning-box {
        margin-top: 16px;
        padding: 14px 16px;
        border-radius: 10px;
        background: rgba(229, 10, 70, 0.08);
        border: 1px solid rgba(229, 10, 70, 0.4);
        color: #f7c6d5;
        font-family: 'Lexend', sans-serif;
    }

    .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 18px;
    }

    .btn-secondary-ghost,
    .btn-danger-solid {
        font-family: 'Lexend', sans-serif;
        padding: 12px 18px;
        border-radius: 12px;
        text-decoration: none;
        border: 1px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: white;
        cursor: pointer;
        transition: all 0.2s ease;
        background: rgba(255, 255, 255, 0.04);
    }

    .btn-secondary-ghost { border-color: rgba(255, 255, 255, 0.2); }
    .btn-secondary-ghost:hover { background: rgba(255, 255, 255, 0.12); }

    .btn-danger-solid { background: var(--np-red); border-color: var(--np-red); }
    .btn-danger-solid:hover { filter: brightness(1.05); transform: translateY(-1px); }

    /* Ajustes tablet */
    @@media (max-width: 1024px) {
        .content-container {
            width: 85%;
            padding: 40px 0 40px 0;
            gap: 10px;
        }

        .page-header {
            gap: 12px;
            padding: 0 12px;
            margin-left: 20px;
            margin-right: 20px;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 2.8rem;
            margin-bottom: 8px;
        }

        .page-subtitle {
            font-size: 0.95rem;
            margin: 4px 0 0 0;
        }

        .card-panel {
            padding: 20px 16px;
            border-radius: 10px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .highlight-box {
            padding: 14px;
        }

        .meta-label {
            font-size: 0.9rem;
        }

        .meta-value {
            font-size: 1rem;
        }

        .warning-box {
            font-size: 0.9rem;
            padding: 12px 14px;
            margin-top: 14px;
        }

        .btn-secondary-ghost,
        .btn-danger-solid {
            padding: 10px 16px;
            font-size: 0.9rem;
        }

        .actions {
            gap: 10px;
        }
    }

    /* Ajustes mobile */
    @@media (max-width: 580px) {
        .content-container {
            width: 100%;
            padding: 30px 10px 80px 10px;
            gap: 8px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            padding: 0;
            margin-left: 0;
            margin-right: 0;
        }

        .page-title {
            font-size: 1.8rem;
            margin-bottom: 6px;
            letter-spacing: 0px;
            margin-left: 15px;
        }

        .page-subtitle {
            font-size: 0.85rem;
            margin: 0;
            margin-left: 15px;
        }

        .card-panel {
            padding: 12px 8px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            margin-left: 0;
            margin-right: 0;
        }

        .highlight-box {
            padding: 12px;
        }

        .meta-label {
            font-size: 0.85rem;
            margin-bottom: 3px;
        }

        .meta-value {
            font-size: 0.95rem;
            word-break: break-word;
        }

        .warning-box {
            font-size: 0.85rem;
            padding: 10px 12px;
            margin-top: 12px;
        }

        .btn-secondary-ghost,
        .btn-danger-solid {
            padding: 10px 12px;
            font-size: 0.8rem;
            width: 100%;
            justify-content: center;
        }

        .actions {
            gap: 8px;
            flex-direction: column;
        }

        .sidebar-down {
            display: flex;
        }
    }
</style>

<main class="content-container">
    <header class="page-header">
        <div>
            <h1 class="page-title">Eliminar notificación</h1>
            <p class="page-subtitle">Confirma antes de borrar definitivamente</p>
        </div>
        <a asp-action="Index" class="btn-secondary-ghost"><i class="bi bi-arrow-left"></i> Volver</a>
    </header>

    <section class="card-panel">
        <div class="highlight-box">
            <div class="meta-label">Texto</div>
            <div class="meta-value">@Model.Texto</div>
        </div>

        <div class="warning-box">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Esta accion eliminara la notificacion de forma permanente. No podras recuperarla.
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <nav class="actions">
                <button type="submit" class="btn-danger-solid"><i class="bi bi-trash"></i> Eliminar definitivamente</button>
                <a asp-action="Index" class="btn-secondary-ghost"><i class="bi bi-x-circle"></i> Cancelar</a>
            </nav>
        </form>
    </section>
</main>
