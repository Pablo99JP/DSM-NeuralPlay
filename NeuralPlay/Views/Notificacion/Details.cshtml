@using ApplicationCore.Domain.Enums;

@model NeuralPlay.Models.NotificacionViewModel

@{
    ViewData["Title"] = "Detalle notificacion";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        width: 78%;
        margin: 0 auto;
        min-height: 100vh;
        padding: 60px 0 60px 0;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        margin-left: 32px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 3.8rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1.05rem;
    }

    .card-panel {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        width: 100%;
        max-width: 90%;
        margin-left: 100px;
    }

    .meta-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 14px;
        padding: 16px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        margin-top: 8px;
    }

    .meta-label {
        font-family: 'Lexend', sans-serif;
        color: #9fb1c1;
        font-size: 0.95rem;
        margin-bottom: 4px;
    }

    .meta-value {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.05rem;
        word-break: break-word;
    }

    .badge-pill {
        padding: 8px 14px;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .badge-leido {
        background: rgba(76, 175, 80, 0.1);
        border-color: #4caf50;
        color: #d4edda;
    }

    .badge-no-leido {
        background: rgba(255, 152, 0, 0.1);
        border-color: #ff9800;
        color: #fff3cd;
    }

    .badge-estado-pendiente {
        background: rgba(255, 152, 0, 0.1);
        border-color: #ff9800;
        color: #fff3cd;
    }

    .badge-estado-aceptada {
        background: rgba(76, 175, 80, 0.1);
        border-color: #4caf50;
        color: #d4edda;
    }

    .badge-estado-rechazada {
        background: rgba(244, 67, 54, 0.1);
        border-color: #f44336;
        color: #ffe3e0;
    }

    .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 18px;
    }

    .btn-secondary-ghost,
    .btn-primary-ghost,
    .btn-danger-solid,
    .btn-success-solid {
        font-family: 'Lexend', sans-serif;
        padding: 12px 18px;
        border-radius: 12px;
        text-decoration: none;
        border: 1px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: white;
        cursor: pointer;
        transition: all 0.2s ease;
        background: rgba(255, 255, 255, 0.04);
    }

    .btn-primary-ghost { }
    .btn-primary-ghost:hover { color: var(--np-red) !important; }

    .btn-success-solid { background: #4caf50; border-color: #4caf50; }
    .btn-success-solid:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .btn-danger-solid { background: var(--np-red); border-color: var(--np-red); }
    .btn-danger-solid:hover { filter: brightness(1.05); transform: translateY(-1px); }

    /* Ajustes tablet */
    @@media (max-width: 1024px) {
        .content-container {
            width: 85%;
            padding: 40px 0 40px 0;
            gap: 10px;
        }

        .page-header {
            gap: 12px;
            padding: 0 12px;
            margin-left: 20px;
            margin-right: 20px;
            flex-wrap: wrap;
        }

        .page-title {
            font-size: 2.8rem;
            margin-bottom: 8px;
        }

        .page-subtitle {
            font-size: 0.95rem;
            margin: 4px 0 0 0;
        }

        .card-panel {
            padding: 20px 16px;
            border-radius: 10px;
            margin-left: 20px;
            margin-right: 20px;
        }

        .meta-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 12px;
            padding: 14px;
        }

        .meta-label {
            font-size: 0.9rem;
        }

        .meta-value {
            font-size: 1rem;
        }

        .btn-secondary-ghost,
        .btn-primary-ghost,
        .btn-danger-solid,
        .btn-success-solid {
            padding: 10px 16px;
            font-size: 0.9rem;
        }

        .actions {
            gap: 10px;
        }
    }

    /* Ajustes mobile */
    @@media (max-width: 580px) {
        .content-container {
            width: 100%;
            padding: 30px 10px 80px 10px;
            gap: 8px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            padding: 0;
            margin-left: 60px;
            margin-right: 0;
        }

        .page-title {
            font-size: 1.8rem;
            margin-bottom: 6px;
            letter-spacing: 0px;
        }

        .page-subtitle {
            font-size: 0.85rem;
            margin: 0;
        }

        .btn-secondary-ghost {
            width: 90%;
            justify-content: center;
            padding: 10px 16px;
            font-size: 0.9rem;
            color: white;
        }
        
        .btn-secondary-ghost:hover { 
            color: var(--np-red) !important; 
        }

        .card-panel {
            padding: 12px 8px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            margin-left: 0;
            margin-right: 0;
        }

        .meta-grid {
            grid-template-columns: 1fr;
            gap: 10px;
            padding: 12px;
        }

        .meta-label {
            font-size: 0.85rem;
            margin-bottom: 3px;
        }

        .meta-value {
            font-size: 0.95rem;
            word-break: break-word;
        }

        .badge-pill {
            padding: 6px 10px;
            font-size: 0.75rem;
            gap: 4px;
        }

        .btn-secondary-ghost,
        .btn-primary-ghost,
        .btn-danger-solid,
        .btn-success-solid {
            padding: 10px 12px;
            font-size: 0.8rem;
            justify-content: center;
            width: 100%;
        }

        .actions {
            gap: 8px;
            flex-direction: column;
            align-items: center;
        }

        .sidebar-down {
            display: flex;
        }
    }
</style>

<div class="content-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Notificación</h1>
            <p class="page-subtitle">Detalle del aviso seleccionado</p>
        </div>
    </div>

    <section class="card-panel">
        <div class="meta-grid">
            <div>
                <div class="meta-label">Texto</div>
                <div class="meta-value">@Model.Texto</div>
            </div>
            <div>
                <div class="meta-label">Fecha</div>
                <div class="meta-value">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
            <div>
                <div class="meta-label">Estado</div>
                @if (Model.Leido)
                {
                    <span class="badge-pill badge-leido"><i class="bi bi-check-circle"></i> Leído</span>
                }
                else
                {
                    <span class="badge-pill badge-no-leido"><i class="bi bi-envelope"></i> No leído</span>
                }
            </div>
        </div>

        @if (Model.Tipo == ApplicationCore.Domain.Enums.TipoNotificacion.SISTEMA && Model.Texto.Contains("invitación") && ViewBag.Invitacion != null)
        {
            var invitacion = ViewBag.Invitacion as NeuralPlay.Models.InvitacionViewModel;
            var uid = Context.Session.GetInt32("UsuarioId");
            bool isDest = uid.HasValue && invitacion.DestinatarioId.HasValue && uid.Value == invitacion.DestinatarioId.Value;

            <div style="margin-top: 24px; padding-top: 20px; border-top: 1px solid rgba(255, 255, 255, 0.1);">
                <h3 style="font-family: 'Neue', sans-serif; font-size: 1.8rem; margin-bottom: 16px; color: var(--np-red);">
                    <i class="bi bi-envelope-open"></i> Detalles de la Invitación
                </h3>
                
                <div class="meta-grid">
                    <div>
                        <div class="meta-label">Estado</div>
                        @if (invitacion.Estado.ToString() == "PENDIENTE")
                        {
                            <span class="badge-pill badge-estado-pendiente"><i class="bi bi-hourglass-split"></i> Pendiente</span>
                        }
                        else if (invitacion.Estado.ToString() == "ACEPTADA")
                        {
                            <span class="badge-pill badge-estado-aceptada"><i class="bi bi-check-circle"></i> Aceptada</span>
                        }
                        else
                        {
                            <span class="badge-pill badge-estado-rechazada"><i class="bi bi-x-circle"></i> Rechazada</span>
                        }
                    </div>
                    <div>
                        <div class="meta-label">Tipo</div>
                        <div class="meta-value">@invitacion.Tipo</div>
                    </div>
                    <div>
                        <div class="meta-label">Emisor</div>
                        <div class="meta-value">@invitacion.EmisorNick</div>
                    </div>
                    <div>
                        <div class="meta-label">Fecha envío</div>
                        <div class="meta-value">@invitacion.FechaEnvio.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div>
                        <div class="meta-label">Destino</div>
                        <div class="meta-value">
                            @if (invitacion.Tipo == ApplicationCore.Domain.Enums.TipoInvitacion.EQUIPO)
                            {
                                <text>Equipo: @invitacion.EquipoNombre</text>
                            }
                            else
                            {
                                <text>Comunidad: @invitacion.ComunidadNombre</text>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="actions">
                @if (invitacion.Estado.ToString() == "PENDIENTE" && isDest)
                {
                    <form asp-action="AcceptInvitation" method="post" style="display: inline;">
                        <input type="hidden" name="invitacionId" value="@invitacion.IdInvitacion" />
                        <input type="hidden" name="notificacionId" value="@Model.Id" />
                        <button type="submit" class="btn-success-solid"><i class="bi bi-check"></i> Aceptar</button>
                    </form>
                    <form asp-action="RejectInvitation" method="post" style="display: inline;">
                        <input type="hidden" name="invitacionId" value="@invitacion.IdInvitacion" />
                        <input type="hidden" name="notificacionId" value="@Model.Id" />
                        <button type="submit" class="btn-danger-solid"><i class="bi bi-x"></i> Rechazar</button>
                    </form>
                }

                @if (invitacion.Estado.ToString() != "ACEPTADA")
                {
                    <form asp-action="DeleteInvitation" method="post" style="display: inline; margin-left: 12px;">
                        <input type="hidden" name="invitacionId" value="@invitacion.IdInvitacion" />
                        <input type="hidden" name="notificacionId" value="@Model.Id" />
                        <button type="submit" class="btn-danger-solid"><i class="bi bi-trash"></i> Eliminar invitación</button>
                    </form>
                }
                
                <a asp-action="Index" class="btn-secondary-ghost"><i class="bi bi-list"></i> Ver notificaciones</a>
            </div>
        }
        else
        {
            <div class="actions">
                <a asp-action="Index" class="btn-secondary-ghost"><i class="bi bi-list"></i> Ver listado</a>
            </div>
        }
    </section>
</div>
