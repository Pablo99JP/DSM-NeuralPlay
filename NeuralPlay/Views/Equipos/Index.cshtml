@model IEnumerable<NeuralPlay.Models.EquipoViewModel>
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mis Equipos";
    ViewBag.OcultarNavbar = true;
    var noAutenticado = ViewBag.NoAutenticado ?? false;
    var currentUser = UsuarioAuth.GetUsuarioActual();
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    html, body {
        max-width: 100%;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    /* Header con el título */
    .profile-header {
        text-align: center;
        margin-bottom: 15px;
        padding-top: 10px;
    }

    .profile-header h1 {
        font-family: 'Neue', sans-serif;
        text-align: center;
        font-size: 3.5rem;
        color: white;
        margin-bottom: 10px;
        margin-right: 11vw;
    }

    .profile-header h1 .username {
        color: var(--np-red);
    }

    .profile-divider {
        width: 70%;
        height: 3px;
        background-color: white;
        margin: 0 auto 30px auto;
        margin-left: 6vw;
        margin-right: 11vw;
    }

    .profile-section-title {
        font-family: 'Neue', sans-serif;
        font-size: 5.5rem;
        color: white;
        margin-bottom: 30px;
        text-align: left;
        padding-left: 0;
        margin-left: 32px;
        font-weight: bold;
    }

    /* Contenedor principal */
    .content-wrapper {
        margin: 0 auto;
        padding: 0 40px;
        max-width: 1100px;
    }

    /* Cards de equipos - Layout vertical */
    .teams-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 0;
        width: 100%;
    }

    .team-card {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 16px 24px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: flex;
        align-items: center;
        gap: 20px;
        cursor: pointer;
    }

    .team-card:hover {
        transform: translateX(5px);
        box-shadow: 0 8px 25px rgba(229, 10, 70, 0.4);
        border-color: var(--np-red);
    }

    .team-icon {
        width: 60px;
        height: 60px;
        min-width: 60px;
        border-radius: 10px;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Neue', sans-serif;
        font-size: 1.8rem;
        color: white;
        overflow: hidden;
    }

    .team-icon img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-name {
        font-family: 'Neue', sans-serif;
        color: white;
        font-size: 1.5rem;
        margin: 0;
        flex: 1;
    }

    .team-actions {
        display: flex;
        gap: 8px;
        align-items: center;
        margin-left: 10px;
    }

    .team-access,
    .team-edit,
    .team-delete {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .team-access { background: var(--np-red); }
    .team-access:hover { background: white; color: var(--np-red); transform: scale(1.1); }

    .team-edit { background: #2196F3; }
    .team-edit:hover { background: white; color: #2196F3; transform: scale(1.1); }

    .team-delete { background: #f44336; }
    .team-delete:hover { background: white; color: #f44336; transform: scale(1.1); }

    .team-access i,
    .team-edit i,
    .team-delete i {
        font-size: 1.5rem;
    }

    /* Mensaje de no equipos */
    .no-equipos-message {
        text-align: center;
        padding: 100px 40px;
        color: white;
    }

    .no-equipos-icon {
        font-size: 6rem;
        color: var(--np-red);
        margin-bottom: 30px;
    }

    .no-equipos-title {
        font-family: 'Neue', sans-serif;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 20px;
    }

    .no-equipos-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        color: #ccc;
        margin-bottom: 30px;
    }

    .no-equipos-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        align-items: center;
    }

    .btn-equipos {
        font-family: 'Lexend', sans-serif;
        background: var(--np-red);
        color: white;
        padding: 15px 40px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        font-size: 1.1rem;
        border: 2px solid var(--np-red);
    }

    .btn-equipos:hover {
        background: white;
        color: var(--np-red);
        transform: scale(1.05);
    }

    /* Media queries - Tablet */
    @@media screen and (min-width: 581px) and (max-width: 1024px) {
        .content-wrapper {
            padding-right: 11vw;
        }
    }

    /* Media queries - Mobile */
    @@media screen and (max-width: 580px) {
        .profile-header h1 {
            font-size: 3rem;
            margin-right: 0;
        }
        
        .profile-header h1 .username {
            font-size: inherit;
            display: inline;
            margin-top: 0;
        }

        .profile-section-title {
            font-size: 3rem;
            margin-left: 0;
            text-align: left;
            padding-left: 15px;
        }

        .profile-divider {
            width: calc(100% - 30px);
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 20px;
        }

        .content-wrapper {
            padding: 0 15px;
        }

        .teams-list {
            gap: 20px;
            margin-top: 15px;
        }

        .team-card {
            padding: 12px 16px;
        }

        .team-icon {
            width: 50px;
            height: 50px;
        }

        .team-name {
            font-size: 1.1rem;
        }

        .team-actions .team-access,
        .team-actions .team-edit,
        .team-actions .team-delete {
            width: 38px;
            height: 38px;
        }

        .no-equipos-message {
            padding: 60px 15px;
        }

        .no-equipos-icon {
            font-size: 4rem;
        }

        .no-equipos-title {
            font-size: 1.8rem;
        }

        .no-equipos-text {
            font-size: 1rem;
        }

        .no-equipos-actions {
            flex-direction: column;
            gap: 10px;
        }

        .btn-equipos {
            width: 100%;
            padding: 12px 16px;
        }
    }
</style>


@if (currentUser != null)
{
    <header class="profile-header">
        <h1>Bienvenido, <span class="username">@currentUser.Nick</span></h1>
        <hr class="profile-divider" />
        <h2 class="profile-section-title">Tus Equipos</h2>
    </header>
}
else
{
    <header class="profile-header">
        <h1>Bienvenido</h1>
        <hr class="profile-divider" />
        <h2 class="profile-section-title">Equipos</h2>
    </header>
}

@if (TempData["SuccessMessage"] != null)
{
    <div style="background: rgba(76, 175, 80, 0.1); color: #d4edda; border-left: 4px solid #4caf50; padding: 15px 20px; margin: 20px auto; max-width: 1020px; border-radius: 8px; font-family: 'Lexend', sans-serif; font-size: 1rem;">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div style="background: rgba(229, 10, 70, 0.1); color: #ffdce6; border-left: 4px solid var(--np-red); padding: 15px 20px; margin: 20px auto; max-width: 1020px; border-radius: 8px; font-family: 'Lexend', sans-serif; font-size: 1rem;">
        <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
    </div>
}

<main class="content-wrapper">
    @if (noAutenticado)
    {
        <!-- Mensaje: Necesitas iniciar sesión -->
        <section class="no-equipos-message" role="status" aria-live="polite">
            <figure class="no-equipos-icon">
                <i class="bi bi-person-lock"></i>
                <figcaption class="visually-hidden">Icono de candado</figcaption>
            </figure>
            <h3 class="no-equipos-title">Necesitas iniciar sesión</h3>
            <p class="no-equipos-text">Para ver tus equipos debes estar autenticado en la plataforma.</p>
            <nav class="no-equipos-actions" aria-label="Acciones de equipos">
                <a href="@Url.Action("Create", "Equipo")" class="btn-equipos">
                    <i class="bi bi-plus-circle"></i> Crear Equipo
                </a>
                <a href="/" class="btn-equipos">
                    <i class="bi bi-search"></i> Explorar Equipos
                </a>
            </nav>
        </section>
    }
    else if (!Model.Any())
    {
        <!-- Mensaje: No perteneces a ningún equipo -->
        <section class="no-equipos-message" role="status" aria-live="polite">
            <figure class="no-equipos-icon">
                <i class="bi bi-people"></i>
                <figcaption class="visually-hidden">Icono de personas</figcaption>
            </figure>
            <h3 class="no-equipos-title">No perteneces a ningún equipo</h3>
            <p class="no-equipos-text">Aún no formas parte de ningún equipo. ¡Crea uno o únete a uno existente!</p>
            <nav class="no-equipos-actions" aria-label="Acciones de equipos">
                <a href="@Url.Action("Create", "Equipo")" class="btn-equipos">
                    <i class="bi bi-plus-circle"></i> Crear Equipo
                </a>
                <a href="/" class="btn-equipos">
                    <i class="bi bi-search"></i> Explorar Equipos
                </a>
            </nav>
        </section>
    }
    else
    {
        <!-- Lista de equipos -->
        <section class="teams-list" aria-label="Tus equipos">
            @foreach (var equipo in Model)
            {
                <article class="team-card" data-equipo-id="@equipo.IdEquipo" onclick="entrarEquipo(event)" role="link" tabindex="0" aria-label="Abrir equipo @equipo.Nombre">
                    <figure class="team-icon">
                        <img src="@(string.IsNullOrEmpty(equipo.ImagenUrl) ? "/Recursos/Equipos/default.webp" : equipo.ImagenUrl)" alt="@equipo.Nombre" />
                        <figcaption class="visually-hidden">Logo de @equipo.Nombre</figcaption>
                    </figure>
                    
                    <h3 class="team-name">@equipo.Nombre</h3>

                    <nav class="team-actions" aria-label="Acciones del equipo @equipo.Nombre">
                        <a href="@Url.Action("Details", "Equipo", new { id = equipo.IdEquipo })" class="team-access" title="Acceder al equipo" onclick="event.stopPropagation();">
                            <i class="bi bi-arrow-right-circle-fill"></i>
                        </a>
                    </nav>
                </article>
            }
        </section>
    }
</main>

<script>
    function entrarEquipo(event) {
        const equipoCard = event.target.closest('.team-card');
        const equipoId = equipoCard.getAttribute('data-equipo-id');
        
        // Redirigir a Equipo/Details con el ID del equipo
        window.location.href = '/Equipo/Details/' + equipoId;
    }

    // Auto-ocultar mensaje de éxito después de 5 segundos
    document.addEventListener('DOMContentLoaded', function() {
        const successMessage = document.querySelector('[style*="rgba(76, 175, 80"]');
        if (successMessage) {
            setTimeout(function() {
                successMessage.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                successMessage.style.opacity = '0';
                successMessage.style.transform = 'translateY(-10px)';
                setTimeout(function() {
                    successMessage.remove();
                }, 500);
            }, 5000);
        }
    });
</script>
