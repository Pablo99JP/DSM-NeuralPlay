@model IEnumerable<NeuralPlay.Models.EquipoViewModel>
@inject NeuralPlay.Services.IUsuarioAuth UsuarioAuth

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Mis Equipos";
    ViewBag.OcultarNavbar = true;
    var noAutenticado = ViewBag.NoAutenticado ?? false;
    var currentUser = UsuarioAuth.GetUsuarioActual();
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* Estilos específicos para la vista de Equipos Index */

    .equipos-header {
        width: 100%;
        text-align: center;
        margin-bottom: 15px;
        padding-top: 10px;
    }

    .equipos-header h1 {
        font-family: 'Neue', sans-serif;
        text-align: center;
        font-size: 3.5rem;
        color: white;
        margin-bottom: 10px;
        margin-right: 11vw;
    }

    .equipos-header .username {
        color: var(--np-red);
    }

    .equipos-divider {
        width: 75%;
        height: 3px;
        background-color: white;
        margin: 0 auto 30px auto;
        margin-left: 6vw;
        margin-right: 11vw;
    }

    .equipos-subtitle {
        font-family: 'Neue', sans-serif;
        font-size: 5.5rem;
        color: white;
        margin-bottom: 30px;
        text-align: left;
        padding-left: 0;
        margin-left: 32px;
        font-weight: bold;
    }

    /* Cards de equipos - Layout vertical */
    .teams-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 30px;
        width: 100%;
    }

    .team-card {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 16px 24px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: flex;
        align-items: center;
        gap: 20px;
        cursor: pointer;
    }

    .team-card:hover {
        transform: translateX(5px);
        box-shadow: 0 8px 25px rgba(229, 10, 70, 0.4);
        border-color: var(--np-red);
    }

    .team-icon {
        width: 60px;
        height: 60px;
        min-width: 60px;
        border-radius: 10px;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Neue', sans-serif;
        font-size: 1.8rem;
        color: white;
        overflow: hidden;
    }

    .team-icon img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-name {
        font-family: 'Neue', sans-serif;
        color: white;
        font-size: 1.5rem;
        margin: 0;
        flex: 1;
    }

    .team-actions {
        display: flex;
        gap: 8px;
        align-items: center;
        margin-left: 10px;
    }

    .team-access,
    .team-edit,
    .team-delete {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .team-access { background: var(--np-red); }
    .team-access:hover { background: white; color: var(--np-red); transform: scale(1.1); }

    .team-edit { background: #2196F3; }
    .team-edit:hover { background: white; color: #2196F3; transform: scale(1.1); }

    .team-delete { background: #f44336; }
    .team-delete:hover { background: white; color: #f44336; transform: scale(1.1); }

    .team-access i,
    .team-edit i,
    .team-delete i {
        font-size: 1.5rem;
    }

    /* Mensaje de no equipos */
    .no-teams-message {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 60px 40px;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 100px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        width: 100%;
    }

    .no-teams-icon {
        font-size: 5rem;
        color: var(--np-red);
        margin-bottom: 20px;
    }

    .no-teams-title {
        font-family: 'Neue', sans-serif;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 15px;
    }

    .no-teams-text {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        color: #ccc;
        margin-bottom: 30px;
    }

    .btn-create-team {
        font-family: 'Lexend', sans-serif;
        background: var(--np-red);
        color: white;
        padding: 15px 40px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        font-size: 1.1rem;
        border: 2px solid var(--np-red);
    }

    .btn-create-team:hover {
        background: white;
        color: var(--np-red);
        transform: scale(1.05);
    }

    .no-teams-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        align-items: center;
    }

    /* Estilos desktop - Espacio para sidebar derecha */
    @@media screen and (min-width: 1201px) {
        .page-content-wrapper {
            padding-right: 11vw;
        }
    }

    /* Media queries - Tablet (match Home equipos) */
    @@media screen and (min-width: 581px) and (max-width: 1200px) {
        .page-content-wrapper {
            padding: 0 60px;
            margin: 0;
            width: calc(100% - 120px);
        }

        .equipos-header {
            margin: 0;
            padding: 0;
        }

        .equipos-header h1 {
            font-size: 4rem;
            margin: 0 0 10px 0;
        }

        .equipos-divider {
            width: 100%;
            margin: 0 0 20px 0;
        }

        .equipos-subtitle {
            font-size: 2rem;
            margin: 0 0 20px 0;
            padding: 0;
        }

        .teams-list {
            gap: 20px;
            margin: 0;
            padding: 0;
        }

        .team-card {
            padding: 14px 18px;
            gap: 16px;
        }

        .team-icon {
            width: 60px;
            height: 60px;
        }

        .team-name {
            font-size: 1.3rem;
        }

        .no-teams-message {
            padding: 30px;
            margin: 20px 0 60px 0;
        }

        .no-teams-icon {
            font-size: 3rem;
        }

        .no-teams-title {
            font-size: 1.8rem;
        }

        .btn-create-team {
            font-size: 0.95rem;
            padding: 12px 24px;
            margin: 8px;
        }
    }

    /* Media queries - Mobile (match Home equipos) */
    @@media screen and (max-width: 580px) {
        .page-content-wrapper {
            padding: 0 20px;
            margin: 0;
            width: calc(100% - 40px);
        }

        .equipos-header {
            margin: 0 0 20px 0;
            padding: 0;
        }

        .equipos-header h1 {
            font-size: 3rem;
            margin: 0 0 8px 0;
        }

        .equipos-divider {
            width: 100%;
            margin: 0 0 15px 0;
        }

        .equipos-subtitle {
            font-size: 1.6rem;
            margin: 0 0 15px 0;
            padding: 0;
        }

        .teams-list {
            gap: 15px;
            margin: 0;
            padding: 0;
            margin-bottom: 60px;
        }

        .team-card {
            padding: 12px 16px;
            gap: 12px;
            flex-direction: column;
        }

        .team-icon {
            width: 50px;
            height: 50px;
        }

        .team-name {
            font-size: 1.1rem;
        }

        .team-actions {
            flex-direction: row;
            gap: 10px;
            width: 100%;
            justify-content: space-between;
        }

        .team-access,
        .team-edit,
        .team-delete {
            width: 36px;
            height: 36px;
            flex: 1;
        }

        .no-teams-message {
            padding: 20px;
            margin: 0 0 60px 0;
            text-align: center;
        }

        .no-teams-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .no-teams-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .no-teams-text {
            font-size: 0.95rem;
            margin-bottom: 20px;
        }

        .no-teams-actions {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%;
        }

        .btn-create-team {
            width: 100%;
            padding: 12px 16px;
            font-size: 0.95rem;
        }
    }

    /* Estilos desktop - Espacio para sidebar derecha */
    @@media screen and (min-width: 1201px) {
        .page-content-wrapper {
            padding-right: 11vw;
        }
    }
</style>

<!-- Contenedor con header y contenido -->
<div class="page-content-wrapper" style="width: 100%; display: flex; flex-direction: column; align-items: center;">
    @if (currentUser != null)
    {
        <header class="equipos-header">
            <h1>Bienvenido, <span class="username">@currentUser.Nick</span></h1>
            <div class="equipos-divider"></div>
        </header>
    }
    else
    {
        <header class="equipos-header">
            <h1>Bienvenido</h1>
            <div class="equipos-divider"></div>
        </header>
    }

    <h2 class="equipos-subtitle" style="width: 100%; text-align: left;">Tus Equipos</h2>
        @if (noAutenticado)
        {
            <!-- Mensaje: Necesitas iniciar sesión -->
            <div class="no-teams-message">
                <div class="no-teams-icon">
                    <i class="bi bi-person-lock"></i>
                </div>
                <h2 class="no-teams-title">Necesitas iniciar sesión</h2>
                <p class="no-teams-text">
                    Para ver tus equipos debes estar autenticado en la plataforma.
                </p>
                <a href="@Url.Action("Login", "Usuario")" class="btn-create-team">
                    Iniciar Sesión
                </a>
            </div>
        }
        else if (!Model.Any())
        {
            <!-- Mensaje: No perteneces a ningún equipo -->
            <div class="no-teams-message">
                <div class="no-teams-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h2 class="no-teams-title">No perteneces a ningún equipo</h2>
                <p class="no-teams-text">
                    Aún no formas parte de ningún equipo. ¡Crea uno o únete a uno existente!
                </p>
                <div class="no-teams-actions">
                    <a href="@Url.Action("Create", "Equipo")" class="btn-create-team">
                        Crear Equipo
                    </a>
                    <a href="/" class="btn-create-team">
                        Explorar Equipos
                    </a>
                </div>
            </div>
        }
        else
        {
            <!-- Lista de equipos en horizontal -->
            <div class="teams-list">
                @foreach (var equipo in Model)
                {
                    <div class="team-card" data-equipo-id="@equipo.IdEquipo" onclick="entrarEquipo(event)">
                        <div class="team-icon">
                            <img src="@(string.IsNullOrEmpty(equipo.ImagenUrl) ? "/Recursos/Equipos/default.webp" : equipo.ImagenUrl)" alt="@equipo.Nombre" />
                        </div>
                        
                        <h3 class="team-name">@equipo.Nombre</h3>

                        <div class="team-actions">
                            <a href="@Url.Action("Details", "Equipo", new { id = equipo.IdEquipo })" class="team-access" title="Acceder al equipo" onclick="event.stopPropagation();">
                                <i class="bi bi-arrow-right-circle-fill"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
</div>

<script>
    function entrarEquipo(event) {
        const equipoCard = event.target.closest('.team-card');
        const equipoId = equipoCard.getAttribute('data-equipo-id');
        
        // Redirigir a Equipo/Details con el ID del equipo
        window.location.href = '/Equipo/Details/' + equipoId;
    }
</script>
