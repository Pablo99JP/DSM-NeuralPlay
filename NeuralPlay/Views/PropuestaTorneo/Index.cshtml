@model IEnumerable<ApplicationCore.Domain.EN.PropuestaTorneo>

<h2>Propuestas pendientes</h2>
<table class="table">
    <thead>
        <tr>
            <th>Equipo</th>
            <th>Torneo</th>
            <th>Fecha Propuesta</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.EquipoProponente?.Nombre</td>
            <td>@p.Torneo?.Nombre</td>
            <td>@p.FechaPropuesta.ToString("yyyy-MM-dd")</td>
            <td>@p.Estado</td>
            <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@p.IdPropuesta">Ver</a></td>
        </tr>
    }
    </tbody>
</table>
