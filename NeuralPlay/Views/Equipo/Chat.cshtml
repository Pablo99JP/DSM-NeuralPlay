@model NeuralPlay.Models.EquipoChatViewModel

@{
    ViewData["Title"] = "Chat del Equipo";
    ViewBag.OcultarNavbar = true;
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .chat-wrapper {
        margin: 0 auto;
        padding: 20px 60px 60px 60px;
        max-width: 1100px;
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .chat-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 24px;
        padding-top: 10px;
    }

    .chat-avatar {
        width: 140px;
        height: 140px;
        border-radius: 15px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .chat-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .chat-title h1 {
        font-family: 'Neue', sans-serif;
        font-size: 6.5rem;
        color: white;
        margin: 0 0 16px 0;
    }

    .chat-divider {
        height: 3px;
        background: white;
        margin: 0 0 15px 0;
        width: 100%;
    }

    .messages-container {
        flex: 1;
        background: transparent;
        border-radius: 0;
        padding: 10px 0 20px 0;
        overflow-y: auto;
        margin-bottom: 20px;
        border: none;
        box-shadow: none;
    }
    .message-item {
        display: flex;
        gap: 12px;
        margin-bottom: 14px;
        align-items: flex-start;
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 12px 14px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.25);
    }

    .message-item.alert-propuesta-bg {
        background: rgba(229, 10, 70, 0.65) !important;
        border: 2px solid rgba(229, 10, 70, 0.9) !important;
        box-shadow: 0 6px 18px rgba(229, 10, 70, 0.6) !important;
    }

    .message-avatar {
        width: 44px;
        height: 44px;
        border-radius: 10px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.08);
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .message-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .message-content {
        flex: 1;
    }

    .message-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 4px;
    }

    .message-author {
        font-family: 'Neue', sans-serif;
        color: white;
        font-weight: bold;
        font-size: 1.05rem;
    }

    .message-time {
        font-family: 'Lexend', sans-serif;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.85rem;
    }

    .message-text {
        font-family: 'Lexend', sans-serif;
        color: #ddd;
        line-height: 1.4;
        word-wrap: break-word;
    }

    .message-text.alert-propuesta {
        color: #ffffff;
        font-weight: 700;
    }

    .empty-messages {
        text-align: center;
        color: rgba(255, 255, 255, 0.4);
        font-family: 'Lexend', sans-serif;
        padding: 40px 20px;
    }

    .input-container {
        display: flex;
        gap: 12px;
        align-items: flex-end;
        background: transparent;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 20px;
    }

    .message-input-wrapper {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .message-input {
        width: 100%;
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 12px 16px;
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1rem;
        resize: none;
        max-height: 80px;
    }

    .message-input::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    .message-input:focus {
        outline: none;
        border-color: var(--np-red);
        box-shadow: 0 0 8px rgba(229, 10, 70, 0.3);
    }

    .btn-send {
        background: var(--np-red);
        border: none;
        border-radius: 12px;
        padding: 12px 20px;
        color: white;
        font-family: 'Neue', sans-serif;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        white-space: nowrap;
        height: 44px;
    }

    .btn-send:hover {
        background: white;
        color: var(--np-red);
        transform: scale(1.05);
    }

    .btn-send i {
        font-size: 1.2rem;
    }

    .alert-error {
        background: rgba(244, 67, 54, 0.1);
        border: 1px solid #f44336;
        color: #ff9999;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 16px;
        font-family: 'Lexend', sans-serif;
    }

    /* Tablet */
    @@media (max-width: 1024px) {
        .chat-wrapper {
            padding: 40px 24px 60px 24px;
            width: calc(100% - 48px);
            max-width: 100%;
        }

        .chat-header {
            gap: 18px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .chat-avatar {
            width: 110px;
            height: 110px;
        }

        .chat-title h1 {
            font-size: 4rem;
        }

        .message-item {
            margin-right: 40px;
        }

        .btn-send {
            margin-right: 40px;
        }
    }

    /* Mobile */
    @@media (max-width: 580px) {
        .chat-wrapper {
            padding: 60px 20px 140px 20px;
            width: calc(100% - 40px);
            max-width: 100%;
            height: auto;
        }

        .chat-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
            margin-bottom: 16px;
        }

        .chat-avatar {
            width: 80px;
            height: 80px;
            border-radius: 12px;
        }

        .chat-title h1 {
            font-size: 2.3rem;
        }

        .messages-container {
            padding: 10px 0 16px 0;
            margin-bottom: 16px;
        }

        .message-input-wrapper {
            flex: 1;
        }

        .message-input {
            width: 100%;
            font-size: 1rem;
            min-height: 50px;
            padding: 12px 16px;
        }

        .btn-send {
            width: auto;
            font-size: 1rem;
            padding: 10px 14px;
            flex-shrink: 0;
        }

        .btn-send span {
            display: none;
        }
    }
</style>

<div class="chat-wrapper">
    <div class="chat-header">
        <div class="chat-avatar">
            <img src="@logo" alt="@Model.NombreEquipo" />
        </div>
        <div class="chat-title">
            <h1>@Model.NombreEquipo</h1>
            <div class="chat-divider"></div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert-error">@TempData["Error"]</div>
    }

    <div class="messages-container" id="chat-scroll">
        @if (Model.Mensajes != null && Model.Mensajes.Any())
        {
            @foreach (var m in Model.Mensajes)
            {
                var avatar = string.IsNullOrEmpty(m.FotoPerfilUrl) ? "/images/avatar_default.png" : m.FotoPerfilUrl;
                var isPropuesta = m.Contenido != null && m.Contenido.Contains("propuesto participar en un torneo", System.StringComparison.OrdinalIgnoreCase);
                <div class="message-item @(isPropuesta ? "alert-propuesta-bg" : string.Empty)">
                    <div class="message-avatar">
                        <img src="@avatar" alt="@m.NickAutor" />
                    </div>
                    <div class="message-content">
                        <div class="message-header">
                            <span class="message-author">@m.NickAutor</span>
                            <span class="message-time">@m.FechaEnvio.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="message-text @(isPropuesta ? "alert-propuesta" : string.Empty)">@m.Contenido</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-messages">
                <i class="bi bi-chat-left" style="font-size: 3rem; margin-bottom: 16px; display: block; opacity: 0.3;"></i>
                No hay mensajes aún. ¡Escribe el primero!
            </div>
        }
    </div>

    <form asp-action="EnviarMensaje" asp-controller="Equipo" asp-route-id="@Model.IdEquipo" method="post" class="input-container">
        @Html.AntiForgeryToken()
        <div class="message-input-wrapper">
            <textarea name="contenido" class="message-input" rows="1" placeholder="Escribe tu mensaje..." required></textarea>
        </div>
        <button type="submit" class="btn-send">
            <i class="bi bi-send-fill"></i> <span>Enviar</span>
        </button>
    </form>
</div>

<script>
    (function () {
        var el = document.getElementById('chat-scroll');
        if (el) el.scrollTop = el.scrollHeight;

        // Auto-expand textarea
        var textarea = document.querySelector('.message-input');
        if (textarea) {
            textarea.addEventListener('input', function () {
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 80) + 'px';
            });
        }
    })();
</script>