@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Crear Equipo";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>

    .page-header {
        display: flex;
        align-items: center;
        gap: 18px;
    }

    .team-avatar {
        width: 110px;
        height: 110px;
        border-radius: 18px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
        flex-shrink: 0;
    }

    .team-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .page-title { font-size: 6rem; line-height: 0.95; }

    .form-select option { background: var(--np-dark-grey); color: white; padding: 10px; }

    /* Ajustes tablet: solo especificos de esta vista */
    @@media (max-width: 1024px) {
        .page-title { font-size: 3.6rem; }
        .page-subtitle { font-size: 0.95rem; }
    }

    /* Ajustes mobile */
    @@media (max-width: 580px) {
        .content-container { padding: 80px 12px 110px; }
        .page-title { font-size: 2rem; }
        .page-subtitle { font-size: 0.85rem; }
        .form-card { padding: 16px; margin-bottom: 12px; }
        .btn-submit, .btn-cancel { width: 100%; }
        .form-actions { flex-direction: column; }
    }
</style>

<div class="main-container"></div>

<div class="content-container">
    <header class="page-header">
        <div>
            <h1 class="page-title">Crear Equipo</h1>
            <p class="page-subtitle">Define los datos principales de tu nuevo equipo</p>
        </div>
    </header>

    <section class="form-card">
        <div asp-validation-summary="ModelOnly" class="validation-panel"></div>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-input" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Actividad" class="form-label">Actividad</label>
                <select asp-for="Actividad" class="form-select" asp-items="Html.GetEnumSelectList<ApplicationCore.Domain.Enums.Actividad>()"></select>
                <span asp-validation-for="Actividad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pais" class="form-label">País</label>
                <input asp-for="Pais" class="form-input" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Idioma" class="form-label">Idioma</label>
                <input asp-for="Idioma" class="form-input" />
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenArchivo" class="form-label">Logo del equipo</label>
                @if (!string.IsNullOrEmpty(Model?.ImagenUrl))
                {
                    <div style="margin-bottom: 12px;">
                        <img src="@Model.ImagenUrl" alt="Logo actual" style="max-width: 150px; max-height: 150px; border-radius: 10px; border: 2px solid var(--np-red);" />
                        <p style="color: #ccc; font-size: 0.9rem; margin-top: 5px;">Logo actual (si ya se cargó)</p>
                    </div>
                }
                <input asp-for="ImagenArchivo" type="file" class="form-input" accept="image/*" />
                <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
                <div class="form-note">Selecciona un logo para tu equipo (opcional).</div>
            </div>

            <div class="actions">
                <button type="submit" class="btn-submit">Guardar</button>
                <a asp-controller="Equipos" asp-action="Index" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </section>
</div>
