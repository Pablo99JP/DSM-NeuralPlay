@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Eliminar Equipo";
    ViewBag.OcultarNavbar = true;
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    body { margin: 0; padding: 0; overflow-x: hidden; color: white; }

    .main-container {
        position: fixed; top: 0; left: 0; width: 100%; height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover; z-index: 1;
    }

    .content-container {
        position: absolute; left: 11%; top: 0; width: 83%; min-height: 100vh; z-index: 2;
        padding: 60px 40px; display: flex; flex-direction: column; align-items: center;
    }

    .page-header {
        margin-bottom: 40px; display: flex; align-items: center; gap: 18px;
        width: 100%; max-width: 1000px;
    }

    .team-avatar {
        width: 110px; height: 110px; border-radius: 18px; overflow: hidden; background: var(--np-red);
        display: flex; align-items: center; justify-content: center; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
        flex-shrink: 0;
    }
    .team-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .page-title {
        font-family: 'Neue', sans-serif; font-size: 6rem; color: white; text-transform: uppercase;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8); margin: 0; letter-spacing: 2px; line-height: 0.95;
    }
    .page-subtitle { font-family: 'Lexend', sans-serif; color: #d7d7d7; margin: 6px 0 0 0; font-size: 1rem; }

    .card-delete {
        background: rgba(36, 36, 36, 0.95); border-radius: 10px; padding: 40px; margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); max-width: 1000px; width: 100%;
    }

    .warning {
        display: flex; align-items: center; gap: 12px;
        background: rgba(229, 10, 70, 0.15); border: 2px solid rgba(229, 10, 70, 0.6);
        color: #ffcdd2; padding: 16px 18px; border-radius: 10px;
        font-family: 'Lexend', sans-serif; margin-bottom: 18px;
    }

    dl {
        display: grid; grid-template-columns: 180px 1fr; row-gap: 10px; column-gap: 12px; margin-bottom: 24px;
    }
    dt { font-weight: 700; font-family: 'Lexend', sans-serif; color: #dcdcdc; }
    dd { margin: 0; font-family: 'Lexend', sans-serif; color: white; }

    .btn-delete {
        font-family: 'Lexend', sans-serif; font-size: 1.2rem; padding: 14px 34px;
        background: var(--np-red); color: white; border: 2px solid var(--np-red);
        border-radius: 25px; cursor: pointer; transition: all 0.3s ease;
    }
    .btn-delete:hover { background: transparent; color: var(--np-red); transform: scale(1.03); }

    .btn-cancel {
        font-family: 'Lexend', sans-serif; font-size: 1.2rem; padding: 14px 34px;
        background: transparent; color: white; border: 2px solid white;
        border-radius: 25px; cursor: pointer; transition: all 0.3s ease;
        text-decoration: none; display: inline-block;
    }
    .btn-cancel:hover { background: white; color: var(--np-dark-grey); }
</style>

<div class="main-container"></div>

<div class="content-container">
    <header class="page-header">
        <div class="team-avatar">
            <img src="@logo" alt="Logo equipo" />
        </div>
        <div>
            <h1 class="page-title">Eliminar Equipo</h1>
            <p class="page-subtitle">Esta acción es irreversible. Se eliminará el equipo y sus datos asociados.</p>
        </div>
    </header>

    <section class="card-delete">
        <div class="warning">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <span>Confirma que deseas eliminar este equipo.</span>
        </div>

        <dl>
            <dt>ID</dt><dd>@Model.IdEquipo</dd>
            <dt>Nombre</dt><dd>@Model.Nombre</dd>
            <dt>Descripción</dt><dd>@Model.Descripcion</dd>
            <dt>Fecha de creación</dt><dd>@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt>Actividad</dt><dd>@Model.Actividad</dd>
            <dt>País</dt><dd>@Model.Pais</dd>
            <dt>Idioma</dt><dd>@Model.Idioma</dd>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.IdEquipo" method="post">
            <input type="hidden" name="id" value="@Model.IdEquipo" />
            <div class="actions">
                <button type="submit" class="btn-delete">Eliminar definitivamente</button>
                <a asp-controller="Equipos" asp-action="Index" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </section>
</div>
