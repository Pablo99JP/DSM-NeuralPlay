@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Detalles del Equipo";
    ViewBag.OcultarNavbar = true;
    var miembros = ViewBag.Miembros as List<NeuralPlay.Models.MiembroEquipoViewModel> ?? new List<NeuralPlay.Models.MiembroEquipoViewModel>();
    var torneos = ViewBag.Torneos as List<ApplicationCore.Domain.EN.Torneo> ?? new List<ApplicationCore.Domain.EN.Torneo>();
    var palmares = ViewBag.Palmares as Dictionary<ApplicationCore.Domain.EN.Torneo, int> ?? new Dictionary<ApplicationCore.Domain.EN.Torneo, int>();
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
    var isLeader = ViewBag.IsLeader as bool? ?? false;
    var equipoId = ViewBag.EquipoId as long? ?? 0;
    var currentUserId = ViewBag.CurrentUserId as long? ?? 0;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .page-wrapper {
        margin: 0 auto;
        padding: 20px 60px 60px 60px;
        max-width: 1400px;
    }

    .team-hero {
        display: flex;
        align-items: center;
        gap: 24px;
        margin-top: 10px;
        margin-bottom: 10px;
        padding-top: 10px;
    }

    .team-avatar {
        width: 140px;
        height: 140px;
        border-radius: 20px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    }

    .team-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-header-text h1 {
        font-family: 'Neue', sans-serif;
        font-size: 6.5rem;
        color: white;
        margin: 0 0 16px 0;
    }

    .team-divider {
        height: 3px;
        background: white;
        margin: 0 0 18px 0;
        width: 100%;
    }

    .team-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 0;
        font-size: 1.05rem;
    }

    .tabs-wrapper {
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 14px;
        padding: 4px 8px;
        margin: 24px 0 18px;
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.28);
    }

    .team-tabs {
        display: flex;
        gap: 0;
        border-bottom: 2px solid rgba(255, 255, 255, 0.08);
    }

    .tab-button {
        background: transparent;
        color: white;
        border: none;
        border-bottom: 3px solid transparent;
        padding: 12px 18px;
        font-family: 'Neue', sans-serif;
        font-size: 1.15rem;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .tab-button i {
        font-size: 1.2rem;
    }

    .tab-button.active {
        color: var(--np-red);
        border-bottom-color: var(--np-red);
    }

    .tab-button:hover {
        color: var(--np-red);
    }

    .panel {
        background: rgba(36, 36, 36, 0.92);
        border-radius: 14px;
        padding: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
        margin-bottom: 22px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .panel h3 {
        font-family: 'Neue', sans-serif;
        color: white;
        margin-bottom: 18px;
        font-size: 1.7rem;
    }

    .panel p, .panel span, .panel td, .panel th, .panel li {
        font-family: 'Lexend', sans-serif;
        color: white;
    }

    .tab-panel { display: none; }
    .tab-panel.active { display: block; }

    /* Estilos desktop - Espacio para sidebar derecha */
    @@media screen and (min-width: 1201px) {
        .page-wrapper {
            padding-right: calc(60px + 11vw);
        }
    }

    /* Estilos tablet - Espacio para sidebar derecha y scroll horizontal en pesta√±as */
    @@media screen and (min-width: 581px) and (max-width: 1200px) {
        .page-wrapper {
            padding-right: 160px; /* 60px base + 100px sidebar */
        }

        .team-tabs {
            flex-wrap: nowrap;
            overflow-x: auto;
            overflow-y: hidden;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
        }

        .team-tabs::-webkit-scrollbar {
            display: none;
        }

        .tab-button {
            white-space: nowrap;
            flex-shrink: 0;
        }
    }

    .members-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .member-card {
        display: flex;
        align-items: center;
        gap: 12px;
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 10px 12px;
    }

    .member-avatar {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.08);
        flex-shrink: 0;
    }

    .member-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .member-meta {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .member-role {
        font-family: 'Neue', sans-serif;
        color: var(--np-red);
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .member-name {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.2rem;
        margin: 0;
    }

    /* Torneos layout */
    .torneos-grid {
        display: grid;
        grid-template-columns: 1.1fr 1.2fr;
        gap: 18px;
        align-items: start;
    }

    .proposal-card {
        background: var(--np-red);
        border-radius: 16px;
        padding: 22px;
        color: white;
        box-shadow: 0 12px 30px rgba(0,0,0,0.4);
    }

    .proposal-card h4 {
        font-family: 'Neue', sans-serif;
        margin: 0 0 10px 0;
        font-size: 1.6rem;
    }

    .proposal-meta {
        font-family: 'Lexend', sans-serif;
        margin: 0 0 14px 0;
        color: #ffe3ec;
        font-size: 1.05rem;
    }

    .vote-actions {
        display: flex;
        gap: 14px;
        margin: 16px 0 10px;
    }

    .btn-vote {
        flex: 1;
        border: none;
        border-radius: 12px;
        padding: 14px 16px;
        font-family: 'Neue', sans-serif;
        font-size: 1.05rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-yes { background: #1f1f1f; color: white; border: 1px solid rgba(255,255,255,0.25); }
    .btn-no { background: #1f1f1f; color: var(--np-red); border: 1px solid rgba(255,255,255,0.25); }

    .btn-yes:hover { filter: brightness(1.05); }
    .btn-no:hover { filter: brightness(0.95); }

    .vote-summary {
        display: flex;
        justify-content: space-between;
        font-family: 'Lexend', sans-serif;
        font-size: 1.05rem;
        color: #ffe3ec;
        gap: 12px;
        flex-wrap: wrap;
    }

    .vote-summary .count { display: inline-flex; align-items: center; gap: 6px; }

    .vote-counts {
        display: flex;
        gap: 14px;
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        color: #ffe3ec;
        margin: 4px 0 8px;
        flex-wrap: wrap;
    }

    .vote-counts .yes { color: #ffe3ec; }
    .vote-counts .no { color: var(--np-red); }

    .participando {
        background: rgba(36, 36, 36, 0.92);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 12px 30px rgba(0,0,0,0.35);
    }

    .participando h4 {
        font-family: 'Neue', sans-serif;
        color: white;
        margin: 0;
        font-size: 1.5rem;
    }

    .participando-divider {
        height: 3px;
        background: white;
        margin: 10px 0 14px;
        width: 100%;
    }

    .participando-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .participando-item {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 14px 16px;
        color: white;
        font-family: 'Lexend', sans-serif;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .participando-name { font-size: 1.12rem; }

    table.equipo-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    table.equipo-table th, table.equipo-table td {
        padding: 12px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        vertical-align: middle;
    }

    table.equipo-table th {
        font-family: 'Neue', sans-serif;
        color: white;
        background: rgba(255, 255, 255, 0.04);
    }

    table.equipo-table tr:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    .badge-pill {
        padding: 8px 14px;
        border-radius: 999px;
        font-size: 1rem;
    }

    .cta-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 10px;
        background: var(--np-red);
        color: white;
        text-decoration: none;
        font-family: 'Neue', sans-serif;
        transition: all 0.2s ease;
    }

    .cta-link:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .members-actions {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 14px;
    }

    .member-actions {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-left: auto;
    }

    .member-actions-admin {
        display: flex;
        gap: 8px;
    }

    .member-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 6px;
        color: white;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 1rem;
    }

    .member-btn-edit {
        background: #2196F3;
    }

    .member-btn-edit:hover {
        background: white;
        color: #2196F3;
        transform: scale(1.05);
    }

    .member-btn-delete {
        background: #f44336;
    }

    .member-btn-delete:hover {
        background: white;
        color: #f44336;
        transform: scale(1.05);
    }

    .member-btn-view {
        background: #00b894;
    }

    .member-btn-view:hover {
        background: white;
        color: #00b894;
        transform: scale(1.05);
    }

    .empty-state {
        background: rgba(255, 255, 255, 0.02);
        border: 1px dashed rgba(255, 255, 255, 0.12);
        padding: 18px;
        border-radius: 12px;
        color: #dcdcdc;
        font-family: 'Lexend', sans-serif;
    }

    /* Tablet */
    @@media (max-width: 1024px) {
        .page-wrapper {
            padding: 40px 48px 60px 24px;
            width: calc(100% - 72px);
            max-width: 100%;
        }

        .team-hero {
            gap: 18px;
            flex-wrap: wrap;
        }

