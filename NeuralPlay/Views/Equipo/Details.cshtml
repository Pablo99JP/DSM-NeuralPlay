            padding-right: 15px;
            padding-left: 15px;
        }

        .team-tabs::-webkit-scrollbar {
            display: none;
        }

        .tab-button {
            padding: 10px 12px;
            font-size: 1rem;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .panel {
            padding: 16px;
        }

        /* Aumentar tama√±o bot√≥n invitar miembros */
        .cta-link {
            font-size: 1.1rem;
            padding: 12px 16px;
        }

        /* Invertir orden torneos: participando arriba, propuestas abajo */
        .torneos-grid {
            display: flex;
            flex-direction: column-reverse;
            gap: 20px;
        }

        /* Ajustar torneos: poner bot√≥n debajo del nombre */
        .participando-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
            padding: 16px;
        }

        .participando-name {
            font-size: 1.15rem;
        }

        /* Aumentar empty-state */
