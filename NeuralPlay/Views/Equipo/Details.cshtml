        }

        .equipo-table td:first-child,
        .equipo-table th:first-child {
            padding-right: 20px;
            font-size: 0.65rem;
        }

        /* Ocultar emoji de medalla en mobile */
        .badge-emoji {
            display: none;
        }

        /* Alinear posici√≥n a la derecha */
        .equipo-table td:nth-child(2),
        .equipo-table th:nth-child(2) {
            text-align: right;
            padding-right: 8px;
        }

        .badge-pill {
            font-size: 0.7rem;
            padding: 4px 6px;
        }
    }
</style>

<div class="page-wrapper">
    <div class="team-hero">
        <div class="team-avatar">
            <img src="@logo" alt="@Model.Nombre" />
        </div>
        <div class="team-header-text">
            <h1>@Model.Nombre</h1>
            <div class="team-divider"></div>
            @if (!string.IsNullOrEmpty(Model.Descripcion))
            {
                <p class="team-subtitle">@Model.Descripcion</p>
            }
        </div>
    </div>

    <div class="tabs-wrapper">
        <div class="team-tabs">
            <button class="tab-button active" data-target="tab-chat"><i class="bi bi-chat-dots"></i> Chat de equipo</button>
            <button class="tab-button" data-target="tab-miembros"><i class="bi bi-people"></i> Miembros</button>
            <button class="tab-button" data-target="tab-torneos"><i class="bi bi-trophy"></i> Torneos</button>
            <button class="tab-button" data-target="tab-palmares"><i class="bi bi-award"></i> Palmar√©s</button>
            @if (isLeader)
            {
                <button class="tab-button" data-target="tab-configuracion"><i class="bi bi-gear"></i> Configuraci√≥n</button>
            }
        </div>
    </div>

    <section id="tab-chat" class="tab-panel active">
        <div class="panel">
            <h3>Chat del equipo</h3>
            <p>Entra al chat para coordinar con tu equipo.</p>
            <a class="cta-link" asp-action="Chat" asp-route-id="@Model.IdEquipo"><i class="bi bi-arrow-right-circle"></i> Abrir chat</a>
        </div>
    </section>

    <section id="tab-miembros" class="tab-panel">
        <div class="members-actions">
            <a class="cta-link" asp-controller="Invitacion" asp-action="Create">
                <i class="bi bi-person-plus"></i> Invitar miembros
            </a>
        </div>
        @if (miembros.Any())
        {
            <div class="members-list">
                @foreach (var miembro in miembros)
                {
                    var avatar = string.IsNullOrEmpty(miembro.FotoPerfilUrl)
                        ? "/images/avatar_default.png"
                        : miembro.FotoPerfilUrl;
                    <div class="member-card">
                        <div class="member-avatar">
                            <img src="@avatar" alt="@miembro.NombreUsuario" />
                        </div>
                        <div class="member-meta">
                            <span class="member-role">@miembro.Rol</span>
                            <span class="member-name">@miembro.NombreUsuario</span>
                        </div>
                        <div class="member-actions">
                            <a href="@Url.Action("Details", "MiembroEquipo", new { id = miembro.IdMiembroEquipo })" class="member-btn member-btn-view" title="Ver detalles del miembro">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            @if (isLeader)
                            {
                                <div class="member-actions-admin">
                                    <a href="@Url.Action("Edit", "MiembroEquipo", new { id = miembro.IdMiembroEquipo })" class="member-btn member-btn-edit" title="Editar miembro">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    @if (miembro.IdUsuario != currentUserId)
                                    {
                                        <a href="@Url.Action("Delete", "MiembroEquipo", new { id = miembro.IdMiembroEquipo })" class="member-btn member-btn-delete" title="Expulsar miembro">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">Este equipo a√∫n no tiene miembros.</div>
        }
    </section>

    <section id="tab-torneos" class="tab-panel">
        <div class="torneos-grid">
            <div>
                @{
                    var propuestas = ViewBag.Propuestas as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
                }
                @if (propuestas.Any())
                {
                    @foreach (var p in propuestas)
                    {
                        <div class="proposal-card">
                            <h4>@p.Nombre</h4>
                            <p class="proposal-meta">Propuesto por @p.PropuestoPor</p>

                            <div class="vote-counts">
                                <span class="count yes">S√≠: @p.VotosAFavor</span>
                                <span class="count no">No: @p.VotosEnContra</span>
                                <span class="count">Pendientes: @p.Pendientes</span>
                            </div>

                            <a class="cta-link" asp-controller="PropuestaTorneo" asp-action="Details" asp-route-id="@p.Id">
                                <i class="bi bi-eye"></i> Ver votaci√≥n
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">No hay propuestas de torneo pendientes.</div>
                }
            </div>

            @{
                var pendientes = torneos.Where(t => t != null && t.Estado == "PENDIENTE").ToList();
                var abiertos = torneos.Where(t => t != null && t.Estado == "ABIERTO").ToList();
            }
            
            <div class="participando">
                <h4>Esperando al comienzo</h4>
                <div class="participando-divider"></div>
                @if (pendientes.Any())
                {
                    <div class="participando-list">
                        @foreach (var torneo in pendientes)
                        {
                            <div class="participando-item">
                                <span class="participando-name">@torneo.Nombre</span>
                                <a asp-controller="Torneo" asp-action="Details" asp-route-id="@torneo.IdTorneo" class="cta-link" style="padding: 8px 10px; font-size: 0.9rem;">Ver</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">No hay torneos pendientes de inicio.</div>
                }
            </div>

            <div class="participando">
                <h4>Participando actualmente</h4>
                <div class="participando-divider"></div>
                @if (abiertos.Any())
                {
                    <div class="participando-list">
                        @foreach (var torneo in abiertos)
                        {
                            <div class="participando-item">
                                <span class="participando-name">@torneo.Nombre</span>
                                <a asp-controller="Torneo" asp-action="Details" asp-route-id="@torneo.IdTorneo" class="cta-link" style="padding: 8px 10px; font-size: 0.9rem;">Ver</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">No est√° participando en torneos abiertos.</div>
                }
            </div>
        </div>
    </section>

    <section id="tab-palmares" class="tab-panel">
        <div class="panel">
            <h3>Palmar√©s</h3>
            @if (palmares.Any())
            {
                <table class="equipo-table">
                    <thead>
                        <tr>
                            <th>Torneo</th>
                            <th>Posici√≥n</th>
                            <th>Comunidad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in palmares.OrderBy(x => x.Value))
                        {
                            var torneo = item.Key;
                            var posicion = item.Value;
                            <tr>
                                <td>@torneo.Nombre</td>
                                <td>
                                    @if (posicion == 1)
                                    {
                                        <span class="badge-pill" style="background: #f3c623; color: #1f1f1f;"><span class="badge-emoji">ü•á</span> 1¬∫</span>
                                    }
                                    else if (posicion == 2)
                                    {
