@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Detalles del Equipo";
    var miembros = ViewBag.Miembros as List<NeuralPlay.Models.MiembroEquipoViewModel> ?? new List<NeuralPlay.Models.MiembroEquipoViewModel>();
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.IdEquipo</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>

    <dt class="col-sm-3">Fecha de Creación</dt>
    <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>

<div class="d-flex gap-2 mb-4">
    <a asp-action="Edit" asp-route-id="@Model.IdEquipo" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

<hr />

<h2>Miembros del Equipo</h2>

@if (miembros.Any())
{
    <div class="mb-3">
        <a asp-controller="MiembroEquipo" asp-action="Create" asp-route-idEquipo="@Model.IdEquipo" class="btn btn-success">
            Añadir Miembro
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Fecha de Alta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var miembro in miembros)
            {
                <tr>
                    <td>@miembro.NombreUsuario</td>
                    <td>@miembro.Rol</td>
                    <td>@miembro.Estado</td>
                    <td>@miembro.FechaAlta.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-controller="MiembroEquipo" asp-action="Edit" asp-route-id="@miembro.IdMiembroEquipo" class="btn btn-sm btn-outline-secondary">Editar</a>
                        <a asp-controller="MiembroEquipo" asp-action="Delete" asp-route-id="@miembro.IdMiembroEquipo" class="btn btn-sm btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>Este equipo aún no tiene miembros.</p>
        <a asp-controller="MiembroEquipo" asp-action="Create" asp-route-idEquipo="@Model.IdEquipo" class="btn btn-success">
            Añadir Primer Miembro
        </a>
    </div>
}
