@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Detalles del Equipo";
    ViewBag.OcultarNavbar = true;
    var miembros = ViewBag.Miembros as List<NeuralPlay.Models.MiembroEquipoViewModel> ?? new List<NeuralPlay.Models.MiembroEquipoViewModel>();
    var torneos = ViewBag.Torneos as List<ApplicationCore.Domain.EN.Torneo> ?? new List<ApplicationCore.Domain.EN.Torneo>();
    var palmares = ViewBag.Palmares as Dictionary<ApplicationCore.Domain.EN.Torneo, int> ?? new Dictionary<ApplicationCore.Domain.EN.Torneo, int>();
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .page-wrapper {
        margin: 0 auto;
        padding: 20px 60px 60px 60px;
        max-width: 1400px;
    }

    .team-hero {
        display: flex;
        align-items: center;
        gap: 24px;
        margin-top: 10px;
        margin-bottom: 10px;
        padding-top: 10px;
    }

    .team-avatar {
        width: 140px;
        height: 140px;
        border-radius: 20px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    }

    .team-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-header-text h1 {
        font-family: 'Neue', sans-serif;
        font-size: 6.5rem;
        color: white;
        margin: 0 0 16px 0;
    }

    .team-divider {
        height: 3px;
        background: white;
        margin: 0 0 18px 0;
        width: 100%;
    }

    .team-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 0;
        font-size: 1.05rem;
    }

    .tabs-wrapper {
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 14px;
        padding: 4px 8px;
        margin: 24px 0 18px;
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.28);
    }

    .team-tabs {
        display: flex;
        gap: 0;
        border-bottom: 2px solid rgba(255, 255, 255, 0.08);
    }

    .tab-button {
        background: transparent;
        color: white;
        border: none;
        border-bottom: 3px solid transparent;
        padding: 12px 18px;
        font-family: 'Neue', sans-serif;
        font-size: 1.15rem;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .tab-button i {
        font-size: 1.2rem;
    }

    .tab-button.active {
        color: var(--np-red);
        border-bottom-color: var(--np-red);
    }

    .tab-button:hover {
        color: var(--np-red);
    }

    .panel {
        background: rgba(36, 36, 36, 0.92);
        border-radius: 14px;
        padding: 24px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
        margin-bottom: 22px;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .panel h3 {
        font-family: 'Neue', sans-serif;
        color: white;
        margin-bottom: 18px;
        font-size: 1.7rem;
    }

    .panel p, .panel span, .panel td, .panel th, .panel li {
        font-family: 'Lexend', sans-serif;
        color: white;
    }

    .tab-panel { display: none; }
    .tab-panel.active { display: block; }

    .members-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .member-card {
        display: flex;
        align-items: center;
        gap: 12px;
        background: rgba(36, 36, 36, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 10px 12px;
    }

    .member-avatar {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.08);
        flex-shrink: 0;
    }

    .member-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .member-meta {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .member-role {
        font-family: 'Neue', sans-serif;
        color: var(--np-red);
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .member-name {
        font-family: 'Lexend', sans-serif;
        color: white;
        font-size: 1.2rem;
        margin: 0;
    }

    /* Torneos layout */
    .torneos-grid {
        display: grid;
        grid-template-columns: 1.1fr 1.2fr;
        gap: 18px;
        align-items: start;
    }

    .proposal-card {
        background: var(--np-red);
        border-radius: 16px;
        padding: 22px;
        color: white;
        box-shadow: 0 12px 30px rgba(0,0,0,0.4);
    }

    .proposal-card h4 {
        font-family: 'Neue', sans-serif;
        margin: 0 0 10px 0;
        font-size: 1.6rem;
    }

    .proposal-meta {
        font-family: 'Lexend', sans-serif;
        margin: 0 0 14px 0;
        color: #ffe3ec;
        font-size: 1.05rem;
    }

    .vote-actions {
        display: flex;
        gap: 14px;
        margin: 16px 0 10px;
    }

    .btn-vote {
        flex: 1;
        border: none;
        border-radius: 12px;
        padding: 14px 16px;
        font-family: 'Neue', sans-serif;
        font-size: 1.05rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-yes { background: #1f1f1f; color: white; border: 1px solid rgba(255,255,255,0.25); }
    .btn-no { background: #1f1f1f; color: var(--np-red); border: 1px solid rgba(255,255,255,0.25); }

    .btn-yes:hover { filter: brightness(1.05); }
    .btn-no:hover { filter: brightness(0.95); }

    .vote-summary {
        display: flex;
        justify-content: space-between;
        font-family: 'Lexend', sans-serif;
        font-size: 1.05rem;
        color: #ffe3ec;
        gap: 12px;
        flex-wrap: wrap;
    }

    .vote-summary .count { display: inline-flex; align-items: center; gap: 6px; }

    .vote-counts {
        display: flex;
        gap: 14px;
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        color: #ffe3ec;
        margin: 4px 0 8px;
        flex-wrap: wrap;
    }

    .vote-counts .yes { color: #ffe3ec; }
    .vote-counts .no { color: var(--np-red); }

    .participando {
        background: rgba(36, 36, 36, 0.92);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 12px 30px rgba(0,0,0,0.35);
    }

    .participando h4 {
        font-family: 'Neue', sans-serif;
        color: white;
        margin: 0;
        font-size: 1.5rem;
    }

    .participando-divider {
        height: 3px;
        background: white;
        margin: 10px 0 14px;
        width: 100%;
    }

    .participando-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .participando-item {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 14px 16px;
        color: white;
        font-family: 'Lexend', sans-serif;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .participando-name { font-size: 1.12rem; }

    table.equipo-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    table.equipo-table th, table.equipo-table td {
        padding: 12px 14px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        vertical-align: middle;
    }

    table.equipo-table th {
        font-family: 'Neue', sans-serif;
        color: white;
        background: rgba(255, 255, 255, 0.04);
    }

    table.equipo-table tr:hover {
        background: rgba(255, 255, 255, 0.02);
    }

    .badge-pill {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 0.95rem;
    }

    .cta-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 10px;
        background: var(--np-red);
        color: white;
        text-decoration: none;
        font-family: 'Neue', sans-serif;
        transition: all 0.2s ease;
    }

    .cta-link:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .empty-state {
        background: rgba(255, 255, 255, 0.02);
        border: 1px dashed rgba(255, 255, 255, 0.12);
        padding: 18px;
        border-radius: 12px;
        color: #dcdcdc;
        font-family: 'Lexend', sans-serif;
    }
</style>

<div class="page-wrapper">
    <div class="team-hero">
        <div class="team-avatar">
            <img src="@logo" alt="@Model.Nombre" />
        </div>
        <div class="team-header-text">
            <h1>@Model.Nombre</h1>
            <div class="team-divider"></div>
            @if (!string.IsNullOrEmpty(Model.Descripcion))
            {
                <p class="team-subtitle">@Model.Descripcion</p>
            }
        </div>
    </div>

    <div class="tabs-wrapper">
        <div class="team-tabs">
            <button class="tab-button active" data-target="tab-chat"><i class="bi bi-chat-dots"></i> Chat de equipo</button>
            <button class="tab-button" data-target="tab-miembros"><i class="bi bi-people"></i> Miembros</button>
            <button class="tab-button" data-target="tab-torneos"><i class="bi bi-trophy"></i> Torneos</button>
            <button class="tab-button" data-target="tab-palmares"><i class="bi bi-award"></i> PalmarÃ©s</button>
        </div>
    </div>

    <section id="tab-chat" class="tab-panel active">
        <div class="panel">
            <h3>Chat del equipo</h3>
            <p>Entra al chat para coordinar con tu equipo.</p>
            <a class="cta-link" asp-action="Chat" asp-route-id="@Model.IdEquipo"><i class="bi bi-arrow-right-circle"></i> Abrir chat</a>
        </div>
    </section>

    <section id="tab-miembros" class="tab-panel">
        @if (miembros.Any())
        {
            <div class="members-list">
                @foreach (var miembro in miembros)
                {
                    var avatar = string.IsNullOrEmpty(miembro.FotoPerfilUrl)
                        ? "/images/avatar_default.png"
                        : miembro.FotoPerfilUrl;
                    <div class="member-card">
                        <div class="member-avatar">
                            <img src="@avatar" alt="@miembro.NombreUsuario" />
                        </div>
                        <div class="member-meta">
                            <span class="member-role">@miembro.Rol</span>
                            <span class="member-name">@miembro.NombreUsuario</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">Este equipo aÃºn no tiene miembros.</div>
        }
    </section>

    <section id="tab-torneos" class="tab-panel">
        <div class="torneos-grid">
            <div>
                @{
                    var propuestas = ViewBag.Propuestas as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
                }
                @if (propuestas.Any())
                {
                    @foreach (var p in propuestas)
                    {
                        <div class="proposal-card">
                            <h4>@p.Nombre</h4>
                            <p class="proposal-meta">Propuesto por @p.PropuestoPor</p>

                            @if (!p.HasVotado)
                            {
                                <div class="vote-actions">
                                    <form asp-controller="PropuestaTorneo" asp-action="Votar" method="post">
                                        <input type="hidden" name="propuestaId" value="@p.Id" />
                                        <input type="hidden" name="decision" value="true" />
                                        <button type="submit" class="btn-vote btn-yes">SÃ­</button>
                                    </form>
                                    <form asp-controller="PropuestaTorneo" asp-action="Votar" method="post">
                                        <input type="hidden" name="propuestaId" value="@p.Id" />
                                        <input type="hidden" name="decision" value="false" />
                                        <button type="submit" class="btn-vote btn-no">No</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="vote-summary">Ya has votado en esta propuesta.</div>
                            }

                            <div class="vote-counts">
                                <span class="count yes">SÃ­: @p.VotosAFavor</span>
                                <span class="count no">No: @p.VotosEnContra</span>
                                <span class="count">Pendientes: @p.Pendientes</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">No hay propuestas de torneo pendientes.</div>
                }
            </div>

            @{
                var abiertos = torneos.Where(t => t != null && t.Estado == "ABIERTO").ToList();
            }
            <div class="participando">
                <h4>Participando actualmente</h4>
                <div class="participando-divider"></div>
                @if (abiertos.Any())
                {
                    <div class="participando-list">
                        @foreach (var torneo in abiertos)
                        {
                            <div class="participando-item">
                                <span class="participando-name">@torneo.Nombre</span>
                                <a asp-controller="Torneo" asp-action="Details" asp-route-id="@torneo.IdTorneo" class="cta-link" style="padding: 8px 10px; font-size: 0.9rem;">Ver</a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">No estÃ¡ participando en torneos abiertos.</div>
                }
            </div>
        </div>
    </section>

    <section id="tab-palmares" class="tab-panel">
        <div class="panel">
            <h3>PalmarÃ©s</h3>
            @if (palmares.Any())
            {
                <table class="equipo-table">
                    <thead>
                        <tr>
                            <th>Torneo</th>
                            <th>Comunidad</th>
                            <th>PosiciÃ³n</th>
                            <th style="width: 120px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in palmares.OrderBy(x => x.Value))
                        {
                            var torneo = item.Key;
                            var posicion = item.Value;
                            <tr>
                                <td>@torneo.Nombre</td>
                                <td>@(torneo.ComunidadOrganizadora?.Nombre ?? "-")</td>
                                <td>
                                    @if (posicion == 1)
                                    {
                                        <span class="badge-pill" style="background: #f3c623; color: #1f1f1f;">ðŸ¥‡ 1Âº</span>
                                    }
                                    else if (posicion == 2)
                                    {
                                        <span class="badge-pill" style="background: #bdc3c7; color: #1f1f1f;">ðŸ¥ˆ 2Âº</span>
                                    }
                                    else if (posicion == 3)
                                    {
                                        <span class="badge-pill" style="background: #e74c3c;">ðŸ¥‰ 3Âº</span>
                                    }
                                    else
                                    {
                                        <span class="badge-pill" style="background: rgba(255,255,255,0.08);">@($"{posicion}Âº")</span>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="Torneo" asp-action="Details" asp-route-id="@torneo.IdTorneo" class="cta-link" style="padding: 8px 10px; font-size: 0.95rem;">Ver</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">Este equipo no tiene palmarÃ©s todavÃ­a.</div>
            }
        </div>
    </section>
</div>

<script>
    (function() {
        const buttons = document.querySelectorAll('.tab-button');
        const panels = document.querySelectorAll('.tab-panel');

        buttons.forEach(btn => {
            btn.addEventListener('click', () => {
                const target = btn.getAttribute('data-target');

                buttons.forEach(b => b.classList.remove('active'));
                panels.forEach(p => p.classList.remove('active'));

                btn.classList.add('active');
                const panel = document.getElementById(target);
                if (panel) panel.classList.add('active');
            });
        });
    })();
</script>
