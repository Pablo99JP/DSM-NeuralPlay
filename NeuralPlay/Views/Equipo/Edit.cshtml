@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Editar Equipo";
    ViewBag.OcultarNavbar = true;
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
    }

    .main-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        z-index: 1;
    }

    .content-container {
        position: absolute;
        left: 11%;
        top: 0;
        width: 83%;
        min-height: 100vh;
        z-index: 2;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .page-header {
        margin-bottom: 40px;
        display: flex;
        align-items: center;
        gap: 18px;
        width: 100%;
        max-width: 1000px;
    }

    .team-avatar {
        width: 110px;
        height: 110px;
        border-radius: 18px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
        flex-shrink: 0;
    }

    .team-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 6rem;
        color: white;
        text-transform: uppercase;
        text-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
        margin: 0;
        letter-spacing: 2px;
        line-height: 0.95;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 6px 0 0 0;
        font-size: 1rem;
    }

    .form-card {
        background: rgba(36, 36, 36, 0.95);
        border-radius: 10px;
        padding: 40px;
        margin: 0 60px 30px 60px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        max-width: 900px;
        width: calc(100% - 120px);
    }

    .form-select option { background: var(--np-dark-grey); color: white; padding: 10px; }

    .readonly-input {
        background: rgba(229, 10, 70, 0.12);
        border-color: var(--np-red);
        color: white;
    }

    .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn-submit {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        padding: 14px 34px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover {
        background: transparent;
        color: var(--np-red);
        transform: scale(1.03);
    }

    .btn-cancel {
        font-family: 'Lexend', sans-serif;
        font-size: 1.2rem;
        padding: 14px 34px;
        background: transparent;
        color: white;
        border: 2px solid white;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-cancel:hover {
        background: white;
        color: var(--np-dark-grey);
    }

    .form-note { font-family: 'Lexend', sans-serif; font-size: 0.95rem; color: #aaa; font-style: italic; margin-top: 5px; }

    /* Media Query Tablet */
    @@media (max-width: 1024px) {
        .content-container {
            left: 0;
            width: 100%;
            padding: 40px 30px;
        }

        .page-header {
            margin: 0 60px 30px 60px;
            width: calc(100% - 120px);
        }

        .page-title {
            font-size: 4rem;
        }

        .page-subtitle {
            font-size: 0.9rem;
        }

        .form-card {
            padding: 30px;
            margin-bottom: 20px;
        }

        .team-avatar {
            width: 90px;
            height: 90px;
        }

        .btn-submit,
        .btn-cancel {
            font-size: 1rem;
            padding: 12px 28px;
        }
    }

    /* Media Query Mobile */
    @@media (max-width: 580px) {
        .content-container {
            left: 0;
            width: 100%;
            padding: 60px 12px 160px 12px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            margin: 0 20px 20px 20px;
            width: calc(100% - 40px);
        }

        .page-title {
            font-size: 2rem;
        }

        .page-subtitle {
            font-size: 0.85rem;
        }

        .form-card {
            padding: 16px;
            margin: 0 20px 60px 20px;
            width: calc(100% - 40px);
        }

        .team-avatar {
            width: 70px;
            height: 70px;
        }

        .btn-submit,
        .btn-cancel {
            width: 100%;
            font-size: 1rem;
            padding: 12px 20px;
        }

        .actions {
            flex-direction: column;
        }

        /* Logo section responsive */
        div[style*="display:flex"][style*="gap:16px"] {
            flex-direction: column !important;
            align-items: stretch !important;
        }

        div[style*="flex:1"] {
            min-width: 100% !important;
        }
    }
</style>

<div class="main-container"></div>

<main class="content-container" role="main">
    <header class="page-header">
        <figure class="team-avatar">
            <img src="@logo" alt="Logo equipo" />
            <figcaption class="visually-hidden">Logo del equipo</figcaption>
        </figure>
        <section>
            <h1 class="page-title">Editar Equipo</h1>
            <p class="page-subtitle">Actualiza la información de tu equipo</p>
        </section>
    </header>

    <section class="form-card">
        <section asp-validation-summary="ModelOnly" class="validation-panel" role="alert" aria-live="polite"></section>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="IdEquipo" />

            <section class="form-group">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-input" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-input" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label asp-for="Actividad" class="form-label">Actividad</label>
                <select asp-for="Actividad" class="form-select" asp-items="Html.GetEnumSelectList<ApplicationCore.Domain.Enums.Actividad>()"></select>
                <span asp-validation-for="Actividad" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label asp-for="Pais" class="form-label">País</label>
                <input asp-for="Pais" class="form-input" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label asp-for="Idioma" class="form-label">Idioma</label>
                <input asp-for="Idioma" class="form-input" />
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label class="form-label">Fecha de Creación</label>
                <input class="form-input readonly-input" value="@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")" readonly />
            </section>

            <section class="form-group">
                <label class="form-label">Logo del equipo</label>
                <div style="display:flex; gap:16px; align-items:center; flex-wrap:wrap;">
                    <figure class="team-avatar" style="width:90px; height:90px;">
                        <img src="@logo" alt="Logo actual" />
                        <figcaption class="visually-hidden">Logo actual</figcaption>
                    </figure>
                    <div style="flex:1; min-width:220px;">
                        <input asp-for="ImagenArchivo" type="file" accept="image/*" class="form-input" />
                        <p class="form-note">Puedes subir una nueva imagen (png/jpg/webp). Si no seleccionas ninguna, se mantiene el logo actual.</p>
                    </div>
                </div>
                <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
            </section>

            <nav class="actions" aria-label="Acciones del formulario">
                <button type="submit" class="btn-submit">Guardar cambios</button>
                <a asp-controller="Equipos" asp-action="Index" class="btn-cancel">Volver</a>
            </nav>
        </form>
    </section>
</main>
