@model NeuralPlay.Models.EquipoViewModel

@{
    ViewData["Title"] = "Editar Equipo";
    ViewBag.OcultarNavbar = true;
    var logo = string.IsNullOrEmpty(Model.ImagenUrl) ? "/Recursos/Equipos/default.webp" : Model.ImagenUrl;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-transp: #21020a7a;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
        color: white;
    }

    .page-wrapper {
        margin: 0 auto;
        padding: 40px 60px 60px 60px;
        max-width: 1200px;
    }

    .team-hero {
        display: flex;
        align-items: center;
        gap: 22px;
        margin-bottom: 18px;
    }

    .team-avatar {
        width: 120px;
        height: 120px;
        border-radius: 18px;
        overflow: hidden;
        background: var(--np-red);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
    }

    .team-avatar img { width: 100%; height: 100%; object-fit: cover; }

    .team-header-text h1 {
        font-family: 'Neue', sans-serif;
        font-size: 4.4rem;
        color: white;
        margin: 0 0 12px 0;
    }

    .team-header-text .team-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 0;
        font-size: 1rem;
    }

    .card-edit {
        background: rgba(36, 36, 36, 0.92);
        border-radius: 16px;
        padding: 28px 32px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.35);
        border: 1px solid rgba(255,255,255,0.08);
    }

    label { font-family: 'Lexend', sans-serif; color: #f5f5f5; }
    input, select, textarea {
        background: #1c1c1d;
        border: 1px solid rgba(255,255,255,0.12);
        color: white;
    }

    .actions {
        display: flex;
        gap: 12px;
        margin-top: 12px;
    }

    .btn-primary {
        background: var(--np-red);
        border: 1px solid var(--np-red);
    }
    .btn-primary:hover { filter: brightness(1.05); }

    .btn-secondary {
        background: transparent;
        border: 1px solid rgba(255,255,255,0.25);
        color: white;
    }
    .btn-secondary:hover { background: rgba(255,255,255,0.08); }

    .text-danger { font-size: 0.9rem; }
</style>

<div class="page-wrapper">
    <div class="team-hero">
        <div class="team-avatar">
            <img src="@logo" alt="Logo equipo" />
        </div>
        <div class="team-header-text">
            <h1><i class="bi bi-pencil-square"></i> Editar equipo</h1>
            <p class="team-subtitle">Actualiza la información de tu equipo.</p>
        </div>
    </div>

    <div class="card-edit">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEquipo" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Actividad" class="form-label">Actividad</label>
                <select asp-for="Actividad" class="form-select" asp-items="Html.GetEnumSelectList<ApplicationCore.Domain.Enums.Actividad>()"></select>
                <span asp-validation-for="Actividad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Pais" class="form-label">País</label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Idioma" class="form-label">Idioma</label>
                <input asp-for="Idioma" class="form-control" />
                <span asp-validation-for="Idioma" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Fecha de Creación</label>
                <input class="form-control" value="@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")" readonly />
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-primary">Guardar cambios</button>
                <a asp-controller="Equipos" asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
