@model IEnumerable<NeuralPlay.Models.MiembroEquipoViewModel>

@{
    ViewData["Title"] = "Miembros de Equipo";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        position: relative;
        left: 11%;
        width: 83%;
        min-height: 100vh;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 4px 0 0 0;
        font-size: 1.05rem;
    }

    .cta-add {
        font-family: 'Lexend', sans-serif;
        padding: 12px 20px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .cta-add:hover { background: transparent; color: var(--np-red); }

    .card-panel {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .validation-panel {
        color: var(--np-red);
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        margin-bottom: 12px;
        padding: 12px;
        background: rgba(229, 10, 70, 0.08);
        border-radius: 8px;
        border-left: 4px solid var(--np-red);
    }

    table.members-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    table.members-table thead th {
        font-family: 'Neue', sans-serif;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: rgba(255, 255, 255, 0.05);
        padding: 14px 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    table.members-table tbody td {
        font-family: 'Lexend', sans-serif;
        color: white;
        padding: 12px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    table.members-table tbody tr:hover { background: rgba(255, 255, 255, 0.03); }

    .badge-pill {
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
    }

    .actions-inline {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .action-btn {
        font-family: 'Lexend', sans-serif;
        padding: 8px 12px;
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
        background: rgba(255, 255, 255, 0.04);
    }

    .action-btn:hover { filter: brightness(1.05); transform: translateY(-1px); }

    .action-edit { border-color: #2196F3; color: #e3f2fd; }
    .action-edit:hover { background: #2196F3; color: #0d1b2a; }

    .action-view { border-color: #00b894; color: #d1fff2; }
    .action-view:hover { background: #00b894; color: #0d1b2a; }

    .action-delete { border-color: #f44336; color: #ffe3e0; }
    .action-delete:hover { background: #f44336; color: #0d1b2a; }
</style>

<div class="content-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Miembros de equipo</h1>
            <p class="page-subtitle">Gestiona roles y estados de los miembros</p>
        </div>
        <a asp-action="Create" class="cta-add"><i class="bi bi-person-plus"></i> Añadir miembro</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="validation-panel">@TempData["Error"]</div>
    }

    <section class="card-panel">
        <table class="members-table">
            <thead>
                <tr>
                    <th>Equipo</th>
                    <th>Usuario</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Alta</th>
                    <th style="width: 240px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model ?? Enumerable.Empty<NeuralPlay.Models.MiembroEquipoViewModel>())
                {
                    <tr>
                        <td>@item.NombreEquipo</td>
                        <td>@item.NombreUsuario</td>
                        <td><span class="badge-pill">@item.Rol</span></td>
                        <td><span class="badge-pill">@item.Estado</span></td>
                        <td>@item.FechaAlta.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="actions-inline">
                                <a asp-action="Edit" asp-route-id="@item.IdMiembroEquipo" class="action-btn action-edit"><i class="bi bi-pencil-square"></i> Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdMiembroEquipo" class="action-btn action-view"><i class="bi bi-eye"></i> Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdMiembroEquipo" class="action-btn action-delete"><i class="bi bi-trash"></i> Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>

