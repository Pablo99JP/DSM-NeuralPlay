@model NeuralPlay.Models.MiembroEquipoViewModel

@{
    ViewData["Title"] = "Detalles del Miembro de Equipo";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        position: relative;
        left: 11%;
        width: 83%;
        min-height: 100vh;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        gap: 26px;
    }

    .page-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 4px 0 0 0;
        font-size: 1.05rem;
    }

    .info-card {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 28px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 18px;
        margin-top: 10px;
    }

    .info-block {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        padding: 14px 16px;
    }

    .info-label {
        font-family: 'Neue', sans-serif;
        font-size: 1rem;
        color: var(--np-red);
        margin: 0 0 6px 0;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .info-value {
        font-family: 'Lexend', sans-serif;
        font-size: 1.1rem;
        margin: 0;
        color: white;
    }

    .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 18px;
    }

    .btn-primary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-primary-custom:hover { background: transparent; color: var(--np-red); }

    .btn-secondary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: transparent;
        color: white;
        border: 2px solid white;
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-secondary-custom:hover { background: white; color: var(--np-dark-grey); }
</style>

<div class="content-container">
    <header class="page-header">
        <div>
            <h1 class="page-title">Miembro del equipo</h1>
            <p class="page-subtitle">Consulta los datos de este miembro</p>
        </div>
    </header>

    <section class="info-card">
        <div class="info-grid">
            <div class="info-block">
                <p class="info-label">Equipo</p>
                <p class="info-value">@Model.NombreEquipo</p>
            </div>
            <div class="info-block">
                <p class="info-label">Usuario</p>
                <p class="info-value">@Model.NombreUsuario</p>
            </div>
            <div class="info-block">
                <p class="info-label">Rol</p>
                <p class="info-value">@Model.Rol</p>
            </div>
            <div class="info-block">
                <p class="info-label">Estado</p>
                <p class="info-value">@Model.Estado</p>
            </div>
            <div class="info-block">
                <p class="info-label">Fecha de alta</p>
                <p class="info-value">@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            @if (Model.FechaAccion.HasValue)
            {
                <div class="info-block">
                    <p class="info-label">Fecha de acci√≥n</p>
                    <p class="info-value">@Model.FechaAccion.Value.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            }
            @if (Model.FechaBaja.HasValue)
            {
                <div class="info-block">
                    <p class="info-label">Fecha de baja</p>
                    <p class="info-value">@Model.FechaBaja.Value.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            }
        </div>

        <div class="actions">
            <a asp-controller="Equipo" asp-action="Details" asp-route-id="@Model.IdEquipo" class="btn-secondary-custom"><i class="bi bi-arrow-left"></i> Volver</a>
        </div>
    </section>
</div>
