@model NeuralPlay.Models.MiembroEquipoViewModel

@{
    ViewData["Title"] = "Editar Miembro de Equipo";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        position: relative;
        left: 11%;
        width: 83%;
        min-height: 100vh;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        gap: 26px;
    }

    .page-header { display: flex; align-items: center; gap: 16px; }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 4px 0 0 0;
        font-size: 1.05rem;
    }

    .form-card {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 32px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        max-width: 960px;
    }

    .form-group { margin-bottom: 22px; }

    .form-label {
        font-family: 'Neue', sans-serif;
        font-size: 1.2rem;
        color: var(--np-red);
        margin-bottom: 8px;
        display: block;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .form-input,
    .form-select {
        font-family: 'Lexend', sans-serif;
        font-size: 1.05rem;
        width: 100%;
        padding: 12px 14px;
        background: rgba(69, 69, 69, 0.82);
        border: 2px solid var(--np-grey);
        border-radius: 8px;
        color: white;
        transition: all 0.25s ease;
    }

    .form-input:focus,
    .form-select:focus {
        outline: none;
        border-color: var(--np-red);
        background: rgba(69, 69, 69, 1);
        box-shadow: 0 0 10px rgba(229, 10, 70, 0.25);
    }

    .readonly-pill {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 12px 14px;
        font-family: 'Lexend', sans-serif;
        color: white;
    }

    .validation-panel {
        color: var(--np-red);
        font-family: 'Lexend', sans-serif;
        font-size: 1rem;
        margin-bottom: 18px;
        padding: 12px;
        background: rgba(229, 10, 70, 0.08);
        border-radius: 8px;
        border-left: 4px solid var(--np-red);
    }

    .actions { display: flex; gap: 12px; flex-wrap: wrap; }

    .btn-primary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-primary-custom:hover { background: transparent; color: var(--np-red); }

    .btn-secondary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: transparent;
        color: white;
        border: 2px solid white;
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-secondary-custom:hover { background: white; color: var(--np-dark-grey); }
</style>

<div class="content-container">
    <header class="page-header">
        <div>
            <h1 class="page-title">Editar miembro</h1>
            <p class="page-subtitle">Actualiza el rol y estado del miembro</p>
        </div>
    </header>

    <section class="form-card">
        <div asp-validation-summary="ModelOnly" class="validation-panel"></div>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdMiembroEquipo" />
            <input type="hidden" asp-for="IdUsuario" />
            <input type="hidden" asp-for="IdEquipo" />

            <div class="form-group">
                <label class="form-label">Equipo</label>
                <div class="readonly-pill">@Model.NombreEquipo</div>
            </div>

            <div class="form-group">
                <label class="form-label">Usuario</label>
                <div class="readonly-pill">@Model.NombreUsuario</div>
            </div>

            <div class="form-group">
                <label asp-for="Rol" class="form-label">Rol</label>
                <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select"></select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Fecha de Alta</label>
                <div class="readonly-pill">@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</div>
            </div>

            <div class="actions">
                <button type="submit" class="btn-primary-custom"><i class="bi bi-save"></i> Guardar cambios</button>
                <a asp-controller="Equipo" asp-action="Details" asp-route-id="@Model.IdEquipo" class="btn-secondary-custom"><i class="bi bi-arrow-left"></i> Volver</a>
            </div>
        </form>
    </section>
</div>
