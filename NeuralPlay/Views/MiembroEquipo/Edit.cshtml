@model NeuralPlay.Models.MiembroEquipoViewModel

@{
    ViewData["Title"] = "Editar Miembro de Equipo";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdMiembroEquipo" />
            <input type="hidden" asp-for="IdUsuario" />
            <input type="hidden" asp-for="IdEquipo" />

            <div class="form-group mb-3">
                <label class="form-label">Equipo</label>
                <input class="form-control" value="@Model.NombreEquipo" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Usuario</label>
                <input class="form-control" value="@Model.NombreUsuario" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rol" class="form-label">Rol</label>
                <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select">
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select">
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Fecha de Alta</label>
                <input class="form-control" value="@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")" readonly />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
