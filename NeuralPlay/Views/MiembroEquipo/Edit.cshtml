@model NeuralPlay.Models.MiembroEquipoViewModel

@{
    ViewData["Title"] = "Editar Miembro de Equipo";
    ViewBag.OcultarNavbar = true;
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --np-red: #e50a46;
        --np-grey: #454545;
        --np-dark-grey: #242424;
    }

    @@font-face {
        font-family: 'Neue';
        src: url('/Recursos/NeuePower-Ultra.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    @@font-face {
        font-family: 'Lexend';
        src: url('/Recursos/Lexend-Medium.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        color: white;
        background: url('/Recursos/WALLPAPER_GRIS.png') no-repeat center center fixed;
        background-size: cover;
    }

    .content-container {
        position: relative;
        left: 11%;
        width: 83%;
        min-height: 100vh;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        gap: 26px;
    }

    .page-header { 
        display: flex; 
        align-items: center; 
        gap: 16px;
        margin-bottom: 40px;
    }

    .page-title {
        font-family: 'Neue', sans-serif;
        font-size: 4.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .page-subtitle {
        font-family: 'Lexend', sans-serif;
        color: #d7d7d7;
        margin: 4px 0 0 0;
        font-size: 1.05rem;
    }

    .form-card {
        background: rgba(36, 36, 36, 0.94);
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.35);
        border: 1px solid rgba(255, 255, 255, 0.06);
        max-width: 900px;
        margin: 0 60px 30px 60px;
        width: calc(100% - 120px);
    }

    .readonly-pill {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 12px 14px;
        font-family: 'Lexend', sans-serif;
        color: white;
    }

    .btn-primary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: var(--np-red);
        color: white;
        border: 2px solid var(--np-red);
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-primary-custom:hover { background: transparent; color: var(--np-red); }

    .btn-secondary-custom {
        font-family: 'Lexend', sans-serif;
        padding: 12px 24px;
        border-radius: 24px;
        background: transparent;
        color: white;
        border: 2px solid white;
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .btn-secondary-custom:hover { background: white; color: var(--np-dark-grey); }

    .actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 20px;
    }

    /* Ajustes tablet */
    @@media (max-width: 1024px) {
        .page-header {
            margin: 0 60px 30px 60px;
            width: calc(100% - 120px);
        }

        .page-title { font-size: 3.5rem; }
        .page-subtitle { font-size: 0.95rem; }

        .form-card {
            padding: 30px;
            margin: 0 60px 20px 60px;
            width: calc(100% - 120px);
        }

        .btn-primary-custom,
        .btn-secondary-custom {
            font-size: 1rem;
            padding: 12px 28px;
        }
    }

    /* Ajustes mobile */
    @@media (max-width: 580px) {
        .content-container { padding: 80px 12px 110px; }
        
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            margin: 0 20px 20px 20px;
            width: calc(100% - 40px);
        }
        
        .page-title { font-size: 2rem; }
        .page-subtitle { font-size: 0.85rem; }
        
        .form-card { 
            padding: 16px; 
            margin: 0 20px 60px 20px;
            width: calc(100% - 40px);
        }
        
        .btn-primary-custom, 
        .btn-secondary-custom { 
            width: 100%; 
            font-size: 1rem;
            padding: 12px 20px;
            text-align: center;
        }
        
        .actions { 
            flex-direction: column;
            margin-top: 16px;
        }
    }
</style>

<main class="content-container" role="main">
    <header class="page-header">
        <section>
            <h1 class="page-title">Editar miembro</h1>
            <p class="page-subtitle">Actualiza el rol y estado del miembro</p>
        </section>
    </header>

    <section class="form-card">
        <section asp-validation-summary="ModelOnly" class="validation-panel" role="alert" aria-live="polite"></section>

        @if (ViewBag.EsUnicoAdmin == true)
        {
            <section class="validation-panel" role="alert" style="background: rgba(255, 152, 0, 0.1); color: #fff3cd; border-left-color: #ff9800;">
                <i class="bi bi-exclamation-triangle-fill"></i> Eres el único administrador del equipo. No puedes cambiar tu rol hasta que asignes a otro miembro como administrador.
            </section>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdMiembroEquipo" />
            <input type="hidden" asp-for="IdUsuario" />
            <input type="hidden" asp-for="IdEquipo" />

            <section class="form-group">
                <label class="form-label">Equipo</label>
                <div class="readonly-pill">@Model.NombreEquipo</div>
            </section>

            <section class="form-group">
                <label class="form-label">Usuario</label>
                <div class="readonly-pill">@Model.NombreUsuario</div>
            </section>

            <section class="form-group">
                <label asp-for="Rol" class="form-label">Rol</label>
                @if (ViewBag.EsUnicoAdmin == true)
                {
                    <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select" disabled></select>
                    <input type="hidden" asp-for="Rol" />
                    <p style="color: #ff9800; font-size: 0.9rem; margin-top: 8px;"><i class="bi bi-info-circle"></i> No puedes modificar tu rol siendo el único administrador</p>
                }
                else
                {
                    <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select"></select>
                }
                <span asp-validation-for="Rol" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select"></select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </section>

            <section class="form-group">
                <label class="form-label">Fecha de Alta</label>
                <div class="readonly-pill">@Model.FechaAlta.ToString("dd/MM/yyyy HH:mm")</div>
            </section>

            <nav class="actions" aria-label="Acciones del formulario">
                <button type="submit" class="btn-primary-custom"><i class="bi bi-save"></i> Guardar cambios</button>
                <a asp-controller="Equipo" asp-action="Details" asp-route-id="@Model.IdEquipo" class="btn-secondary-custom"><i class="bi bi-arrow-left"></i> Volver</a>
            </nav>
        </form>
    </section>
</main>

