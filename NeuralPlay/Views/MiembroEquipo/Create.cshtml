@model NeuralPlay.Models.MiembroEquipoViewModel

@{
    ViewData["Title"] = "Añadir Miembro al Equipo";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<h1>@ViewData["Title"]</h1>

<main role="main">
    <section>
        <form asp-action="Create" method="post">
            <section asp-validation-summary="ModelOnly" class="text-danger" role="alert" aria-live="polite"></section>

            <section class="form-group mb-3">
                <label asp-for="IdEquipo" class="form-label">Selecciona el Equipo</label>
                <select asp-for="IdEquipo" asp-items="ViewBag.Equipos" class="form-select">
                    <option value="">-- Seleccione un equipo --</option>
                </select>
                <span asp-validation-for="IdEquipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdUsuario" class="form-label">Selecciona el Usuario</label>
                <select asp-for="IdUsuario" asp-items="ViewBag.Usuarios" class="form-select">
                    <option value="">-- Seleccione un usuario --</option>
                </select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Rol" class="form-label">Rol</label>
                <select asp-for="Rol" asp-items="ViewBag.Roles" class="form-select">
                    <option value="">-- Seleccione un rol --</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </section>

            <nav class="d-flex gap-2" aria-label="Acciones del formulario">
                <button type="submit" class="btn btn-primary">Añadir al Equipo</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </nav>
        </form>
    </section>
</main>
