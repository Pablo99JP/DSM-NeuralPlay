@model NeuralPlay.Models.PublicacionViewModel

@{
    ViewData["Title"] = "Nueva Publicación";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.NombreComunidad))
{
    <h4>En la comunidad: @Model.NombreComunidad</h4>
}

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* Campo oculto para mantener el IdComunidad *@
            @if (Model.IdComunidad.HasValue)
            {
                <input type="hidden" asp-for="IdComunidad" />
            }
            
            <div class="form-group mb-3">
                <label asp-for="contenido" class="control-label"></label>
                <textarea asp-for="contenido" class="form-control" rows="5"></textarea>
                <span asp-validation-for="contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Publicar" class="btn btn-primary" />
                @if (Model.IdComunidad.HasValue)
                {
                    <a asp-controller="Comunidad" asp-action="Details" asp-route-id="@Model.IdComunidad" class="btn btn-secondary">Cancelar</a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
