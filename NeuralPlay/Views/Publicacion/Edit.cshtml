@model NeuralPlay.Models.PublicacionViewModel

@{
    ViewData["Title"] = "Edit";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<style>
    /* Reset para etiquetas semánticas */
    figure, hgroup, footer, hr, fieldset, time {
        margin: 0;
        padding: 0;
    }

    fieldset {
        border: none;
        min-width: 0;
    }

    hr {
        border: none;
    }
</style>

<section>
    <header>
        <h1>Edit</h1>
        <hgroup>
            <h4>PublicacionViewModel</h4>
        </hgroup>
    </header>
    
    <hr />
    
    <section class="row">
        <section class="col-md-4">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <aside asp-validation-summary="ModelOnly" class="text-danger"></aside>
                <input asp-for="idPublicacion" type="hidden" />
                <fieldset class="form-group">
                    <label asp-for="contenido" class="control-label"></label>
                    <input asp-for="contenido" class="form-control" />
                    <span asp-validation-for="contenido" class="text-danger"></span>
                </fieldset>
                <nav class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </nav>
            </form>
        </section>
    </section>

    <nav>
        <a asp-action="Index">Back to List</a>
    </nav>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
