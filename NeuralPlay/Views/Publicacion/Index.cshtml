@model IEnumerable<NeuralPlay.Models.PublicacionViewModel>

@{
    ViewData["Title"] = "Index";
}

@Html.Partial("~/Views/Shared/_SidebarLeft.cshtml")
@Html.Partial("~/Views/Shared/_SidebarRight.cshtml")
@Html.Partial("~/Views/Shared/_SidebarDown.cshtml")

<h1>Publicaciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Publicar</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreComunidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contenido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaCreacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreComunidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NickAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCreacion)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.idPublicacion" class="btn btn-sm btn-outline-secondary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.idPublicacion" class="btn btn-sm btn-outline-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.idPublicacion" class="btn btn-sm btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
