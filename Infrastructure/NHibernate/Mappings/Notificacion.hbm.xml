<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//NHibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Notificacion, ApplicationCore" table="Notificacion">
    <id name="IdNotificacion" column="IdNotificacion" type="long">
      <generator class="native" />
    </id>
    <property name="Tipo" column="Tipo" />
    <property name="Mensaje" column="Mensaje" />
    <property name="Leida" column="Leida" />
    <property name="FechaCreacion" column="FechaCreacion" />

    <many-to-one name="Destinatario" class="ApplicationCore.Domain.EN.Usuario, ApplicationCore" column="DestinatarioId" />
  </class>
</hibernate-mapping>
