<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Usuario" table="Usuario" >
    <id name="IdUsuario" type="Int64">
      <generator class="identity" />
    </id>
    <property name="Nick" type="String" length="50" not-null="true" unique="true" />
    <property name="CorreoElectronico" type="String" length="100" not-null="true" unique="true" />
    <property name="ContrasenaHash" type="String" length="255" not-null="true" />
    <property name="Telefono" type="String" length="20" />
    <property name="FechaRegistro" type="DateTime" not-null="true" />
    <property name="EstadoCuenta" type="ApplicationCore.Domain.Enums.EstadoCuenta, ApplicationCore" not-null="true" />

    <one-to-one name="Perfil" class="Perfil" cascade="save-update" />

    <bag name="MiembrosComunidad" table="MiembroComunidad" inverse="true" cascade="all-delete-orphan">
      <key column="IdUsuario" />
      <one-to-many class="MiembroComunidad" />
    </bag>
    <bag name="MiembrosEquipo" table="MiembroEquipo" inverse="true" cascade="all-delete-orphan">
      <key column="IdUsuario" />
      <one-to-many class="MiembroEquipo" />
    </bag>
    <bag name="Sesiones" table="Sesion" inverse="true" cascade="all-delete-orphan">
      <key column="IdUsuario" />
      <one-to-many class="Sesion" />
    </bag>
  </class>
</hibernate-mapping>
