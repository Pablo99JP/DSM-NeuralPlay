<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//NHibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Comunidad, ApplicationCore" table="Comunidad">
    <id name="IdComunidad" column="IdComunidad" type="long">
      <generator class="native" />
    </id>
    <property name="Nombre" column="Nombre" />
    <property name="Descripcion" column="Descripcion" />
    <property name="FechaCreacion" column="FechaCreacion" />
    <property name="ImagenUrl" column="ImagenUrl" />

    <bag name="Equipos" inverse="true" cascade="all-delete-orphan">
      <key column="ComunidadId" />
      <one-to-many class="ApplicationCore.Domain.EN.Equipo, ApplicationCore" />
    </bag>

    <bag name="Miembros" inverse="true" lazy="false">
      <key column="ComunidadId" />
      <one-to-many class="ApplicationCore.Domain.EN.MiembroComunidad, ApplicationCore" />
    </bag>

    <bag name="Publicaciones" inverse="true" lazy="false">
      <key column="ComunidadId" />
      <one-to-many class="ApplicationCore.Domain.EN.Publicacion, ApplicationCore" />
    </bag>

    <bag name="Torneos" inverse="true" lazy="false">
      <key column="ComunidadOrganizadoraId" />
      <one-to-many class="ApplicationCore.Domain.EN.Torneo, ApplicationCore" />
    </bag>
  </class>
</hibernate-mapping>
