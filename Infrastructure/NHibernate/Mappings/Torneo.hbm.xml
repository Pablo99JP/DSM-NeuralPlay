<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//NHibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Torneo, ApplicationCore" table="Torneo">
    <id name="IdTorneo" column="IdTorneo" type="long">
      <generator class="native" />
    </id>
    <property name="Nombre" column="Nombre" />
    <property name="FechaInicio" column="FechaInicio" />
    <property name="Reglas" column="Reglas" />
    <property name="Estado" column="Estado" />

    <many-to-one name="Creador" class="ApplicationCore.Domain.EN.Usuario, ApplicationCore" column="CreadorId" />
    <many-to-one name="ComunidadOrganizadora" class="ApplicationCore.Domain.EN.Comunidad, ApplicationCore" column="ComunidadId" />

    <!-- Collections (Propuestas, Participaciones) are omitted here and will be added when those entities are mapped -->
  </class>
</hibernate-mapping>
