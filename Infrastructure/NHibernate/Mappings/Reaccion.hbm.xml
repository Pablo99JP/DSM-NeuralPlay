<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Reaccion" table="Reaccion">
    <id name="IdReaccion" column="IdReaccion" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Tipo" column="Tipo" type="ApplicationCore.Domain.Enums.TipoReaccion, ApplicationCore" not-null="true" />
    <property name="FechaCreacion" column="FechaCreacion" type="datetime" not-null="true" />
    
    <many-to-one name="Publicacion" column="PublicacionId" class="Publicacion" />
    <many-to-one name="Comentario" column="ComentarioId" class="Comentario" />
    <many-to-one name="Autor" column="AutorId" class="Usuario" not-null="true" />
    <bag name="Notificaciones" inverse="true" cascade="all">
      <key column="OrigenReaccionId" />
      <one-to-many class="Notificacion" />
    </bag>
  </class>
</hibernate-mapping>
