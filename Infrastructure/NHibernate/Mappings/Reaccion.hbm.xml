<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//NHibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="ApplicationCore.Domain.EN.Reaccion, ApplicationCore" table="Reaccion">
    <id name="IdReaccion" column="IdReaccion" type="long">
      <generator class="native" />
    </id>
    <property name="Tipo" column="Tipo" />
    <property name="FechaCreacion" column="FechaCreacion" />

    <many-to-one name="Autor" class="ApplicationCore.Domain.EN.Usuario, ApplicationCore" column="AutorId" />
    <many-to-one name="Publicacion" class="ApplicationCore.Domain.EN.Publicacion, ApplicationCore" column="PublicacionId" />
    <many-to-one name="Comentario" class="ApplicationCore.Domain.EN.Comentario, ApplicationCore" column="ComentarioId" />
  </class>
</hibernate-mapping>
