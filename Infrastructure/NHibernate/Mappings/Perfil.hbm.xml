<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN" xmlns="urn:nhibernate-mapping-2.2">
  <class name="Perfil" table="Perfil">
    <id name="IdPerfil" type="Int64" column="IdPerfil">
      <generator class="foreign">
        <param name="property">Usuario</param>
      </generator>
    </id>
    <property name="FotoPerfilUrl" type="String" length="255" />
    <property name="Descripcion" type="String" length="1000" />
    <property name="VisibilidadPerfil" type="ApplicationCore.Domain.Enums.Visibilidad, ApplicationCore" />
    <property name="VisibilidadActividad" type="ApplicationCore.Domain.Enums.Visibilidad, ApplicationCore" />

    <one-to-one name="Usuario" class="Usuario" constrained="true" />

    <many-to-one name="JuegoFavorito" class="Juego" column="JuegoFavoritoId" lazy="proxy" />

    <bag name="PerfilJuegos" table="PerfilJuego" inverse="true" cascade="all-delete-orphan">
      <key column="PerfilId" />
      <one-to-many class="PerfilJuego" />
    </bag>
  </class>
</hibernate-mapping>
