<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="connection.provider">NHibernate.Connection.DriverConnectionProvider</property>
    <property name="dialect">NHibernate.Dialect.MsSql2012Dialect</property>
    <property name="connection.driver_class">NHibernate.Driver.SqlClientDriver</property>
    <property name="connection.connection_string">Server=localhost\SQLEXPRESS;Database=ProjectDatabase;Integrated Security=True;</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="adonet.batch_size">10</property>
    <property name="hbm2ddl.auto">validate</property>
    
    <!-- Mappings de entidades principales -->
    <mapping resource="Infrastructure/NHibernate/Mappings/Usuario.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Comunidad.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Equipo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/MiembroComunidad.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/MiembroEquipo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Juego.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Torneo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Publicacion.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Perfil.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/PerfilJuego.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Sesion.hbm.xml" />
    
    <!-- Mappings de invitaciones y solicitudes -->
    <mapping resource="Infrastructure/NHibernate/Mappings/Invitacion.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/SolicitudIngreso.hbm.xml" />
    
    <!-- Mappings de chat -->
    <mapping resource="Infrastructure/NHibernate/Mappings/ChatEquipo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/MensajeChat.hbm.xml" />
    
    <!-- Mappings de interacciones sociales -->
    <mapping resource="Infrastructure/NHibernate/Mappings/Comentario.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Reaccion.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/Notificacion.hbm.xml" />
    
    <!-- Mappings de torneos -->
    <mapping resource="Infrastructure/NHibernate/Mappings/PropuestaTorneo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/VotoTorneo.hbm.xml" />
    <mapping resource="Infrastructure/NHibernate/Mappings/ParticipacionTorneo.hbm.xml" />
  </session-factory>
</hibernate-configuration>
