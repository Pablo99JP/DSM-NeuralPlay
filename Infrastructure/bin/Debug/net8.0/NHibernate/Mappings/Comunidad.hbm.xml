<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Comunidad" table="Comunidad">
    <id name="IdComunidad" column="IdComunidad" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Nombre" column="Nombre" type="string" not-null="true" />
    <property name="Descripcion" column="Descripcion" type="string" />
    <property name="FechaCreacion" column="FechaCreacion" type="datetime" not-null="true" />
    
    <bag name="Miembros" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="MiembroComunidad" />
    </bag>
    <bag name="Equipos" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="Equipo" />
    </bag>
    <bag name="Torneos" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="Torneo" />
    </bag>
    <bag name="Invitaciones" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="Invitacion" />
    </bag>
    <bag name="Solicitudes" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="SolicitudIngreso" />
    </bag>
    <bag name="Publicaciones" inverse="true" cascade="all">
      <key column="ComunidadId" />
      <one-to-many class="Publicacion" />
    </bag>
  </class>
</hibernate-mapping>
