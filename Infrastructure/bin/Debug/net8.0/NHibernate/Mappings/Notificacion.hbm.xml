<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Notificacion" table="Notificacion">
    <id name="IdNotificacion" column="IdNotificacion" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Tipo" column="Tipo" type="ApplicationCore.Domain.Enums.TipoNotificacion, ApplicationCore" not-null="true" />
    <property name="Mensaje" column="Mensaje" type="string" not-null="true" />
    <property name="Leida" column="Leida" type="boolean" not-null="true" />
    <property name="FechaCreacion" column="FechaCreacion" type="datetime" not-null="true" />
    
    <many-to-one name="Destinatario" column="DestinatarioId" class="Usuario" not-null="true" />
    <many-to-one name="OrigenPublicacion" column="OrigenPublicacionId" class="Publicacion" />
    <many-to-one name="OrigenComentario" column="OrigenComentarioId" class="Comentario" />
    <many-to-one name="OrigenPropuesta" column="OrigenPropuestaId" class="PropuestaTorneo" />
    <many-to-one name="OrigenReaccion" column="OrigenReaccionId" class="Reaccion" />
  </class>
</hibernate-mapping>
