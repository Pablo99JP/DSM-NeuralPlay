<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Publicacion" table="Publicacion">
    <id name="IdPublicacion" column="IdPublicacion" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="Contenido" column="Contenido" type="string" not-null="true" />
    <property name="FechaCreacion" column="FechaCreacion" type="datetime" not-null="true" />
    <property name="FechaEdicion" column="FechaEdicion" type="datetime" />
    
    <many-to-one name="Comunidad" class="Comunidad" column="ComunidadId" />
    <many-to-one name="Autor" class="Usuario" column="AutorId" not-null="true" />
    <bag name="Comentarios" inverse="true" cascade="all">
      <key column="PublicacionId" />
      <one-to-many class="Comentario" />
    </bag>
    <bag name="Reacciones" inverse="true" cascade="all">
      <key column="PublicacionId" />
      <one-to-many class="Reaccion" />
    </bag>
    <bag name="Notificaciones" inverse="true" cascade="all">
      <key column="OrigenPublicacionId" />
      <one-to-many class="Notificacion" />
    </bag>
  </class>
</hibernate-mapping>
