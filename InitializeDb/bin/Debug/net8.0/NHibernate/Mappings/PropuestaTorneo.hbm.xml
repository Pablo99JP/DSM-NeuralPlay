<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="PropuestaTorneo" table="PropuestaTorneo">
    <id name="IdPropuesta" column="IdPropuesta" type="long">
      <generator class="hilo">
        <param name="table">NHibernateUniqueKey</param>
        <param name="column">NextHigh</param>
        <param name="max_lo">100</param>
      </generator>
    </id>
    <property name="FechaPropuesta" column="FechaPropuesta" type="datetime" not-null="true" />
    <property name="Estado" column="Estado" type="ApplicationCore.Domain.Enums.EstadoSolicitud, ApplicationCore" not-null="true" />
    
    <many-to-one name="Equipo" column="EquipoId" class="Equipo" not-null="true" />
    <many-to-one name="Torneo" column="TorneoId" class="Torneo" not-null="true" />
    <many-to-one name="PropuestoPor" column="PropuestoPorId" class="Usuario" not-null="true" />
    <bag name="Votos" inverse="true" cascade="all">
      <key column="PropuestaId" />
      <one-to-many class="VotoTorneo" />
    </bag>
    <bag name="Notificaciones" inverse="true" cascade="all">
      <key column="OrigenPropuestaId" />
      <one-to-many class="Notificacion" />
    </bag>
  </class>
</hibernate-mapping>
